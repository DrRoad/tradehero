<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/btn_linkedin_color_light" android:startColor="@color/btn_linkedin_color_dark"/>

            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/btn_linkedin_color_light" android:startColor="@color/btn_linkedin_color_dark"/>

            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/btn_linkedin_color_light" android:startColor="@color/btn_linkedin_color_light"/>

            <corners android:radius="4dp"/>
        </shape>
    </item>


</selector>