<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_authentication_login_color_disabled"/>
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_linkedin_color_dark"/>
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/btn_authentication_login_color_light"/>
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>
  </item>

</selector>