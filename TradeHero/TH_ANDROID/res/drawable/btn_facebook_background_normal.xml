<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape>
      <gradient
          android:angle="270"
          android:endColor="@color/btn_facebook_color_end"
          android:startColor="@color/btn_facebook_color_start"/>
      <corners android:radius="@dimen/authentication_button_radius" />
      <stroke android:width="1dp" android:color="@color/btn_facebook_color_end"/>
    </shape>
  </item>
  <item android:top="1dp" android:left="1dp" android:right="1dp">
    <shape android:shape="rectangle">
      <gradient android:angle="-90"
        android:centerColor="#00FFffff"
        android:centerY="0.05"
        android:endColor="#00FFFFFF"
        android:startColor="#50FFFFFF"
        android:type="linear"
        />
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>
  </item>
  <item android:top="1dp" android:left="1dp" android:bottom="1dp">
    <shape android:shape="rectangle" android:innerRadius="2dp">
      <gradient android:angle="180"
          android:centerColor="#00FFffff"
          android:centerX="0.01"
          android:endColor="#00FFFFFF"
          android:startColor="#50FFffff"
          />
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>

  </item>
  <item android:top="1dp" android:left="1dp" android:bottom="1dp">
    <shape android:shape="rectangle" android:innerRadius="2dp">
      <gradient android:angle="360"
          android:centerColor="#00FFffff"
          android:centerX="0.01"
          android:endColor="#00FFFFFF"
          android:startColor="#50FFffff"
          />
      <corners android:radius="@dimen/authentication_button_radius"/>
    </shape>

  </item>
</layer-list>