<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:bottom="-1dp">
    <shape>
      <stroke android:width="1dp" android:color="@color/edittext_border"/>
      <corners android:topLeftRadius="@dimen/leaderboard_buttonlist_radius"
          android:topRightRadius="@dimen/leaderboard_buttonlist_radius"/>
      <gradient android:startColor="@color/leaderboard_buttonlist_gradient_start_color"
          android:endColor="@color/leaderboard_buttonlist_gradient_end_color"
          android:angle="270"/>
    </shape>
  </item>
  <item android:top="1dp" android:left="1dp" android:right="1dp">
    <shape>
      <solid android:color="@android:color/transparent"/>
      <padding android:top="@dimen/leaderboard_button_border_padding"
          android:right="@dimen/leaderboard_button_border_padding"
          android:left="@dimen/leaderboard_button_border_padding"
          android:bottom="@dimen/leaderboard_button_border_padding"/>
    </shape>
  </item>
</layer-list>