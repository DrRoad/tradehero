<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_focused="true" android:state_enabled="true">
    <shape>
      <solid android:color="@color/white"/>
      <corners android:radius="@dimen/textbox_light_background_radius"/>
      <stroke android:width="0.5dp" android:color="@color/tradehero_blue"/>
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:angle="90"
          android:endColor="@color/textbox_light_background_color"
          android:startColor="@color/white"/>
      <corners android:radius="@dimen/textbox_light_background_radius"/>
      <stroke android:width="0.5dp" android:color="@color/textbox_border_color_light"/>
    </shape>
  </item>
</selector>