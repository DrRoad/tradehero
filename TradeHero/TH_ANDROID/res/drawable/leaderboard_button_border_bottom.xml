<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape>
      <stroke android:width="@dimen/leaderboard_border_width" android:color="@color/edittext_border"/>
      <corners android:bottomLeftRadius="@dimen/leaderboard_buttonlist_radius"
          android:bottomRightRadius="@dimen/leaderboard_buttonlist_radius"/>
      <gradient android:startColor="@color/leaderboard_buttonlist_gradient_start_color"
          android:endColor="@color/leaderboard_buttonlist_gradient_end_color"
          android:angle="270"/>
    </shape>
  </item>
  <item android:bottom="@dimen/leaderboard_border_width" android:left="@dimen/leaderboard_border_width" android:right="@dimen/leaderboard_border_width">
    <shape>
      <solid android:color="@android:color/transparent"/>
      <padding android:top="@dimen/leaderboard_button_border_padding"
          android:right="@dimen/leaderboard_button_border_padding"
          android:left="@dimen/leaderboard_button_border_padding"
          android:bottom="@dimen/leaderboard_button_border_padding"/>
    </shape>
  </item>

</layer-list>