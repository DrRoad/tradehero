<?xml version="1.0" encoding="utf-8"?>
<resources>

  <color name="text_primary">#ff1f1f1f</color>
  <color name="text_secondary">#ff888888</color>
  <color name="text_primary_inverse">#fff4f4f4</color>
  <color name="text_secondary_inverse">#ffdbdbdb</color>
  <color name="text_primary_accented">@color/tradehero_blue</color>
  <color name="text_secondary_accented">#ff499bfb</color>


  <style name="TH.TextPrimary" parent="TH">
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <style name="TH.TextSecondary" parent="TH">
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- Primary Text Styles -->
  <style name="TH.Display4" parent="TH.TextSecondary">
    <item name="android:textSize">@dimen/text_display4</item>
  </style>

  <style name="TH.Display3" parent="TH.TextSecondary">
    <item name="android:textSize">@dimen/text_display3</item>
  </style>

  <style name="TH.Display2" parent="TH.TextSecondary">
    <item name="android:textSize">@dimen/text_display2</item>
  </style>

  <style name="TH.Display1" parent="TH.TextSecondary">
    <item name="android:textSize">@dimen/text_display1</item>
  </style>

  <style name="TH.Headline" parent="TH.TextPrimary">
    <item name="android:textSize">@dimen/text_headline</item>
    <item name="android:lineSpacingExtra">5sp</item>
  </style>

  <style name="TH.Title" parent="TH.TextPrimary">
    <item name="android:textSize">@dimen/text_title</item>
  </style>

  <style name="TH.Subhead" parent="TH.TextPrimary">
    <item name="android:textSize">@dimen/text_subhead</item>
    <item name="android:lineSpacingExtra">4sp</item>
  </style>

  <style name="TH.Caption" parent="TH.TextSecondary">
    <item name="android:textSize">@dimen/text_caption</item>
    <item name="android:lineSpacingExtra">3sp</item>
  </style>

  <style name="TH.Body" parent="TH.TextPrimary">
    <item name="android:textSize">@dimen/text_body</item>
    <item name="android:lineSpacingExtra">3sp</item>
  </style>

  <style name="TH.Menu" parent="TH.Body">
  </style>

  <style name="TH.Button" parent="TH.Body">
    <item name="android:textAllCaps">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:minWidth">@dimen/button_min_width</item>
  </style>

  <style name="TH.Button.Small" parent="TH.Button">
    <item name="android:textSize">@dimen/text_caption</item>
  </style>

  <!-- Inverses -->
  <style name="TH.Display4.Inverse" parent="TH.Display4">
    <item name="android:textColor">@color/text_secondary_inverse</item>
  </style>

  <style name="TH.Display3.Inverse" parent="TH.Display3">
    <item name="android:textColor">@color/text_secondary_inverse</item>
  </style>

  <style name="TH.Display2.Inverse" parent="TH.Display2">
    <item name="android:textColor">@color/text_secondary_inverse</item>
  </style>

  <style name="TH.Display1.Inverse" parent="TH.Display1">
    <item name="android:textColor">@color/text_secondary_inverse</item>
  </style>

  <style name="TH.Headline.Inverse" parent="TH.Headline">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Title.Inverse" parent="TH.Title">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Subhead.Inverse" parent="TH.Subhead">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Caption.Inverse" parent="TH.Caption">
    <item name="android:textColor">@color/text_secondary_inverse</item>
  </style>

  <style name="TH.Body.Inverse" parent="TH.Body">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Menu.Inverse" parent="TH.Menu">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Button.Inverse" parent="TH.Button">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="TH.Button.Inverse.Small" parent="TH.Button.Small">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <!-- Accented Styles -->
  <style name="TH.Display4.Accented" parent="TH.Display4">
    <item name="android:textColor">@color/text_secondary_accented</item>
  </style>

  <style name="TH.Display3.Accented" parent="TH.Display3">
    <item name="android:textColor">@color/text_secondary_accented</item>
  </style>

  <style name="TH.Display2.Accented" parent="TH.Display2">
    <item name="android:textColor">@color/text_secondary_accented</item>
  </style>

  <style name="TH.Display1.Accented" parent="TH.Display1">
    <item name="android:textColor">@color/text_secondary_accented</item>
  </style>

  <style name="TH.Headline.Accented" parent="TH.Headline">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Title.Accented" parent="TH.Title">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Subhead.Accented" parent="TH.Subhead">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Caption.Accented" parent="TH.Caption">
    <item name="android:textColor">@color/text_secondary_accented</item>
  </style>

  <style name="TH.Body.Accented" parent="TH.Body">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Menu.Accented" parent="TH.Menu">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Button.Accented" parent="TH.Button">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <style name="TH.Button.Small.Accented" parent="TH.Button.Small">
    <item name="android:textColor">@color/text_primary_accented</item>
  </style>

  <!--  -->


  <style name="TH.InfoKey" parent="TH.Body">
    <item name="android:padding">2dp</item>
    <item name="android:textColor">@color/info_key</item>
  </style>

  <style name="TH.InfoValue" parent="TH.Body">
    <item name="android:padding">2dp</item>
  </style>

  <style name="TutorialTextContent" parent="TH.Body.Inverse">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="TutorialTextHeader" parent="TH.Subhead.Inverse">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textStyle">bold</item>
    <item name="android:drawableLeft">@drawable/icn_info_normal_small</item>
  </style>

  <style name="TH.Time_Text" parent="TH.Caption">
  </style>

  <style name="TH.Time_Text.Header" parent="TH.Title.Inverse">
  </style>

  <style name="TH.Time_Text.Header.Inverse" parent="TH.Title">
  </style>

  <style name="TH.Loading_Error_Text" parent="TH.Subhead">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="TH.Loading_Empty_Text"
      parent="@style/TH.Loading_Error_Text">
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="TH.UserNameTitle" parent="TH.Subhead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">middle</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="TH.UserROI" parent="TH.Body">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.UserROI.Inverse" parent="TH.Body">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="UserProfile.Contained.Value" parent="TH.Title.Accented">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="UserProfile.Contained.Header" parent="TH.Caption.Accented">
    <item name="android:drawablePadding">3dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.NumericalAnimatedTextView" parent="TH.Title">
    <item name="android:gravity">center</item>
    <item name="animatedDuration">2500</item>
    <item name="animatedInterval">50</item>
    <item name="showAnimation">true</item>
  </style>

  <style name="TH.DiscussionTextBox" parent="TH.Body">
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:background">@drawable/textbox_light_background</item>
    <item name="android:padding">@dimen/discussion_action_buttons_drawable_padding</item>
    <item name="android:inputType">text|textMultiLine|textImeMultiLine|textCapSentences|textAutoCorrect|textAutoComplete</item>
  </style>

  <style name="TradeHero_Settings_About_Text" parent="TH.Title">
    <item name="android:textColor">@color/settings_about_font_colour</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@null</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:gravity">center</item>
  </style>

</resources>