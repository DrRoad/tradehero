<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Leaderboard_ActionButton">
    <item name="android:background">@drawable/leaderboard_user_item_action_button</item>
    <item name="android:paddingTop">@dimen/leaderboard_user_item_action_button_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/leaderboard_user_item_action_button_vertical_padding</item>
    <item name="android:paddingLeft">@dimen/leaderboard_user_item_action_button_horizontal_padding</item>
    <item name="android:paddingRight">@dimen/leaderboard_user_item_action_button_horizontal_padding</item>
    <item name="android:layout_marginRight">@dimen/leaderboard_user_item_action_button_margin</item>
    <item name="android:layout_marginLeft">@dimen/leaderboard_user_item_action_button_margin</item>

    <item name="android:textSize">@dimen/text_body</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/leaderboard_user_item_text_color</item>
  </style>

  <style name="Leaderboard_ActionButton_Blue" parent="Leaderboard_ActionButton">
    <item name="android:background">@drawable/leaderboard_user_item_follow_action_button</item>
    <item name="android:paddingLeft">@dimen/leaderboard_user_item_action_follow_button_horizontal_padding</item>
    <item name="android:paddingRight">@dimen/leaderboard_user_item_action_follow_button_horizontal_padding</item>

    <item name="android:textColor">@color/white</item>
  </style>

  <dimen name="leaderboard_user_item_action_button_horizontal_padding">10dp</dimen>
  <dimen name="leaderboard_user_item_action_follow_button_horizontal_padding">20dp</dimen>
  <dimen name="leaderboard_user_item_action_button_corner_radius">1dp</dimen>
  <dimen name="leaderboard_user_item_action_button_border_width">1dp</dimen>

</resources>