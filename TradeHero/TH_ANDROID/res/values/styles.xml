<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <style name="TradeHero" parent="Theme.Sherlock.Light">
    <item name="android:windowActionBar">true</item>
    <item name="android:windowNoTitle">false</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:actionMenuTextColor">@color/actionbar_menu_text_color</item>
  </style>
  <style name="TradeHero.Settings" parent="TradeHero">
    <item name="android:actionBarStyle">@style/TradeHero.Dashboard.ActionBar</item>
    <item name="android:windowActionBarOverlay">false</item>
  </style>
  <style name="AppBaseTheme.NoActionBar" parent="TradeHero">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:background">@color/splash_background_solid</item>
  </style>

  <style name="TradeHero.Menu.ItemTextIcon" parent="TextAppearance.Sherlock.Light.SearchResult">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="TH"/>

  <style name="TH.Title">
    <item name="android:textColor">@color/title</item>
    <item name="android:padding">2dp</item>
  </style>

  <style name="TH.SmallTitle" parent="TH.Title">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TH.Value">
    <item name="android:textColor">@color/black</item>
    <item name="android:padding">2dp</item>
  </style>

  <style name="TH.SmallValue" parent="TH.Value">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TH.Btn_Price_Bar_Base">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.Btn_Price_Bar" parent="TH.Btn_Price_Bar_Base">
    <item name="android:background">@color/price_bar_bg</item>
    <item name="android:textColor">@color/price_bar_text_default</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="TH.Btn_Price_Bar_Middle" parent="TH.Btn_Price_Bar_Base">
    <!--item name="android:background">@drawable/price_bar_bg_color</item>
    <item name="android:textColor">@drawable/price_bar_text_color</item-->
  </style>

  <style name="TH.Btn_Price_Bar_Left" parent="TH.Btn_Price_Bar_Base">
    <!--item name="android:background">@drawable/trend_price_bar_button_left</item>
    <item name="android:textColor">@drawable/price_bar_text_color</item-->
  </style>

  <style name="TH.Btn_Price_Bar_Right" parent="TH.Btn_Price_Bar_Base">
    <!--item name="android:background">@drawable/trend_price_bar_button_right</item>
    <item name="android:textColor">@drawable/price_bar_text_color</item-->
  </style>

  <style name="TH.Btn_Price_Bar_Separator">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/price_bar_text_default</item>
  </style>

  <style name="TradeHero.Authentication" parent="TradeHero">
    <item name="android:editTextStyle">@style/TradeHero.Authentication.EditText</item>
    <item name="android:paddingTop">80dip</item>
    <item name="android:paddingRight">30dip</item>
    <item name="android:paddingLeft">30dip</item>
    <item name="android:paddingBottom">10dip</item>
  </style>

  <style name="AppBaseTheme.Welcome" parent="TradeHero">
    <item name="android:paddingTop">65dip</item>
    <item name="android:paddingLeft">30dip</item>
    <item name="android:paddingRight">30dip</item>
    <item name="android:background">@color/authentication_background_color</item>
  </style>

  <style name="AppBaseTheme.Welcome.SignIn" parent="@android:style/Widget.Button">
    <item name="android:layout_marginTop">0dip</item>
  </style>

  <style name="TradeHero.ButtonTextShadow">
    <item name="android:shadowRadius">5.6</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">-1</item>
    <item name="android:shadowColor">#000000</item>
  </style>

  <style name="TradeHero.Dashboard" parent="TradeHero">
    <item name="android:windowActionBarOverlay">false</item>
    <item name="android:actionBarStyle">@style/TradeHero.Dashboard.ActionBar</item>
    <item name="android:actionMenuTextAppearance">@style/TradeHero.Dashboard.ActionBar.Menu</item>
  </style>

  <style name="TradeHero.Authentication.EditText" parent="@android:style/Widget.EditText">
    <item name="android:ems">10</item>
    <item name="android:paddingRight">5dip</item>
    <item name="android:paddingTop">5dip</item>
    <item name="android:paddingBottom">5dip</item>
    <item name="android:paddingLeft">6dip</item>
    <item name="android:drawablePadding">2dip</item>
    <item name="android:textColor">@color/black</item>
    <!--<item name="android:background">@drawable/authentication_sign_up_textbox</item>-->
  </style>


  <style name="TradeHero.Dashboard.ActionBar" parent="Widget.Sherlock.ActionBar">
    <item name="android:background">@drawable/topbarrectangle_default</item>
    <item name="android:titleTextStyle">@style/TradeHero.Dashboard.ActionBar.TitleTextStyle</item>
    <item name="android:actionMenuTextColor">@style/TradeHero.Dashboard.ActionBar.MenuTextColor</item>
  </style>

  <style name="TradeHero.Dashboard.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="TradeHero.Dashboard.ActionBar.Menu" parent="TextAppearance.Sherlock.Widget.ActionBar.Menu">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="TradeHero.Dashboard.ActionBar.MenuTextColor">
    <item name="android:color">@color/white</item>
  </style>

  <style name="TH.ListItem">
    <item name="android:background">@drawable/list_item_bg</item>
    <item name="android:minHeight">48dp</item>
  </style>

  <style name="TutorialTextContent">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="TutorialTextHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">@dimen/text_header</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:drawableLeft">@drawable/icn_info_normal_small</item>
  </style>

  <style name="TH_VoteView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/timeline_action_buttons_horizontal_padding</item>
    <item name="android:layout_marginRight">@dimen/timeline_action_buttons_horizontal_padding</item>
    <item name="android:textColor">@drawable/timeline_action_button_text_color_xml</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.Btn_BuySell_Action">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/tab_scroll_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">middle</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>
  <style name="TH.Time_Text">
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">#777</item>
  </style>
</resources>