<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="UserProfile" parent="TradeHero">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="UserProfile.ValueContainer">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="UserProfile.Contained">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="UserProfile.Contained.Value">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:drawablePadding">@dimen/timeline_bottom_button_drawable_adjustment</item>
  </style>

  <style name="UserProfile.Contained.Header">
    <item name="android:textSize">12sp</item>
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:textStyle">normal</item>
  </style>

</resources>