<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="UserProfile" parent="TradeHero">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="UserProfile.BottomButtonBar">
    <item name="android:orientation">horizontal</item>
    <item name="android:gravity">bottom|center_horizontal</item>
    <item name="android:background">@drawable/basic_transparent_selector</item>
    <item name="android:minHeight">@dimen/clickable_element_min_dimen</item>
    <item name="android:addStatesFromChildren">true</item>
    <item name="android:paddingTop">@dimen/user_profile_bottom_button_bar_vertical_padding</item>
    <item name="android:paddingBottom">@dimen/user_profile_bottom_button_bar_vertical_padding</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="UserProfile.Contained">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/tradehero_blue</item>
  </style>

  <color name="user_profile_blue">@color/tradehero_blue</color>
  <dimen name="user_profile_button_margin">6dp</dimen>

  <integer name="user_profile_photo_max_edge_pixel">480</integer>
  <integer name="user_profile_photo_compress_quality">75</integer>

  <dimen name="user_profile_bottom_button_bar_vertical_padding">8dp</dimen>

</resources>