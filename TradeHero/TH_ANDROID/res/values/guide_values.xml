<?xml version="1.0" encoding="utf-8"?>
<resources>

  <color name="authentication_guide_bg_color">#1273D4</color>
  <dimen name="authentication_guide_circle_indicator_radius">4dp</dimen>
  <color name="authentication_guide_circle_page">#80FFFFFF</color>

  <style name="TH.GuideContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/margin_small</item>
    <item name="android:layout_marginRight">@dimen/margin_small</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="TH.Subhead.Guide">
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.Body.Guide">
    <item name="android:gravity">center_horizontal</item>
  </style>

</resources>