<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/position_top_view_3_1"
    >

  <ImageView
      android:id="@+id/gain_indicator"
      android:layout_width="@dimen/size_1"
      android:layout_height="@dimen/size_1"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_marginEnd="@dimen/margin_small"
      android:layout_weight="0"
      android:layout_gravity="center_vertical"
      android:src="@drawable/indicator_down"/>

  <ImageView
      android:id="@+id/stock_logo"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_gravity="center_vertical"
      android:scaleType="fitCenter"
      android:contentDescription="@null"
      tools:src="@drawable/superman_facebook"
      android:layout_weight="0"
      />

  <include
      layout="@layout/fx_flags"/>

  <TableLayout
      android:id="@+id/first_part"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/margin_small"
      android:layout_marginRight="@dimen/margin_small"
      >

    <TableRow>

      <TextView
          android:id="@+id/gain_loss_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/margin_xsmall"
          android:layout_marginEnd="@dimen/margin_xsmall"
          tools:text="Gain:"
          style="@style/TH.Subhead"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/gain_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_marginEnd="@dimen/margin_xsmall"
            tools:text="US$ 200"
            style="@style/TH.Subhead"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/gain_loss_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(+1.3%)"
            style="@style/TH.Caption"
            />

      </LinearLayout>

    </TableRow>

    <TableRow>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/margin_xsmall"
          android:layout_marginEnd="@dimen/margin_xsmall"
          android:text="@string/position_invested_header"
          style="@style/TH.Caption"
          />

      <TextView
          android:id="@+id/total_invested_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="US$ 2,500,000"
          style="@style/TH.Caption"
          />

    </TableRow>

    <TableRow
        android:id="@+id/share_count_row">

      <TextView
          android:id="@+id/share_count_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/margin_xsmall"
          android:layout_marginEnd="@dimen/margin_xsmall"
          tools:text="Units:"
          style="@style/TH.Caption"
          />

      <TextView
          android:id="@+id/share_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="100,000"
          style="@style/TH.Caption"
          />

    </TableRow>

  </TableLayout>

  <RelativeLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_weight="0"
      android:layout_marginRight="4dp"
      android:layout_marginEnd="4dp">

    <TextView
        android:id="@+id/btn_position_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        style="@style/TH.FX_CLOSE"
        android:text="@string/security_close"
        />

  </RelativeLayout>

  <ImageView
      android:id="@+id/hint_forward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|end"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      android:layout_weight="0"
      />

</merge>