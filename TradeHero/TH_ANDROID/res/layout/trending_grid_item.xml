<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="98dp" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/stock_bg_logo"
        android:layout_width="175dp"
        android:layout_height="98dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trending_grid_item_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:text=""
            android:textStyle="bold" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/stock_logo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/stock_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/exchange_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_logo"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exchange_symbol"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/profit_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:lines="1"
                android:text="" 
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/currency_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:lines="1"
                android:textColor="@color/black"
                android:text="" />

            <TextView
                android:id="@+id/last_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>