<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/basic_transparent_selector"
    android:gravity="center"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small"
    android:paddingRight="@dimen/margin_xsmall"
    android:paddingEnd="@dimen/margin_xsmall"
    tools:background="?attr/colorPrimary"
    >

    <ImageView
        android:id="@android:id/icon"
        style="@style/TH.LeftDrawerMenu.Icon"
        android:src="@drawable/icn_side_menu_inbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:padding="2dp"
        android:textSize="@dimen/text_caption"
        android:textColor="@color/white"
        android:background="@drawable/red_circle"
        android:visibility="gone"
        android:layout_toRightOf="@android:id/icon"
        android:layout_toEndOf="@android:id/icon"
        android:layout_alignParentTop="true"
        android:gravity="center"
        tools:visibility="visible"
        tools:text="20"
        />

</RelativeLayout>