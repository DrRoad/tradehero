<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.updatecenter.TitleTabView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="horizontal"
    style="@style/TH.TabStyle"

    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tab_title"
      android:layout_centerInParent="true"
      tools:text="stock name"
      android:textSize="@dimen/text_small"
      android:textColor="@color/tradehero_blue"
      />

  <TextView
      android:visibility="invisible"
      android:id="@+id/tab_title_number"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:contentDescription="@null"
      android:layout_toRightOf="@+id/tab_title"
      android:layout_above="@+id/tab_title"
      android:layout_marginBottom="-5dp"
      android:gravity="center"
      android:textSize="@dimen/text_xxsmall"
      android:background="@drawable/red_circle"
      android:textColor="@color/white"
      tools:text="33"
      />
</com.tradehero.th.fragments.updatecenter.TitleTabView>

