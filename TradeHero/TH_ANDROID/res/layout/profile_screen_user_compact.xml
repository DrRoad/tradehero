<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.widget.user.ProfileCompactView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <!-- layout_marginBottom: dirty trick to reserve background rounded corner radius-->

  <ImageView
      android:id="@+id/user_profile_compact_avatar"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="5dp"
      android:background="@drawable/layout_oval"
      android:padding="0.5dp"
      android:src="@drawable/avatar"
      android:contentDescription="@string/empty"/>

  <TextView
      android:id="@+id/txt_roi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_toRightOf="@id/user_profile_compact_avatar"
      android:textColor="@color/font_roi"
      android:textSize="18sp"
      android:textStyle="bold"
      android:shadowColor="@color/black"
      android:shadowDy="1"
      android:shadowRadius="3"
      />

    <!--Followers-->
    <LinearLayout
        android:id="@+id/user_profile_followers_count_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >

      <TextView
          android:id="@+id/user_profile_followers_count"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/white"
          android:text="8"
          android:textSize="20sp"
          android:textStyle="bold"
          android:drawableTop="@drawable/icn_followers"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:layout_marginTop="-5dip"
          android:text="@string/Followers"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="normal"/>
    </LinearLayout>

    <!--Heroes-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/user_profile_followers_count_wrapper">

      <TextView
          android:id="@+id/user_profile_heroes_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="bold"
          android:text="8"
          android:drawableTop="@drawable/icn_heroes"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-5dip"
          android:gravity="center_vertical"
          android:text="@string/Heroes"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="normal"/>
    </LinearLayout>
</com.tradehero.th.widget.user.ProfileCompactView>