<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/news_detail_title_placeholder"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        tools:src="@drawable/logo_about_bull"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_detail_title_layout_wrapper"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small">

      <TextView
          android:id="@+id/news_title_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="Company Name to be bought by private equity"
          style="@style/TH.Title"
          />

      <TextView
          android:id="@+id/discussion_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="1 hour ago"
          style="@style/TH.Caption"
          android:layout_marginTop="@dimen/margin_xsmall"
          android:layout_marginBottom="@dimen/margin_xsmall"
          />

    </LinearLayout>

  </FrameLayout>

</merge>