<?xml version="1.0" encoding="utf-8"?>

<merge>
  <com.tradehero.th.widget.VotePair
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/vote_pair"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_centerVertical="true"
      >

    <com.tradehero.th.widget.VoteUpView
        style="@style/TH_VoteView_big"
        android:id="@+id/timeline_action_button_vote_up"
        android:drawableLeft="@drawable/icn_upvote"
        android:drawablePadding="@dimen/common_margin_4"
        android:text="@integer/messages_initial_vote_count"
        tools:text="10"
        />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <com.tradehero.th.widget.VoteDownView
        style="@style/TH_VoteView_big"
        android:id="@+id/timeline_action_button_vote_down"
        android:drawableLeft="@drawable/icn_downvote"
        android:drawablePadding="@dimen/common_margin_4"
        android:text="@integer/messages_initial_vote_count"
        tools:text="2"
        android:visibility="gone"/>

  </com.tradehero.th.widget.VotePair>
</merge>