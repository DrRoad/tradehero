<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/basic_white_selector"
    >

  <ImageView
      android:id="@+id/follower_avatar"
      android:layout_width="@dimen/big_image_w_h"
      android:layout_height="@dimen/big_image_w_h"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:scaleType="centerCrop"
      android:contentDescription="@null"
      android:src="@drawable/superman_facebook"
      />

  <ImageButton
      android:id="@+id/follower_button"
      android:layout_width="@dimen/small_image_w_h"
      android:layout_height="@dimen/small_image_w_h"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/basic_blue_selector"
      android:padding="4dp"
      android:layout_margin="@dimen/margin_small"
      android:scaleType="centerInside"
      android:src="@drawable/ic_follow"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/follower_avatar"
      android:layout_toLeftOf="@id/follower_button"
      android:layout_toRightOf="@id/follower_avatar"
      android:layout_toStartOf="@id/follower_button"
      android:orientation="vertical"
      android:padding="@dimen/margin_xsmall"
      >

    <TextView
        android:id="@+id/follower_name"
        style="@style/TH.UserNameTitle"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Tho Nguyen"
        />

    <TextView
        android:id="@+id/follower_roi"
        style="@style/TH.UserROI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="36.73%"
        />

      <TextView
          android:id="@+id/follower_since"
          style="@style/TH.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:ellipsize="middle"
          tools:text="Following you since 20 July 2015"
          />

  </LinearLayout>


</RelativeLayout>