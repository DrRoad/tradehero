<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_medium"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_15"
        android:gravity="center"
        android:text="@string/onboard_exchange_title"
        style="@style/TH.Title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10"
        android:gravity="center"
        android:text="@string/onboard_exchange_summary1"
        style="@style/TH.Body"
        />

    <com.tradehero.th.fragments.market.ExchangeSpinner
        android:id="@+id/spinner_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownSelector="@drawable/basic_transparent_selector"
        style="@style/TH.Spinner"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10"
        android:gravity="center"
        android:text="@string/onboard_exchange_summary2"
        style="@style/TH.Body"
        />

    <Spinner
        android:id="@+id/spinner_sector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownSelector="@drawable/basic_transparent_selector"
        style="@style/TH.Spinner"/>

  </LinearLayout>

</ScrollView>
