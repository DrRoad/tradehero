<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_margin_15"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin_15"
      android:gravity="center"
      android:text="@string/tutorial_timeline_header"
      android:textSize="@dimen/text_large"
      android:textStyle="bold"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/market_on_board_exchange_sector_subtitle"
      android:lineSpacingMultiplier="1.2"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/market_on_board_exchange_interested"
      />

  <Spinner
      android:id="@+id/spinner_exchange"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/market_on_board_sector_interested"
      />

  <Spinner
      android:id="@+id/spinner_sector"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/market_on_board_country_from"
      />

  <Spinner
      android:id="@+id/spinner_country"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

</LinearLayout>