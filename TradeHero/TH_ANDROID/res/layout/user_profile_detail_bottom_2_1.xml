<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:baselineAligned="false"
      android:background="@drawable/user_profile_gradient_bottom_bg"
      >

    <LinearLayout
        android:id="@+id/user_profile_heroes_count_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/UserProfile.BottomButtonBar"
        >

      <TextView
          android:id="@+id/user_profile_heroes_count"
          style="@style/UserProfile.Contained.Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="32"
          android:gravity="center"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Heroes"
          android:text="@string/user_profile_count_heroes"
          style="@style/UserProfile.Contained.Header"
          android:drawableTop="@drawable/ic_profile_heroes"
          android:layout_marginLeft="@dimen/common_margin_4"
          android:gravity="center"
          />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_profile_followers_count_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/UserProfile.BottomButtonBar"
        >

      <TextView
          android:id="@+id/user_profile_followers_count"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          tools:text="299"
          style="@style/UserProfile.Contained.Value"
          android:gravity="center"
          />

      <TextView
          android:layout_height="wrap_content"
          tools:text="Followers"
          android:text="@string/user_profile_count_followers"
          android:layout_width="wrap_content"
          style="@style/UserProfile.Contained.Header"
          android:drawableTop="@drawable/ic_profile_followers"
          android:layout_marginLeft="@dimen/common_margin_4"
          android:gravity="center"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_profile_achievement_count_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/UserProfile.BottomButtonBar"
        >

      <TextView
          android:id="@+id/user_profile_achievement_count"
          style="@style/UserProfile.Contained.Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="132"
          android:gravity="center"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Achievements"
          android:gravity="center"
          android:text="@string/user_profile_achievements_count"
          style="@style/UserProfile.Contained.Header"
          android:drawableTop="@drawable/ic_profile_achievements"
          android:layout_marginLeft="@dimen/common_margin_4"
          />

    </LinearLayout>

  </LinearLayout>


</merge>