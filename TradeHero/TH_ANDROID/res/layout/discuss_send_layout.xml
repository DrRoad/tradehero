<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:background="@color/bg_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <RelativeLayout
      android:id="@+id/rlDiscussSelectButtons"
      android:layout_width="fill_parent"
      android:layout_height="48dp"
      android:gravity="center_vertical"
      android:background="@drawable/tab_menu_bg"
      android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/btnAt"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_at_xml"/>

    <Button
        android:id="@+id/btnSelectStock"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_toLeftOf="@id/btnAt"
        android:layout_marginRight="30dp"
        android:background="@drawable/icon_select_stock_xml"/>
  </RelativeLayout>

  <EditText
      android:id="@+id/edtDiscussionPostContent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textAppearance="?android:textAppearanceSmall"
      android:padding="5dp"
      android:gravity="top"
      android:maxLength="200"
      android:layout_above="@id/rlDiscussSelectButtons"
      android:background="@color/transparent"
      android:inputType="text|textImeMultiLine|textMultiLine|textCapSentences|textAutoCorrect|textAutoComplete"
      tools:text="">
    <requestFocus/>
  </EditText>

</RelativeLayout>

