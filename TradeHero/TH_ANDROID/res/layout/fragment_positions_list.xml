<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ViewStub
      android:id="@+id/position_list_header_stub"
      android:inflatedId="@+id/position_list_header_stub"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <com.tradehero.th.fragments.position.PositionListView
      xmlns:ptr="http://schemas.android.com/apk/res-auto"
      android:id="@+id/pull_to_refresh_position_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      ptr:ptrMode="pullFromStart"
      ptr:ptrScrollingWhileRefreshingEnabled="true"
      android:fadingEdge="none"
      android:scrollbars="none"
      />
    <!--android:layout_below="@+id/position_list_header_stub"-->
  <com.tradehero.th.widget.list.ExpandingListView
      android:id="@+id/position_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:visibility="gone"
      />

  <TextView
      style="@style/TH.Loading_Error_Text"
      android:id="@+id/error"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_centerInParent="true"
      android:text="@string/message_fetch_error"
      android:visibility="gone"/>
</LinearLayout>

  <ProgressBar
      android:id="@android:id/progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="visible"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      />

</FrameLayout>