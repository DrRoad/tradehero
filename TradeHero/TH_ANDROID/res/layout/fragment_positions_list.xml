<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ViewStub
      android:id="@+id/position_list_header_stub"
      android:inflatedId="@+id/position_list_portfolio_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <com.tradehero.th.fragments.position.PositionListView
      xmlns:ptr="http://schemas.android.com/apk/res-auto"
      android:id="@+id/pull_to_refresh_position_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      ptr:ptrMode="pullDownFromTop"
      />

  <com.tradehero.th.widget.list.ExpandingListView
      android:id="@+id/position_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      />
</LinearLayout>