<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.widget.position.partial.PositionPartialBottomOpenView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/expanding_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TableLayout
            android:id="@+id/position_value_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >

        <TableRow
                android:id="@+id/unrealised_pl_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/unrealised_pl_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_unrealised_pl_header"
                    />

            <TextView
                    android:id="@+id/unrealised_pl_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

        <TableRow
                android:id="@+id/realised_pl_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/realised_pl_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_realised_pl_header"
                    />

            <TextView
                    android:id="@+id/realised_pl_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

        <TableRow
                android:id="@+id/total_invested_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/total_invested_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_total_invested_header"
                    />

            <TextView
                    android:id="@+id/total_invested_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

        <TableRow
                android:id="@+id/market_value_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/market_value_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_market_value_header"
                    />

            <TextView
                    android:id="@+id/market_value_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

        <TableRow
                android:id="@+id/quantity_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/quantity_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_quantity_header"
                    />

            <TextView
                    android:id="@+id/quantity_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

        <TableRow
                android:id="@+id/average_price_value_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/average_price_header"
                    style="@style/TH.SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/position_average_price_header"
                    />

            <TextView
                    android:id="@+id/average_price_value"
                    style="@style/TH.SmallValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </TableRow>

    </TableLayout>

    <include layout="@layout/position_partial_shortcut_buttons"/>

</com.tradehero.th.widget.position.partial.PositionPartialBottomOpenView>