<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.common.widget.BetterViewAnimator
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderboard_mark_user_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    >

  <ProgressBar
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      tools:alpha="0.2"
      />

  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/swipe_container"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      >

    <com.tradehero.common.widget.THListView
        android:id="@+id/leaderboard_mark_user_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dashboard_tabhost_height"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="1dip"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:smoothScrollbar="true"
        android:clipToPadding="false"
        android:listSelector="@color/transparent"
        tools:background="@color/red"
        />

  </android.support.v4.widget.SwipeRefreshLayout>

</com.tradehero.common.widget.BetterViewAnimator>