<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/listview_item_selector"
    android:id="@+id/llItemAll"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/imgSecurityTLUserHeader"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:background="@drawable/default_image"/>

  <LinearLayout
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_width="fill_parent">
    <TextView
        android:id="@+id/tvUserTLTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:text="刚刚"
        />

    <LinearLayout
        android:id="@+id/llUserTLNoTrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <com.tradehero.th.widget.MarkdownTextView
          android:id="@+id/tvUserTLContent"
          android:layout_below="@id/tvUserTLTimeStamp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dip"
          android:textColorLink="@color/timeline_item_link"
          android:textColor="@color/timeline_item"
          android:textSize="@dimen/text_small"
          android:textStyle="normal"
          tools:text="Hello world!"
          android:maxLines="3"
          />
    </LinearLayout>


    <include
        android:layout_marginTop="10dp"
        android:id="@+id/includeTLOperater"
        layout="@layout/timeline_operater_line"
        />
  </LinearLayout>

</LinearLayout>

