<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dashboard_padding"
    android:paddingRight="@dimen/dashboard_padding"
    android:paddingTop="@dimen/dashboard_padding"
    >

  <ListView android:id="@+id/leaderboard_most_skilled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

  <ListView android:id="@+id/leaderboard_time_period"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
      android:layout_marginTop="5dip"
      android:layout_marginBottom="5dip"
    />

  <ListView android:id="@+id/leaderboard_sector"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      />
</LinearLayout>