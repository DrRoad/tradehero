<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

  <include layout="@layout/custom_head_layout"/>

  <ScrollView
      android:layout_height="fill_parent"
      android:layout_width="fill_parent">


    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">


      <include layout="@layout/user_main_page_header"/>


      <View
          android:layout_width="fill_parent"
          android:layout_height="20dp"/>
      <RelativeLayout
          android:id="@+id/rlMeDynamic"
          android:background="@drawable/listview_item_selector"
          android:layout_width="fill_parent"
          android:layout_height="@dimen/more_bang_item_height">
        <ImageView
            android:id="@+id/img_me_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_me_dynamic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_me_dynamic"
            android:textSize="@dimen/more_bang_text_size"
            android:textColor="@dimen/text_default_color"
            android:text="@string/my_dynamic"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/right_arrow_margin"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/separate_line_color"
            android:layout_toRightOf="@id/img_me_dynamic"
            android:layout_alignParentBottom="true"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlMeMessageCenter"
          android:background="@drawable/listview_item_selector"
          android:layout_width="fill_parent"
          android:layout_height="@dimen/more_bang_item_height">
        <ImageView
            android:id="@+id/img_me_message_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_me_message"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_me_message_center"
            android:textSize="@dimen/more_bang_text_size"
            android:textColor="@dimen/text_default_color"
            android:text="@string/my_message_center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/right_arrow_margin"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/separate_line_color"
            android:layout_toRightOf="@id/img_me_message_center"
            android:layout_alignParentBottom="true"/>
      </RelativeLayout>
      <View
          android:layout_width="fill_parent"
          android:layout_height="20dp"/>

      <RelativeLayout
          android:id="@+id/rlMeInviteFriends"
          android:background="@drawable/listview_item_selector"
          android:layout_width="fill_parent"
          android:layout_height="@dimen/more_bang_item_height">
        <ImageView
            android:id="@+id/img_me_invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_me_invite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_me_invite_friends"
            android:textSize="@dimen/more_bang_text_size"
            android:textColor="@dimen/text_default_color"
            android:text="@string/my_invite_friends"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/right_arrow_margin"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/separate_line_color"
            android:layout_toRightOf="@id/img_me_invite_friends"
            android:layout_alignParentBottom="true"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlMeSetting"
          android:background="@drawable/listview_item_selector"
          android:layout_width="fill_parent"
          android:layout_height="@dimen/more_bang_item_height">
        <ImageView
            android:id="@+id/img_me_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_me_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_me_setting"
            android:textSize="@dimen/more_bang_text_size"
            android:textColor="@dimen/text_default_color"
            android:text="@string/my_setting"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/right_arrow_margin"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/separate_line_color"
            android:layout_toRightOf="@id/img_me_setting"
            android:layout_alignParentBottom="true"/>
      </RelativeLayout>

      <View
          android:id="@+id/viewEndpoint"
          android:layout_width="fill_parent"
          android:layout_height="30dp">
      </View>
    </LinearLayout>


  </ScrollView>


</LinearLayout>



