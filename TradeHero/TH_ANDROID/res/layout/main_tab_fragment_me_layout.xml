<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_main_indicator_height"
        android:background="@color/tab_head_bg"
        android:gravity="center"
        android:text="@string/tab_main_me"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/user_main_page_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#f0f0f0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_usa_stock"
                        android:textColor="#686868"
                        android:textSize="12sp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="#f0f0f0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/nasdaq_open_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="27dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/new_flag"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/open_account_nasdq_title"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/open_account_nasdq_detail"
                                android:textColor="#99969a"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f0f0f0"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="27dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/new_flag"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/trade_nasdq_title"
                                android:textSize="18sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/trade_nasdq_detail"
                                android:textColor="#99969a"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/security_open_account"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/security_open_account_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_dynamic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/security_open_account_icon"
                    android:text="A股开户"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/security_open_account_icon"
                    android:background="@color/separate_line_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/security_firm_bargain"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/security_firm_bargain_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_dynamic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/security_firm_bargain_icon"
                    android:text="A股实盘交易"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/security_firm_bargain_icon"
                    android:background="@color/separate_line_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMeDynamic"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/img_me_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_dynamic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_me_dynamic"
                    android:text="@string/my_dynamic"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/img_me_dynamic"
                    android:background="@color/separate_line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMeMessageCenter"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/imageview_me_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageview_me_messages"
                    android:text="@string/my_message_center"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <TextView
                    android:id="@+id/textview_me_notification_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_bg_count"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"/>

            <RelativeLayout
                android:id="@+id/rlMeInviteFriends"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/img_me_invite_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_invite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_me_invite_friends"
                    android:text="@string/my_invite_friends"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/img_me_invite_friends"
                    android:background="@color/separate_line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMeSetting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/more_bang_item_height"
                android:background="@drawable/listview_item_selector">

                <ImageView
                    android:id="@+id/img_me_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/icon_me_setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_me_setting"
                    android:text="@string/my_setting"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/more_bang_text_size"/>

                <ImageView
                    android:id="@+id/imageview_me_new_version"
                    android:layout_width="46dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/right_arrow_margin"
                    android:background="@drawable/new_version"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



