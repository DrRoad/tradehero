<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_code_dialog_key"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/common_margin_10"
      android:gravity="center_horizontal"
      android:text="@string/ask_for_invite_title"
      android:textStyle="bold"
      android:textSize="@dimen/text_xlarge"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/common_margin_10"
      android:gravity="center_horizontal"
      android:text="@string/ask_for_invite_summary1"
      android:textSize="@dimen/text_small"
      android:textColor="@color/price_bar_bg_selected"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin_20"
      android:gravity="center_horizontal"
      android:text="@string/ask_for_invite_summary2"
      android:textSize="@dimen/text_large"
      android:textStyle="bold"
      android:textColor="@color/black"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"/>

  <Button
      android:id="@+id/btn_invite"
      android:layout_height="@dimen/medium_logo_w_h"
      android:layout_width="match_parent"
      android:text="@string/ask_for_invite"
      android:textSize="@dimen/text_large"
      android:textColor="@color/button_blue"
      android:textStyle="bold"
      android:background="@drawable/basic_white_selector"/>

</LinearLayout>