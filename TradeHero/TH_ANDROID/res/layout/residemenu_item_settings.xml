<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.settings.SettingsResideMenuItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_xsmall"
    android:paddingTop="@dimen/margin_xsmall"
    tools:background="@color/black">

    <ImageView
        android:contentDescription="@null"
        style="@style/TH.ResideMenuSmall.Icon"
        android:src="@drawable/icn_menu_settings"
        tools:background="@color/red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xsmall"
        style="@style/TH.ResideMenuSmall.Text"
        android:text="@string/dashboard_menu_settings" />

    <View
        android:id="@+id/unread_icon"
        android:layout_width="@dimen/dashboard_red_dot_dimen"
        android:layout_height="@dimen/dashboard_red_dot_dimen"
        android:layout_marginLeft="@dimen/margin_xsmall"
        android:background="@drawable/red_circle" />
</com.tradehero.th.fragments.settings.SettingsResideMenuItem>