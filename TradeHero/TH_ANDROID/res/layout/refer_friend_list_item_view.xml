<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.settings.UserFriendDTOView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/refer_friend_item_background"
    android:paddingLeft="@dimen/invite_friend_padding_left"
    android:paddingRight="@dimen/invite_friend_padding_right"
    android:paddingTop="@dimen/invite_friend_padding_top"
    android:paddingBottom="@dimen/invite_friend_padding_bottom"
    >

  <ImageView
      android:id="@+id/user_friend_avatar"
      android:layout_width="@dimen/big_avatar_w_h"
      android:layout_height="@dimen/big_avatar_w_h"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/layout_oval_gray"
      android:padding="1dp"
      android:layout_marginRight="10dp"
      tools:src="@drawable/avatar"
      android:contentDescription="@null"/>

  <TextView
      android:id="@+id/user_friend_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/user_friend_avatar"
      android:textStyle="bold"
      android:maxLines="1"
      android:layout_alignParentTop="true"
      tools:text="Barack Obama"
      />

  <TextView
      android:id="@+id/user_friend_source_facebook"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:layout_below="@id/user_friend_name"
      android:layout_toRightOf="@id/user_friend_avatar"
      android:layout_alignParentBottom="true"
      android:drawablePadding="@dimen/refer_friend_source_drawable_padding"
      android:gravity="center_vertical"
      android:textSize="@dimen/text_xsmall"
      android:text="@string/facebook"
      android:visibility="invisible"
      />

  <TextView
      android:id="@+id/user_friend_source_linkedin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:layout_below="@id/user_friend_name"
      android:layout_toRightOf="@id/user_friend_avatar"
      android:layout_alignParentBottom="true"
      android:drawablePadding="@dimen/refer_friend_source_drawable_padding"
      android:gravity="center_vertical"
      android:textSize="@dimen/text_xsmall"
      android:text="@string/linkedin"
      android:visibility="invisible"
      />

  <TextView
      android:id="@+id/user_friend_source_contact"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:layout_below="@id/user_friend_name"
      android:layout_toRightOf="@id/user_friend_avatar"
      android:layout_alignParentBottom="true"
      android:drawablePadding="@dimen/refer_friend_source_drawable_padding"
      android:gravity="center_vertical"
      android:textSize="@dimen/text_xsmall"
      android:text="@null"
      android:visibility="invisible"
      />

</com.tradehero.th.fragments.settings.UserFriendDTOView>