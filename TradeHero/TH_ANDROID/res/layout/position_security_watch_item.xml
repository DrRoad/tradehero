<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:padding="3dp"
    android:background="@drawable/listview_item_selector"
    >

  <LinearLayout
      android:layout_marginLeft="10dp"
      android:orientation="vertical"
      android:layout_alignParentLeft="true"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent">
    <TextView
        android:singleLine="true"
        android:maxLength="10"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSecurityName"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="京东"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSecurityExtraInfo"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:visibility="visible"
        android:text="1001人关注"/>
  </LinearLayout>

  <TextView
      android:layout_marginRight="15dp"
      android:gravity="center_vertical|right"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:text="+10%"
      android:id="@+id/tvSecurityRate"/>

  <TextView
      android:layout_marginRight="10dp"
      android:gravity="center_vertical"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/tvSecurityRate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="22.27"
      android:textSize="18sp"
      android:textColor="@color/black"
      android:id="@+id/tvSecurityPrice"/>

  <TextView
      android:layout_marginRight="2dp"
      android:gravity="center_vertical"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/tvSecurityPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="$"
      android:textSize="15sp"
      android:textColor="@color/text_gray_normal"
      android:id="@+id/tvSecurityCurrency"/>

</RelativeLayout>

