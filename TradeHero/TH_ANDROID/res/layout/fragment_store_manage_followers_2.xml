<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.v4.app.FragmentTabHost
      android:id="@android:id/tabhost"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

  </android.support.v4.app.FragmentTabHost>

  <!--<FrameLayout-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="match_parent"-->
      <!--android:id="@+id/fragment_content"-->
      <!--/>-->

  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_alignParentBottom="true"
      android:id="@+id/send_message_layout"
      android:background="#aaa"
      android:visibility="gone">



    <com.tradehero.common.widget.CenterImageTextButton
        android:id="@+id/send_message_broadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/message_center_broadcast_message_menu"
        android:drawableLeft="@drawable/icn_message_white"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/message_button_bg_selector"
        android:paddingBottom="5dp"
        />
    <!--android:background="@drawable/message_button_bg_selector"
    style="?android:borderlessButtonStyle"
    -->

    <com.tradehero.common.widget.CenterImageTextButton
        android:id="@+id/send_message_whisper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Send Whipser"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_weight="1"
        android:background="@drawable/message_button_bg_selector"
        />

  </LinearLayout>

</RelativeLayout>