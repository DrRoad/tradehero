<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.billing.StoreItemClickableView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TH.ListItem.Clickable"
  >

  <ImageView
      android:id="@+id/icon"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      tools:src="@drawable/credit_1"
      />

  <ImageView
      android:id="@+id/ic_hint_further"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      />

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/icon"
      android:layout_toEndOf="@id/icon"
      android:layout_toLeftOf="@id/ic_hint_further"
      android:layout_toStartOf="@id/ic_hint_further"
      android:layout_centerVertical="true"
      style="@style/TH.Subhead"
      tools:text="Manage Heroes"
    />

</com.tradehero.th.fragments.billing.StoreItemClickableView>