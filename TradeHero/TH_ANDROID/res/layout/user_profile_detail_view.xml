<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.timeline.UserProfileDetailView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_profile_detail_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/profile_screen_user_detail_top"
      android:layout_marginTop="@dimen/margin_small"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small">

      <ImageView
          android:id="@+id/user_profile_avatar"
          android:layout_width="@dimen/big_image_w_h"
          android:layout_height="@dimen/big_image_w_h"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginRight="@dimen/margin_small"
          android:layout_marginEnd="@dimen/margin_small"
          android:padding="0.5dp"
          tools:ignore="contentDescription"/>

      <ImageView
          android:id="@+id/user_profile_edit"
          android:layout_width="@dimen/medium_image_w_h"
          android:layout_height="@dimen/medium_image_w_h"
          android:scaleType="fitCenter"
          android:padding="8dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:background="@drawable/basic_transparent_selector"
          android:layout_marginTop="@dimen/margin_small"
          android:src="@drawable/ic_action_content_edit"
          android:visibility="gone"
          tools:ignore="contentDescription"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="@dimen/big_image_w_h"
          android:layout_toRightOf="@+id/user_profile_avatar"
          android:layout_toEndOf="@+id/user_profile_avatar"
          android:layout_gravity="center_vertical"
          android:gravity="center_vertical"
          android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_display_name"
            style="@style/TH.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/text_primary"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="1"
            tools:text="James Lai"/>

        <TextView
            style="@style/TH.Caption"
            android:id="@+id/user_last_trading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trading since 05 May 2015"/>

        <TextView
            style="@style/TH.Caption"
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="United States"/>

      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/user_profile_avatar"
          android:layout_marginTop="@dimen/margin_xsmall">

        <TextView
            style="@style/TH.Caption"
            android:id="@+id/user_th_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_toRightOf="@+id/net_worth"
            android:layout_toEndOf="@+id/net_worth"
            android:textSize="20sp"
            android:text="256,000"/>

        <TextView
            style="@style/TH.Caption"
            android:id="@+id/net_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user_th_dollar"
            android:text="Net Worth: TH$"/>

        <TextView
            style="@style/TH.Caption"
            android:id="@+id/user_total_roi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:text="256,000"/>

        <TextView
            style="@style/TH.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/user_total_roi"
            android:layout_toStartOf="@+id/user_total_roi"
            android:layout_alignBaseline="@+id/user_total_roi"
            android:text="Total ROI"/>


      </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/grey"
        tools:ignore="contentDescription"/>

    <include
        layout="@layout/user_profile_detail_bottom"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        tools:ignore="contentDescription"/>

  </LinearLayout>

</com.tradehero.th.fragments.timeline.UserProfileDetailView>
