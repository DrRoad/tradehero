<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/position_partial_bottom_closed"
    >

  <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/realised_pl_value_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/size_15"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        style="@style/TH.InfoKey"
        tools:text="Profit"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/realised_pl_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.InfoValue"
          android:layout_marginRight="@dimen/margin_small"
          tools:text="US$ 819"
          />

      <TextView
          android:id="@+id/roi_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="end"
          style="@style/TH.Caption"
          tools:text="8.39%"
          />

    </LinearLayout>

  </TableRow>

  <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        style="@style/TH.InfoKey"
        android:text="@string/position_total_invested_header"
        android:gravity="end"
        />

    <TextView
        android:id="@+id/total_invested_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.InfoValue"
        tools:text="US$ 10,000"
        />

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="end"
        style="@style/TH.InfoKey"
        android:gravity="end"
        android:text="@string/position_average_price_header"
        />

    <TextView
        android:id="@+id/average_price_value"
        style="@style/TH.InfoValue"
        tools:text="US$ 41.8135"
        />

  </TableRow>

</merge>