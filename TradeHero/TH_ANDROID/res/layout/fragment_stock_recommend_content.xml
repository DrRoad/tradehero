<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/userClickableArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.makeramen.RoundedImageView
            android:id="@+id/userIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:corner_radius="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userIcon"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Name"/>
            <TextView
                android:id="@+id/userSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#828282"
                android:text="I am a stock expert."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userPositionClickableArea"
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <TextView
                android:id="@+id/roi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#d52625"
                android:textStyle="bold"
                android:text="100%"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#828282"
                android:text="总收益率"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#cecece"/>

    <LinearLayout
        android:id="@+id/articleClickableArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <com.tradehero.th.widget.MarkdownTextView
            android:id="@+id/articleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColorLink="@color/timeline_item_link"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="title" />

        <com.tradehero.th.widget.MarkdownTextView
            android:id="@+id/articleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColorLink="@color/timeline_item_link"
            android:textColor="#282828"
            android:textSize="16sp"
            android:text="content" />

        <TextView
            android:id="@+id/createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="#828282"
            android:text="3分钟前"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/attachmentImage"
        android:layout_width="fill_parent"
        android:layout_height="149dp"
        android:layout_gravity="center"
        android:src="@drawable/stock_learning_question_result_success" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="36dp">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/buttonRead"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:id="@+id/btnTLPraise"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:duplicateParentState="true"
                android:background="@drawable/icon_praise_normal"/>
            <TextView
                android:id="@+id/numberRead"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:textColor="#929292"
                android:text="赞"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttonPraised"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:id="@+id/btnTLPraiseDown"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:duplicateParentState="true"
                android:background="@drawable/icon_praise_down_normal"/>
            <TextView
                android:id="@+id/numberPraised"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:textColor="#929292"
                android:text="踩"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttonComment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:duplicateParentState="true"
                android:background="@drawable/icon_comment_xml"/>
            <TextView
                android:id="@+id/numberComment"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:textColor="#929292"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/itemSeparator"
        android:layout_width="wrap_content"
        android:layout_height="22px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#f0f0f0"/>
</LinearLayout>