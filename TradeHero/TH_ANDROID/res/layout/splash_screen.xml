<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/login_bg_1"
    android:padding="@dimen/margin_small">

  <LinearLayout
      android:layout_above="@+id/copyright"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/splash_logo"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_gravity="center"
        />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/copyright"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:orientation="vertical" android:paddingTop="20dp">

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/copyright_text_size"
        tools:text="1.6.1(100)"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/copyright_text_size"
        android:text="@string/settings_about_copyright"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="@dimen/copyright_text_size"
        android:text="@string/splash_copyright_2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/copyright_text_size"
        android:text="@string/splash_copyright_3"
        />

  </LinearLayout>

</RelativeLayout>