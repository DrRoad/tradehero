<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="32dp"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/competition_leaderboard_timer_time_left_1"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/competition_leaderboard_timer_time_left_2"
        android:textSize="10sp"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/value_day_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/na"
      android:textSize="20sp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/competition_leaderboard_timer_days"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      />

  <TextView
      android:id="@+id/value_hour_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/na"
      android:textSize="20sp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/competition_leaderboard_timer_time_separator"
      android:textSize="20sp"
      />

  <TextView
      android:id="@+id/value_minute_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/na"
      android:textSize="20sp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/competition_leaderboard_timer_time_separator"
      android:textSize="20sp"
      />

  <TextView
      android:id="@+id/value_second_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/na"
      android:textSize="20sp"
      />

</LinearLayout>