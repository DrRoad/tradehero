<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItemAll"
    android:background="@drawable/leaderboardlistview_item_selector">

    <TextView
        android:id="@+id/tvUserRank"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="#9a9a9a"
        android:text="888"
        android:gravity="center"
        android:textSize="18sp"/>

    <com.makeramen.RoundedImageView
        android:id="@+id/imgUserHead"
        android:layout_toRightOf="@id/tvUserRank"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        app:corner_radius="24dp"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/imgUserHead"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="一共五个字"
        android:layout_width="60dp"/>

    <RelativeLayout
        android:id="@+id/infoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgUserHead"
        android:layout_alignBottom="@id/imgUserHead"
        android:layout_toRightOf="@id/tvUserName"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tvROITitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#828282"
            android:text="收益率"
            android:gravity="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvROIValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/imgUserHead"
            android:textColor="#828282"
            android:text="100%"
            android:gravity="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvUserExtraTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:layout_toLeftOf="@id/tvROITitle"
            android:layout_alignParentBottom="true"
            android:text="Extra"
            android:gravity="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvUserExtraValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:layout_toLeftOf="@id/tvROIValue"
            android:layout_alignTop="@id/imgUserHead"
            android:text="value"
            android:gravity="center"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
      android:layout_width="fill_parent"
      android:layout_height="1px"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="20dp"
      android:background="#cecece"/>


</RelativeLayout>

