<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/share_dialog_bg"
              android:orientation="vertical">

    <EditText android:layout_width="match_parent" android:layout_height="120dp"
              android:id="@+id/edittext_intro_edit"
              android:layout_margin="10dp"
              android:maxLength="30"
              android:textColor="#000000"
              android:textSize="@dimen/text_large"
              android:hint="@string/competition_intro_hint"
              android:background="#ffffff"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/textview_intro_edit_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/text_large"
                android:textColor="#8b8b8b"
                android:background="@drawable/share_dialog_cancel_btn"/>
        <TextView
                android:id="@+id/textview_intro_edit_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:gravity="center"
                android:text="@string/ok"
                android:textSize="@dimen/text_large"
                android:textColor="#1789d5"
                android:background="@drawable/share_dialog_confirm_btn"/>
    </LinearLayout>

</LinearLayout>
