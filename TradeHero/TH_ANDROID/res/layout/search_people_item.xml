<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.trending.SearchPeopleItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tradehero.th"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/trending_grid_item_bg"
    >

    <com.tradehero.common.widget.ImageUrlView
        android:id="@+id/people_bg_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:contentDescription="background person image"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image"
        android:alpha="0.2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/people_logo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/sort_community" />

      <com.tradehero.common.widget.ImageUrlView
          android:id="@+id/user_photo"
          android:layout_width="@dimen/trending_people_search_image_size"
          android:layout_height="@dimen/trending_people_search_image_size"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_toRightOf="@id/people_logo"
          android:adjustViewBounds="true"
          android:contentDescription="@null"
          android:scaleType="fitXY"
          android:src="@drawable/avatar"/>

      <LinearLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/user_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:text="user name"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/profit_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text=">"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/stock_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:lines="1"
                    android:text="12.4%"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:lines="1"
                android:text="date"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</com.tradehero.th.fragments.trending.SearchPeopleItemView>