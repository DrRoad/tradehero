<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background_color"
    >

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical">

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


      <LinearLayout
          android:id="@+id/llMainTab"
          android:layout_width="fill_parent"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:layout_height="60dp"
          android:background="@drawable/tab_menu_bg"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:id="@+id/llTabTrade"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <ImageView
              android:id="@+id/imgTabMenu0"
              style="@style/navigation_icon"
              android:background="@drawable/tab_menu0"
              android:focusable="false"
              />
          <TextView
              android:id="@+id/tvTabMenu0"
              style="@style/navigation_text"
              android:text="@string/tab_main_trade"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTabStockGod"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <ImageView
              android:id="@+id/imgTabMenu1"
              style="@style/navigation_icon"
              android:background="@drawable/tab_menu0"
              />
          <TextView
              android:id="@+id/tvTabMenu1"
              style="@style/navigation_text"
              android:text="@string/tab_main_stock_god"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTabDiscovery"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <ImageView
              android:id="@+id/imgTabMenu2"
              style="@style/navigation_icon"
              android:background="@drawable/tab_menu0"
              />
          <TextView
              android:id="@+id/tvTabMenu2"
              style="@style/navigation_text"
              android:text="@string/tab_main_descovery"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTabCompetition"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <ImageView
              android:id="@+id/imgTabMenu3"
              style="@style/navigation_icon"
              android:background="@drawable/tab_menu0"
              />
          <TextView
              android:id="@+id/tvTabMenu3"
              style="@style/navigation_text"
              android:text="@string/tab_main_competition"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTabMe"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          <ImageView
              android:id="@+id/imgTabMenu4"
              style="@style/navigation_icon"
              android:background="@drawable/tab_menu0"
              />
          <TextView
              android:id="@+id/tvTabMenu4"
              style="@style/navigation_text"
              android:text="@string/tab_main_me"/>
        </LinearLayout>
      </LinearLayout>
    </android.support.v4.app.FragmentTabHost>
  </LinearLayout>

</RelativeLayout>


