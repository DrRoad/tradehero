<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlStockHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true"
    tools:background="@color/tradehero_blue"
    >

  <com.androidth.general.widget.OffOnViewSwitcher
      android:id="@+id/switch_stock_fx"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:layout_centerVertical="true"
      app:offText="@string/leaderboard_type_stocks"
      app:onText="@string/leaderboard_type_fx"
      />
</RelativeLayout>
