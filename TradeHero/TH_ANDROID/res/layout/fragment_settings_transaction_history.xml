<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_marginTop="@dimen/margin_small"
      android:layout_marginBottom="@dimen/margin_small"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="6">
    <TextView
        android:text="@string/settings_transaction_date"
        style="@style/TH.Subhead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />
    <TextView
        android:text="@string/settings_transaction_balance"
        style="@style/TH.Subhead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <TextView
        android:text="@string/settings_transaction_comment"
        style="@style/TH.Subhead"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        />
  </LinearLayout>

  <ListView android:id="@+id/transaction_list"
      android:background="#88FFFFFF"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>