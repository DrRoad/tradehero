<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/invite_friend_announcement_header"
      android:paddingBottom="@dimen/invite_friend_announcement_vertical_padding"
      android:paddingTop="@dimen/invite_friend_announcement_vertical_padding"
      android:paddingLeft="@dimen/invite_friend_announcement_horizontal_padding"
      android:paddingRight="@dimen/invite_friend_announcement_horizontal_padding"
      android:gravity="center"
      android:textStyle="bold"
      android:layout_gravity="top|center_horizontal"
      android:text="@string/invite_friend_refer_friend_announcement"
      android:height="@dimen/invite_friend_announcement_height"
      />

  <se.emilsjolander.stickylistheaders.StickyListHeadersListView
      android:id="@+id/sticky_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingTop="@dimen/invite_friend_announcement_height"
      android:fastScrollEnabled="true"
      />

  <TextView
      android:id="@+id/friend_list_empty_view"
      android:paddingTop="@dimen/common_margin_10"
      android:paddingLeft="3dp"
      android:paddingRight="3dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/invite_friend_refer_friend_empty_view"
      android:gravity="center_horizontal"
      android:visibility="gone"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/buy_sell_action_buttons_background"
      android:layout_gravity="bottom|center_horizontal"
      tools:visibility="visible"
      >
    <TextView
        android:id="@+id/refer_friend_invite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_friend_send_invitations"
        android:paddingLeft="@dimen/refer_friend_action_button_horizontal_padding"
        android:paddingRight="@dimen/refer_friend_action_button_horizontal_padding"
        android:paddingTop="@dimen/refer_friend_action_button_vertical_padding"
        android:paddingBottom="@dimen/refer_friend_action_button_vertical_padding"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/refer_friend_invite_button_xml"
        android:textColor="@color/white"
        tools:visibility="visible"
        />
  </FrameLayout>
</FrameLayout>