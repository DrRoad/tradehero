<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.leaderboard.LeaderboardUserRankItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white"
    >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/leaderboard_user_item_basic_info"
      android:paddingTop="5dp"
      >
    <TextView
        android:id="@+id/leaderboard_user_item_position"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/leaderboard_position_text_size"
        android:textStyle="bold"
        android:shadowColor="@color/light_grey"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/leaderboard_user_item_profile_picture"
        android:layout_height="@dimen/leaderboard_user_view_profile_width"
        android:layout_width="@dimen/leaderboard_user_view_profile_width"
        android:contentDescription="@null"
        android:src="@drawable/superman_facebook"
        android:layout_toRightOf="@id/leaderboard_user_item_position"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/leaderboard_user_item_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="@dimen/leaderboard_title_text_size"
        android:layout_toRightOf="@id/leaderboard_user_item_profile_picture"
        android:shadowColor="@color/light_grey"
        android:shadowDy="1"
        android:shadowRadius="1"
        />

    <TextView
        android:id="@+id/leaderboard_user_item_hq"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="30dp"
        android:contentDescription="@null"
        android:background="@drawable/hero_quotient_colour"
        android:textSize="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:shadowColor="@color/light_grey"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
  </RelativeLayout>

  <ImageView
      android:id="@+id/leaderboard_user_item_expand"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:src="@drawable/white_arrow"
      />

  <ImageView
      android:id="@+id/leaderboard_user_item_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@id/leaderboard_user_item_expand"
      android:src="@drawable/info"
      />

  <LinearLayout
      android:id="@+id/expanding_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/leaderboard_user_item_basic_info"
      android:layout_toLeftOf="@id/leaderboard_user_item_info"
      android:orientation="vertical"
      android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="wrap_content"
          android:text="@string/p_n_l"
          android:gravity="right"
          android:textColor="@color/light_grey"/>
      <TextView
          android:id="@+id/lbmu_pl"
          android:layout_width="0dp"
          android:layout_weight="3"
          android:paddingLeft="10dp"
          android:layout_height="wrap_content"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

      <TextView
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="wrap_content"
          android:text="@string/roi"
          android:gravity="right"
          android:textColor="@color/light_grey"/>
      <TextView
          android:id="@+id/lbmu_roi"
          android:layout_width="0dp"
          android:layout_weight="3"
          android:paddingLeft="10dp"
          android:layout_height="wrap_content"
          />
    </LinearLayout>
  </LinearLayout>
</com.tradehero.th.fragments.leaderboard.LeaderboardUserRankItemView>