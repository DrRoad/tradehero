<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.leaderboard.LeaderboardUserRankItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@android:color/white"
    >
  <TextView
      android:id="@+id/leaderboard_user_item_id"
      android:layout_width="40dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textSize="@dimen/leaderboard_title_text_size"
      android:textStyle="bold"
      android:shadowColor="@color/light_grey"
      android:shadowDy="1"
      android:shadowRadius="1"
      android:layout_centerVertical="true"
      />

  <com.tradehero.th.widget.RoundedImageView
      android:id="@+id/leaderboard_user_item_profile_picture"
      android:layout_height="@dimen/leaderboard_user_view_profile_width"
      android:layout_width="@dimen/leaderboard_user_view_profile_width"
      android:contentDescription="@null"
      android:src="@drawable/superman_facebook"
      android:layout_toRightOf="@id/leaderboard_user_item_id"
      android:layout_centerVertical="true"
      android:layout_marginRight="5dp"
      />

  <TextView
      android:id="@+id/leaderboard_user_item_display_name"
      android:layout_toRightOf="@id/leaderboard_user_item_profile_picture"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:ellipsize="end"
      android:textStyle="bold"
      android:shadowColor="@color/light_grey"
      android:shadowDy="1"
      android:shadowRadius="1"
      />

  <ImageView
      android:id="@+id/leaderboard_user_item_expand"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:src="@drawable/white_arrow"
      />

  <ImageView
      android:id="@+id/leaderboard_user_item_info"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@id/leaderboard_user_item_expand"
      android:src="@drawable/info"
      />

  <TextView
      android:id="@+id/leaderboard_user_item_hq"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:contentDescription="@null"
      android:layout_centerVertical="true"
      android:background="@drawable/hero_quotient_colour"
      android:layout_toLeftOf="@id/leaderboard_user_item_info"
      android:maxHeight="40dp"
      android:textSize="12dp"
      android:gravity="center_horizontal"
      />

</com.tradehero.th.fragments.leaderboard.LeaderboardUserRankItemView>