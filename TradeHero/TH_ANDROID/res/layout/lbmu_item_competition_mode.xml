<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.leaderboard.CompetitionLeaderboardMarkUserItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/basic_white_selector"
    android:paddingTop="5dp"
    android:descendantFocusability="blocksDescendants"
    >

  <LinearLayout
      android:orientation="horizontal"
      android:id="@+id/leaderboard_prizeLayout"
      android:layout_alignParentRight="true"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:visibility="gone"
      android:layout_marginRight="6dp">

    <ImageView
        android:id="@+id/leaderboard_prizeIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/icn_competition_prize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaderboard_prizeAmount"
        android:layout_gravity="center_vertical"
        android:text=""/>

  </LinearLayout>

  <include layout="@layout/lbmu_item_roi_mode_inner"
      android:id="@+id/lbmu_inner_view_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/leaderboard_prizeLayout"
      />

</com.tradehero.th.fragments.leaderboard.CompetitionLeaderboardMarkUserItemView>