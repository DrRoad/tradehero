<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical">


  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPositionTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_1">
      <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:textColor="@color/black"
          android:textSize="15sp"
          android:text="持仓总结"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
      <TextView
          style="@style/security_data_info"
          android:text="累计盈亏："/>

      <TextView
          style="@style/security_data_info"
          android:id="@+id/tvPositionTotalCcy"
          android:textColor="@color/black"
          android:text="10000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
      <TextView
          style="@style/security_data_info"
          android:text="    总投资："/>

      <TextView
          style="@style/security_data_info"
          android:id="@+id/tvPositionSumAmont"
          android:textColor="@color/black"
          android:text="10000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
      <TextView
          style="@style/security_data_info"
          android:text="建仓时间："/>
      <TextView
          style="@style/security_data_info"
          android:id="@+id/tvPositionStartTime"
          android:textColor="@color/black"
          android:text="2014.4.4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
      <TextView
          style="@style/security_data_info"
          android:text="最后交易："/>
      <TextView
          style="@style/security_data_info"
          android:id="@+id/tvPositionLastTime"
          android:textColor="@color/black"
          android:text="2014.4.6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
      <TextView
          style="@style/security_data_info"
          android:text="持仓时间："/>
      <TextView
          style="@style/security_data_info"
          android:id="@+id/tvPositionHoldTime"
          android:textColor="@color/black"
          android:text="6天"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPositionDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_1">
      <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:textColor="@color/black"
          android:textSize="15sp"
          android:text="交易明细"/>
    </LinearLayout>

    <com.tradehero.th.fragments.chinabuild.listview.SecurityListView
        android:id="@+id/listTrade"
        android:scrollingCache="false"
        android:fadingEdge="none"
        android:dividerHeight="1px"
        android:divider="@color/separate_line_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.tradehero.th.fragments.chinabuild.listview.SecurityListView>

  </LinearLayout>

</LinearLayout>

