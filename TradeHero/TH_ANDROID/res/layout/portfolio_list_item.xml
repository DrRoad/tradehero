<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.portfolio.PortfolioListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tradehero.th"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/white"
    >

  <ImageView
      android:id="@+id/hint_open_portfolio"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      />

  <ImageView
      android:id="@+id/following_image"
      android:layout_width="88dp"
      android:layout_height="32dp"
      android:layout_toLeftOf="@id/hint_open_portfolio"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:src="@drawable/following_stamp"
      android:visibility="gone"
      android:contentDescription="@null"
      />

  <ImageView
      android:id="@+id/user_icon"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentLeft="true"
      android:src="@drawable/superman_facebook"
      android:contentDescription="@null"
    />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/user_icon"
      android:layout_toLeftOf="@+id/hint_open_portfolio"
      android:paddingTop="2dp"
      android:paddingBottom="2dp"
      android:paddingLeft="5dp"
      android:layout_centerVertical="true"
    >

      <TextView
          android:id="@+id/portfolio_title"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:maxLines="1"
          android:layout_weight="3"
          android:textStyle="bold"
        />

      <TextView
          android:id="@+id/portfolio_description"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:maxLines="1"
        />

  </LinearLayout>

</com.tradehero.th.fragments.portfolio.PortfolioListItemView>