<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.portfolio.PortfolioListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/portfolio_padding_left"
    android:paddingTop="@dimen/portfolio_padding_top"
    android:paddingBottom="@dimen/portfolio_padding_bottom"
    android:background="@drawable/basic_white_selector"
    android:paddingRight="@dimen/position_padding_right"
    >

  <ImageView
      android:id="@+id/hint_open_portfolio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      />

  <ImageView
      android:id="@+id/following_image"
      android:layout_width="88dp"
      android:layout_height="32dp"
      android:layout_toLeftOf="@id/hint_open_portfolio"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:src="@drawable/following_stamp"
      tools:visibility="visible"
      android:contentDescription="@null"
      />

  <ImageView
      android:id="@+id/follower_profile_picture"
      android:layout_width="@dimen/medium_logo_w_h"
      android:layout_height="@dimen/medium_logo_w_h"
      android:layout_alignParentLeft="true"
      tools:src="@drawable/superman_facebook"
      android:contentDescription="@null"
    />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/follower_profile_picture"
      android:layout_toLeftOf="@+id/hint_open_portfolio"
      android:paddingTop="2dp"
      android:paddingBottom="2dp"
      android:paddingLeft="5dp"
      android:layout_centerVertical="true"
    >

      <TextView
          android:id="@+id/portfolio_title"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:maxLines="1"
          android:layout_weight="3"
          android:textStyle="bold"
          tools:text="Default Portfolio"
        />

      <TextView
          android:id="@+id/portfolio_description"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight="2"
          android:maxLines="1"
          tools:text="You have 3 open positions"
        />

  </LinearLayout>

</com.tradehero.th.fragments.portfolio.PortfolioListItemView>