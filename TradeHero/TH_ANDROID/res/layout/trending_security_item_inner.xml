<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/security_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/trending_security_item"
    >

  <ImageView
      android:id="@+id/stock_logo"
      android:layout_width="@dimen/security_logo_width"
      android:layout_height="@dimen/security_logo_height"
      android:layout_centerHorizontal="true"
      android:contentDescription="@null"
      android:adjustViewBounds="false"
      android:scaleType="fitCenter"
      android:layout_margin="@dimen/margin_xsmall"
      tools:src="@drawable/square_us"/>

  <TextView
      android:id="@+id/stock_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/stock_logo"
      android:layout_centerHorizontal="true"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:lines="1"
      style="@style/TH.Subhead"
      android:singleLine="true"
      tools:text="Company Name"
      />

  <TextView
      android:id="@+id/exchange_symbol"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/stock_name"
      android:layout_centerHorizontal="true"
      android:ellipsize="end"
      android:lines="1"
      style="@style/TH.Caption"
      tools:text="GOOG"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/exchange_symbol"
      android:layout_centerHorizontal="true"
      android:orientation="horizontal"
      android:gravity="center"
      >

    <TextView
        android:id="@+id/last_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        tools:text="MYR 1,01123"
        style="@style/TH.TextPrimary"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_stock_roi"
        style="@style/TH.Subhead.Inverse"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:layout_weight="0.45"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        tools:text="+408%"
        android:textSize="12sp"
        android:background="@drawable/round_label_zero"
        />

  </LinearLayout>

</merge>