<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:visibility="visible"
      >

    <TextView
        android:id="@+id/in_period_pl_value_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_weight="0"
        style="@style/TH.InfoKey"
        android:gravity="right"
        tools:text="In Period Profit"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

      <TextView
          android:id="@+id/in_period_pl_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          style="@style/TH.InfoValue"
          tools:text="US$ 839"
          />

      <TextView
          android:id="@+id/in_period_roi_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          style="@style/TH.InfoValue"
          tools:text="8.39%"
          />

    </RelativeLayout>

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:visibility="visible"
      >

    <TextView
        android:layout_marginRight="2dp"
        style="@style/TH.InfoKey"
        android:gravity="right"
        android:text="@string/position_in_period_additional_invested"
        />

    <TextView
        android:id="@+id/in_period_additional_invested"
        style="@style/TH.InfoValue"
        tools:text="US$ 10,000"
        />

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_weight="0"
        style="@style/TH.InfoKey"
        android:gravity="right"
        android:text="@string/position_in_period_start_value"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

      <TextView
          android:id="@+id/in_period_start_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          style="@style/TH.InfoValue"
          tools:text="Unknown"
          />

      <TextView
          android:id="@+id/in_period_start_value_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          style="@style/TH.Caption"
          tools:text="as of 27 Jan 2014"
          />

    </RelativeLayout>

  </TableRow>

</merge>