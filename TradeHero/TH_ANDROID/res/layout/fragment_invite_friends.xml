<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
>

  <android.support.v7.widget.CardView
      android:id="@+id/redeem_referral_code_card_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_small"
      card_view:cardCornerRadius="2dp"
      card_view:contentPadding="16dp">

    <LinearLayout
        android:id="@+id/redeem_referral_code_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white">

      <ProgressBar
          android:id="@android:id/progress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
      />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/redeem_referral_code_message_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

      <ImageView
          android:id="@+id/message_view_icon"
          android:layout_width="@dimen/small_image_w_h"
          android:layout_height="@dimen/small_image_w_h"
          android:src="@drawable/green_tick"/>

      <TextView
          android:id="@+id/message_view_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_small"
          android:textSize="@dimen/text_subhead"
          tools:text="This is a test message!"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/redeem_referral_code_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:id="@+id/redeem_referral_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textCapCharacters"
            android:hint="@string/redeem_referral_placeholder"
        />

        <Button
            android:id="@+id/redeem_referral_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/general_green_button"
            android:text="@string/redeem_referral_button"
            android:textColor="@color/white"
        />

    </LinearLayout>

  </android.support.v7.widget.CardView>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ListView
        android:id="@+id/social_friend_type_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@null"
        android:divider="@null"
        />

    <ListView
        android:id="@+id/social_friends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@null"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/social_search_friends_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/search_social_friend_empty"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/social_search_friends_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_square"
        android:visibility="gone"/>

  </RelativeLayout>

</LinearLayout>