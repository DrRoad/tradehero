<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.achievement.AchievementProgressIndicator
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@drawable/achievement_indicator_bg_line"
      >
    <ImageView
        android:id="@+id/achievement_indicator_1"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="@dimen/achievement_cell_progress_indicator_w_h"
        style="@style/TH.Achievement.Indicator"/>
    <ImageView
        android:id="@+id/achievement_indicator_2"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="@dimen/achievement_cell_progress_indicator_w_h"
        style="@style/TH.Achievement.Indicator"/>
    <ImageView
        android:id="@+id/achievement_indicator_3"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="@dimen/achievement_cell_progress_indicator_w_h"
        style="@style/TH.Achievement.Indicator"/>
    <ImageView
        android:id="@+id/achievement_indicator_4"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="@dimen/achievement_cell_progress_indicator_w_h"
        style="@style/TH.Achievement.Indicator"/>
    <ImageView
        android:id="@+id/achievement_indicator_5"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="@dimen/achievement_cell_progress_indicator_w_h"
        style="@style/TH.Achievement.Indicator"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/achievement_indicator_text_1"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="wrap_content"
        style="@style/TH.Achievement.Indicator.Text"
        tools:text="Top 100"/>
    <TextView
        android:id="@+id/achievement_indicator_text_2"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="wrap_content"
        style="@style/TH.Achievement.Indicator.Text"
        tools:text="Top 10"/>
    <TextView
        android:id="@+id/achievement_indicator_text_3"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="wrap_content"
        style="@style/TH.Achievement.Indicator.Text"
        tools:text="Top 5"/>
    <TextView
        android:id="@+id/achievement_indicator_text_4"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="wrap_content"
        style="@style/TH.Achievement.Indicator.Text"
        tools:text="Top 3"/>
    <TextView
        android:id="@+id/achievement_indicator_text_5"
        android:layout_width="@dimen/achievement_cell_progress_indicator_w_h"
        android:layout_height="wrap_content"
        style="@style/TH.Achievement.Indicator.Text"
        tools:text="#1"/>
  </LinearLayout>
</com.tradehero.th.fragments.achievement.AchievementProgressIndicator>