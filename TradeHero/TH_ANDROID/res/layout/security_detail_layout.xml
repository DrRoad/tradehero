<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/security_detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    >
  <com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/bvaViewAll"
      android:layout_width="fill_parent"
      android:layout_alignParentBottom="true"
      android:layout_height="48dp">

    <include
        android:id="@+id/ic_info_buy_sale_btns"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/security_info_buy_sale_discuss"/>

    <ProgressBar
        android:id="@+id/progress"
        android:background="@drawable/tab_menu_bg"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

  </com.tradehero.common.widget.BetterViewAnimator>


  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:layout_above="@id/bvaViewAll">
    <com.viewpagerindicator.SquarePageIndicator
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_centerHorizontal="true"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
  </LinearLayout>
</RelativeLayout>

