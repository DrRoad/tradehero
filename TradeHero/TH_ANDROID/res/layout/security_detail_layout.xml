<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/security_detail_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    >

  <include
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:id="@+id/ic_info_data"
      android:layout_marginTop="10dp"
      android:layout_width="fill_parent"
      android:layout_height="72dp"
      layout="@layout/security_info_data"/>

  <include
      android:id="@+id/ic_info_buy_sale_btns"
      android:layout_width="fill_parent"
      android:layout_height="48dp"
      android:layout_alignParentBottom="true"
      layout="@layout/security_info_buy_sale_discuss"/>


  <ScrollView android:layout_width="fill_parent"
      android:layout_above="@id/ic_info_buy_sale_btns"
      android:layout_below="@id/ic_info_data"
      android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


      <include
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:id="@+id/ic_info_chart"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/ic_info_data"
          layout="@layout/security_info_chart"/>

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_below="@id/ic_info_chart"
          android:layout_above="@id/ic_info_buy_sale_btns"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp">
          <Button
              android:id="@+id/btnTabDiscuss"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="讨论"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:background="@drawable/tab_blue_head_active"
              android:layout_weight="1"/>
          <Button
              android:id="@+id/btnTabNews"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="资讯"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:background="@drawable/tab_blue_head_xml"
              android:layout_weight="1"/>

        </LinearLayout>

        <include layout="@layout/security_time_line_item" android:id="@+id/llDisscurssOrNews"/>

        <TextView
            android:id="@+id/tvSecurityDiscussOrNewsMore"
            android:background="@drawable/listview_item_selector"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="点击加载更多"/>
      </LinearLayout>
    </LinearLayout>

  </ScrollView>
</RelativeLayout>

