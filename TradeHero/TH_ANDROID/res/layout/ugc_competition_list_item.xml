<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    >

  <LinearLayout
      android:visibility="visible"
      android:id="@+id/llCompetitionHead"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@color/gray_1"
      >
    <TextView
        android:id="@+id/tvCompetitionHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="官方比赛"/>

  </LinearLayout>

  <RelativeLayout
      android:id="@+id/rlCompetitionData"
      android:visibility="visible"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCompetitionHead"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:background="@drawable/default_image"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/imgCompetitionHead"
        android:orientation="vertical">

      <RelativeLayout
          android:layout_height="wrap_content"
          android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tvCompetitionName"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="官方炒股大赛"/>
        <TextView
            android:id="@+id/tvCompetitionJoinCount"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="12012人"/>
      </RelativeLayout>

      <RelativeLayout
          android:layout_marginTop="2dp"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tvCompetitionPeriod"
            android:textColor="@color/text_gray_normal"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="7-24至8－28"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlCompetitionDataExtroOffical"
          android:layout_marginTop="2dp"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tvCompetitionIntro"
            android:textColor="#585858"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="百万虚拟币奖励，更多真金白银奖励"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlCompetitionDataExtroMine"
          android:layout_marginTop="2dp"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent">
        <TextView
            android:id="@+id/tvCompetitionROITitle"
            android:textColor="#585858"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="收益率："/>

        <TextView
            android:id="@+id/tvCompetitionROIValue"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvCompetitionROITitle"
            android:singleLine="true"
            android:text="- -"/>


        <TextView
            android:id="@+id/tvCompetitionJumpValue"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="- -"/>

        <TextView
            android:id="@+id/tvCompetitionJumpTitle"
            android:textColor="#585858"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tvCompetitionJumpValue"
            android:singleLine="true"
            android:text="较昨天排名："/>
      </RelativeLayout>

    </LinearLayout>

  </RelativeLayout>
</RelativeLayout>

