<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <TextView
      android:id="@+id/last_price"
      style="@style/TH.InfoValue"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      tools:text="US$ 4.60"
      android:textSize="@dimen/text_title"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/bid_price_usd"
      style="@style/TH.InfoKey"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/buy_sell_usd_price_unit_left"
      android:gravity="center_horizontal"
      android:textSize="@dimen/text_body"
      />

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TableRow
        android:id="@+id/row_bid_ask_price"
        android:layout_gravity="center|top"
        >

      <TextView
          android:id="@+id/bid_price"
          style="@style/TH.InfoKey"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          tools:text="4.5"
          android:gravity="right"
          android:singleLine="true"
          />

      <TextView
          android:text=" x "
          style="@style/TH.Body"
          android:gravity="center"
          android:padding="4dp"
          android:singleLine="true"
          />

      <TextView
          android:id="@+id/ask_price"
          style="@style/TH.InfoValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          tools:text="4.6"
          android:gravity="left"
          android:singleLine="true"
          />

    </TableRow>

    <TableRow
        android:id="@+id/row_bid_ask_hint"
        android:layout_gravity="center|top"
        >

      <TextView
          android:id="@+id/bid_price_hint"
          style="@style/TH.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="@string/buy_sell_bid_with_bracket"
          android:singleLine="true"
          />

      <TextView
          android:text=" "
          android:gravity="center"
          style="@style/TH.Caption"
          android:padding="4dp"
          android:singleLine="true"
          />

      <TextView
          android:id="@+id/ask_price_hint"
          style="@style/TH.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="left"
          android:text="@string/buy_sell_ask_with_bracket"
          android:singleLine="true"
          />

    </TableRow>

  </TableLayout>

</merge>