<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView
      android:id="@+id/last_price"
      style="@style/TH.Value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="stock"
      android:textSize="18sp"
      android:textStyle="bold"
      android:background="#4023fe9a"
      />

  <TextView
      android:id="@+id/bid_price_usd"
      style="@style/TH.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/usd_price_unit_left"
      android:gravity="center_horizontal"
      android:textSize="13sp"
      android:background="#43fe239a"
      />

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#80aabbcc"
      >

    <TableRow
        android:layout_gravity="center|top"
        android:background="#80ef33ef"
        >

      <TextView
          android:id="@+id/bid_price"
          style="@style/TH.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="4.5"
          android:gravity="right"
          android:textSize="13sp"
          android:singleLine="true"
          />

      <TextView
          android:text=" x "
          android:textAlignment="center"
          android:textSize="13sp"
          android:padding="4dp"
          android:singleLine="true"
          />

      <TextView
          android:id="@+id/ask_price"
          style="@style/TH.Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="4.6"
          android:gravity="left"
          android:textSize="13sp"
          android:singleLine="true"
          />

    </TableRow>

    <TableRow
        android:layout_gravity="center|top"
        >

      <TextView
          android:id="@+id/bid_price_hint"
          style="@style/TH.Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="@string/bid_with_bracket"
          android:textSize="13sp"
          android:background="#eeeeff"
          android:singleLine="true"
          />

      <TextView
          android:text=" "
          android:textAlignment="center"
          android:textSize="13sp"
          android:padding="4dp"
          android:singleLine="true"
          />

      <TextView
          android:id="@+id/ask_price_hint"
          style="@style/TH.Value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="left"
          android:text="@string/ask_with_bracket"
          android:textSize="13sp"
          android:background="#eeeeff"
          android:singleLine="true"
          />

    </TableRow>

  </TableLayout>

  <ProgressBar
      android:id="@+id/progress"
      android:layout_below="@id/bid_price"
      android:layout_alignWithParentIfMissing="true"
      style="?android:attr/progressBarStyleSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</merge>