<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/basic_white_selector"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/user_profile_avatar"
        android:layout_width="@dimen/big_image_w_h"
        android:layout_height="@dimen/big_image_w_h"
        android:background="@drawable/layout_oval"
        android:contentDescription="@null"
        tools:src="@drawable/superman_facebook"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/user_name"
          style="@style/TH.UserNameTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          tools:text="xavier"
          />

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
