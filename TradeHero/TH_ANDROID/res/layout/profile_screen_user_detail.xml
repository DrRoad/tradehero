<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.widget.user.ProfileView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_profile_rounded_background">

  <!-- layout_marginBottom: dirty trick to reserve background rounded corner radius-->
  <ImageView
      android:id="@+id/user_profile_background_by_sketched_avatar"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:scaleType="centerCrop"
      android:contentDescription="@null"
      android:layout_marginBottom="@dimen/user_profile_corner_radius"
      />

  <ImageView
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:src="@drawable/user_profile_gradient_filter_xml"
      android:contentDescription="@null"
      />
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="@android:color/transparent"
        >

      <ImageView
          android:id="@+id/user_profile_avatar"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:background="@drawable/layout_oval"
          android:padding="0.5dp"
          android:src="@drawable/avatar"
          android:contentDescription="@string/empty"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/user_profile_avatar"
          android:background="@android:color/transparent"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/gray_3"
              android:text="@string/Roi"
              android:textSize="18sp"
              android:textStyle="normal"/>

          <TextView
              android:id="@+id/txt_ROI"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textColor="@color/font_roi"
              android:textSize="18sp"
              android:textStyle="bold"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="@string/Hq"
              android:textColor="@color/gray_3"
              android:textSize="18sp"
              android:textStyle="normal"/>

          <TextView
              android:id="@+id/txt_HQ"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textColor="@color/white"
              android:textSize="18sp"
              android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="15dp">

          <TextView
              android:id="@+id/txt_profile_tradeprofitprefix_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Trade_Profit"
              android:textColor="@color/gray_3"
              android:textSize="18sp"
              android:textStyle="normal"/>

          <TextView
              android:id="@+id/txt_profile_tradeprofit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:textColor="@color/white"
              android:textSize="18sp"
              android:textStyle="bold"/>
        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>

    <!-- followers bar layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:background="@android:color/transparent"
        android:weightSum="4"
        android:baselineAligned="false">

      <!--Followers-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          android:gravity="center_horizontal"
          >

        <TextView
            android:id="@+id/user_profile_followers_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/icn_followers"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="-5dip"
            android:text="@string/Followers"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"/>
      </LinearLayout>

      <!--Heroes-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          android:gravity="center_horizontal">

        <TextView
            android:id="@+id/user_profile_heroes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="8"
            android:drawableTop="@drawable/icn_heroes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:gravity="center_vertical"
            android:text="@string/Heroes"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"/>
      </LinearLayout>

      <!--Trades-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          android:gravity="center_horizontal">

        <TextView
            android:id="@+id/user_profile_trade_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="8"
            android:drawableTop="@drawable/icn_trades"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="-5dip"
            android:text="@string/Trades"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"/>
      </LinearLayout>

      <!--Exchanges-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          android:gravity="center_horizontal">

        <TextView
            android:id="@+id/user_profile_exchanges_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/icn_exchanges"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:gravity="center_vertical"
            android:text="@string/Exchanges"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</com.tradehero.th.widget.user.ProfileView>