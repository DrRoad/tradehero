<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settings_score"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/more_bang_item_height"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/listview_item_selector">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_small"
          android:layout_centerVertical="true"
          android:textSize="@dimen/more_bang_text_size"
          android:textColor="@dimen/text_default_color"
          android:text="@string/settings_score"/>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/icon_arrow_right"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/right_arrow_margin"/>

      <View
          android:layout_width="fill_parent"
          android:layout_height="1px"
          android:background="@color/separate_line_color"
          android:layout_toRightOf="@id/img_me_dynamic"
          android:layout_alignParentBottom="true"/>
    </RelativeLayout>

  <LinearLayout
      android:id="@+id/settings_logout"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/more_bang_item_height"
      android:layout_marginTop="@dimen/margin_small"
      android:gravity="center"
      android:background="@drawable/listview_item_selector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:textSize="@dimen/more_bang_text_size"
        android:textColor="@color/red"
        android:text="@string/settings_logout"/>

  </LinearLayout>

</LinearLayout>

