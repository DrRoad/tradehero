<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contest_center_content_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_fragment"
        >

    <com.tradehero.common.widget.BetterViewAnimator
            android:id="@+id/bvaViewAll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <com.tradehero.th.widget.TradeHeroProgressBar
                android:id="@+id/tradeheroprogressbar_users"
                android:layout_width="@dimen/loading_logo_width"
                android:layout_height="@dimen/loading_logo_height"
                android:layout_gravity="center"
                android:background="@drawable/logo"
                />
        <RelativeLayout
                android:id="@+id/relativelayout_listfriends"
                android:layout_width="match_parent" android:layout_height="match_parent">
            <com.tradehero.chinabuild.listview.SecurityListView
                    xmlns:ptr="http://schemas.android.com/apk/res-auto"
                    ptr:ptrHeaderTextColor="@color/black"
                    android:id="@+id/listFriends"
                    android:scrollingCache="false"
                    android:fadingEdge="none"
                    android:dividerHeight="1px"
                    android:listSelector="@android:color/transparent"
                    android:divider="@null"
                    android:background="@color/bg_fragment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </com.tradehero.chinabuild.listview.SecurityListView>
            <com.tradehero.th.widget.ABCDView
                    android:id="@+id/abcdview_divider"
                    android:background="@android:color/transparent"
                    android:layout_width="30dp" android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:background="@drawable/issue_xml"
                      android:textSize="26sp"
                      android:id="@+id/textview_show_divider"
                      android:layout_centerInParent="true"
                      android:textColor="#ffffff"
                      android:gravity="center"
                      android:visibility="gone"/>
        </RelativeLayout>
        <ImageView android:id="@+id/imgEmpty"
                   android:background="@drawable/empty"
                   android:layout_gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="150dp"/>
    </com.tradehero.common.widget.BetterViewAnimator>


</LinearLayout>

