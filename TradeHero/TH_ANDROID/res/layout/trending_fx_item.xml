<?xml version="1.0" encoding="utf-8"?>
<com.androidth.general.fragments.security.FXItemView
    android:id="@+id/security_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_fx_item_bg"
    android:gravity="center_vertical"
    android:padding="@dimen/grid_item_bg_border_width"
    android:minHeight="@dimen/grid_item_height"
    tools:context="com.androidth.general.activities.DashboardActivity"
    >

  <LinearLayout
      android:id="@+id/flags_container_outer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      >

    <include layout="@layout/fx_flags"/>

  </LinearLayout>

  <TextView
      android:id="@+id/fx_pair_name"
      style="@style/TH.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/flags_container_outer"
      android:ellipsize="marquee"
      android:lines="1"
      android:marqueeRepeatLimit="marquee_forever"
      android:singleLine="true"
      tools:text="Company Name"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/fx_pair_name"
      android:gravity="center"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/fx_price_sell"
        style="@style/TH.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/size_8"
        android:gravity="center"
        android:lines="1"
        android:text="@string/loading_loading"
        tools:text="146.264"
        />

    <Space
        android:layout_width="@dimen/size_1"
        android:layout_height="0dp"
        />

    <TextView
        android:id="@+id/fx_price_buy"
        style="@style/TH.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/size_8"
        android:gravity="center"
        android:lines="1"
        tools:text="146.254"
        />

  </LinearLayout>

</com.androidth.general.fragments.security.FXItemView>