<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.security.FXItemView
    android:id="@+id/security_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_fx_item_bg"
    android:gravity="center_vertical"
    android:padding="@dimen/grid_item_bg_border_width"
    tools:context=".activities.DashboardActivity"
    >

  <TextView
      android:id="@+id/stock_name"
      style="@style/TH.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/margin_xsmall"
      android:ellipsize="marquee"
      android:lines="1"
      android:marqueeRepeatLimit="marquee_forever"
      android:singleLine="true"
      android:textColor="@color/trending_grid_item_stock_name"
      tools:text="Company Name"
      />

  <LinearLayout
      android:id="@+id/flags_container_outer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/stock_name"
      android:gravity="center"
      >

    <include layout="@layout/fx_flags"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/flags_container_outer"
      android:gravity="center"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/buy_price"
        style="@style/TH.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textStyle="bold"
        tools:text="@string/arrow_prefix_positive"
        />

    <TextView
        android:id="@+id/sell_price"
        style="@style/TH.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textStyle="bold"
        tools:text="1,014"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/ic_market_close"
      android:layout_width="@dimen/small_image_w_h"
      android:layout_height="@dimen/small_image_w_h"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:contentDescription="@null"
      android:paddingBottom="8dp"
      android:paddingRight="8dp"
      android:scaleType="centerInside"
      android:src="@drawable/market_sleep_grey"
      />

</com.tradehero.th.fragments.security.FXItemView>