<?xml version="1.0" encoding="utf-8"?>

<com.androidth.general.fragments.discussion.DiscussionItemViewLinear
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="48dp"
    tools:background="#edffed">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/discussion_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="moments ago"
        style="@style/TH.Caption"
        />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discussion_time"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:background="@drawable/other_bubble">
      <!--android:background="@color/gray_3"-->
      <com.androidth.general.widget.MarkdownTextView
          android:id="@+id/discussion_content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.Body"
          android:autoLink="web"
          android:textIsSelectable="true"
          tools:text="How can I help you How can I help you How can I help you How can I help you How can I help you How can I help you How can I help you"/>

    </LinearLayout>

  </RelativeLayout>

</com.androidth.general.fragments.discussion.DiscussionItemViewLinear>