<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/tile_live_trading_bg"
    style="@style/TH.TrendingTileContainer"
    >

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_item_height"
      android:src="@drawable/icon_trending_live"
      />

  <TextView
      android:id="@+id/extra_tile_text"
      style="@style/TH.TrendingTileBottomText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/tile_live_trading"
      />

  <TextView
      style="@style/Th.TrendingTileTopText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/extra_tile_text"
      android:text="@string/tile_live_trading_top"
      />

</RelativeLayout>