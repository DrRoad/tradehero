<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_xsmall"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_xsmall"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/margin_small"
      >

    <TextView
        android:id="@+id/roi_value"
        style="@style/TH.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:minWidth="@dimen/size_10"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        tools:text="- 8.88%"
        />

    <TextView
        android:id="@+id/portfolio_title"
        style="@style/TH.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/roi_value"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="My Stocks"
        />

    <TextView
        android:id="@+id/portfolio_description"
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/portfolio_title"
        android:layout_toRightOf="@id/portfolio_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_secondary"
        tools:text="You have 2 open positions."
        />

    <TableLayout
        android:id="@+id/grid_portfolio_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portfolio_description"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:stretchColumns="1"
        >

      <TableRow
          android:id="@+id/portfolio_total_value_row"
          android:layout_marginBottom="4dp"
          >

        <TextView
            style="@style/TH.Body"
            android:text="@string/portfolio_header_total_value"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorSecondary"
            />

        <TextView
            android:id="@+id/portfolio_total_value"
            style="@style/TH.Body"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            tools:text="USD 180,000.00"
            />
      </TableRow>

      <TableRow android:id="@+id/portfolio_cash_margin_left_row">

        <TextView
            android:id="@+id/portfolio_cash_margin_left_label"
            style="@style/TH.Body"
            android:text="@string/portfolio_header_margin_available_title"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorSecondary"
            />

        <TextView
            android:id="@+id/portfolio_cash_margin_left"
            style="@style/TH.Body"
            android:layout_marginLeft="4dp"
            android:gravity="right"
            tools:text="USD 56,200.00"
            />
      </TableRow>
    </TableLayout>

    <com.maurycy.ScaleImageView
        android:id="@+id/competition_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_portfolio_values"
        android:layout_marginTop="@dimen/margin_xsmall"
        tools:src="@drawable/img_placeholder_news_1"
        tools:visibility="gone"
        />

    <TextView
        android:id="@+id/portfolio_roi_since"
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/competition_banner"
        android:layout_marginTop="@dimen/margin_xsmall"
        tools:text="Since inception"
        />

  </RelativeLayout>


</android.support.v7.widget.CardView>