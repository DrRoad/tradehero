<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageButton
      android:id="@+id/previous_filter"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentLeft="true"
      android:src="@drawable/chevron_back"
      android:contentDescription="@null"
      />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/previous_filter"
      android:layout_toLeftOf="@+id/next_filter"
  >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:drawableLeft="@null"
      />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
      />

    <Spinner
        android:id="@+id/exchange_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />

  </LinearLayout>

  <ImageButton
  android:id="@+id/next_filter"
  android:layout_width="48dp"
  android:layout_height="48dp"
  android:layout_alignParentRight="true"
  android:src="@drawable/chevron_forward"
  android:contentDescription="@null"
      />

</RelativeLayout>