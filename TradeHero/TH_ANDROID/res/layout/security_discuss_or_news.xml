<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_timeline"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/bvaViewAll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

    <com.tradehero.th.widget.TradeHeroProgressBar
            android:id="@+id/tradeheroprogressbar_security_discuss_news"
            android:layout_width="@dimen/loading_logo_width"
            android:layout_height="@dimen/loading_logo_height"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            />

  <com.tradehero.chinabuild.listview.SecurityListView
      xmlns:ptr="http://schemas.android.com/apk/res-auto"
      ptr:ptrHeaderTextColor="@color/black"
      android:id="@+id/listTimeLine"
      android:scrollingCache="false"
      android:fadingEdge="none"
      android:dividerHeight="5dp"
      android:scrollbars="none"
      android:divider="@color/transparent"
      android:layout_margin="10dp"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
  </com.tradehero.chinabuild.listview.SecurityListView>
</com.tradehero.common.widget.BetterViewAnimator>
</LinearLayout>

