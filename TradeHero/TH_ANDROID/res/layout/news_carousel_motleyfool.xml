<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_6"
      android:paddingTop="4dp"
      android:paddingBottom="4dp"
      android:src="@drawable/logo_tmf"
      android:layout_gravity="center"
      android:contentDescription="@string/motley_fool"
      android:background="@color/news_motley_fool"
      />
  <ImageView
      android:id="@+id/spinner_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/size_1"
      android:layout_gravity="center_vertical|right"
      android:background="@drawable/spinner_arrow_bg"/>

</FrameLayout>