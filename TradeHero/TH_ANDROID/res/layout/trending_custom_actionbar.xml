<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlStockHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true"
    tools:background="@color/general_brand_color"
    >

  <com.androidth.general.widget.OffOnViewSwitcher
      android:id="@+id/switch_stock_fx"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:layout_centerVertical="true"
      app:offText="@string/stocks"
      app:onText="@string/fx"
      />

  <com.androidth.general.fragments.market.SecurityTypeSpinner
      android:id="@+id/security_type_selection_menu"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      android:minWidth="@dimen/size_6"
      style="@style/TH.Spinner"
      android:layout_centerVertical="true"
      android:gravity="center_vertical|right"
      android:visibility="gone"
      />

  <com.androidth.general.fragments.market.ExchangeSpinner
      android:id="@+id/exchange_selection_menu"
      android:layout_width="wrap_content"
      android:layout_height="?attr/actionBarSize"
      android:minWidth="@dimen/size_6"
      style="@style/TH.Spinner"
      android:layout_toRightOf="@id/switch_stock_fx"
      android:gravity="center_vertical|right"
      />

</RelativeLayout>
