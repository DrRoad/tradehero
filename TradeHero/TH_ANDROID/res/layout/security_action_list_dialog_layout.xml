<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.security.SecurityActionListLinear
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >

    <Button
        android:id="@+id/security_action_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:text="@android:string/cancel"
        android:layout_marginRight="5dp"
        style="@style/TH.Button.Small"
        android:background="@drawable/basic_transparent_selector"
        />

    <TextView
        android:id="@+id/security_action_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/TH.Subhead"
        android:gravity="center"
        tools:text="Security Name"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#999"/>

  <ListView
      android:layout_gravity="center"
      android:id="@+id/security_action_list_sharing_items"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:listSelector="@drawable/basic_white_selector"
      android:cacheColorHint="@color/transparent"
      />

</com.tradehero.th.fragments.security.SecurityActionListLinear>
