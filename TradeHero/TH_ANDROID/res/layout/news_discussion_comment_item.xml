<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.discussion.CommentItemViewLinear
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/timeline_side_spacing"
    android:descendantFocusability="blocksDescendants"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/timeline_side_spacing"
      android:paddingLeft="@dimen/timeline_side_spacing"
      android:paddingRight="@dimen/timeline_side_spacing"
      android:paddingBottom="@dimen/timeline_side_spacing"
      android:layout_marginLeft="@dimen/timeline_side_spacing"
      android:layout_marginRight="@dimen/timeline_side_spacing"
      android:background="@drawable/discussion_status_background"
      android:descendantFocusability="blocksDescendants"
      >

    <ImageView
        android:id="@+id/discussion_user_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layout_oval_gray"
        android:padding="1dp"
        android:src="@drawable/avatar"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:id="@+id/timeline_item_top_right"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/discussion_user_picture">

      <TextView
          android:id="@+id/user_profile_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:textColor="@color/black"
          android:textSize="15sp"
          android:textStyle="bold"
          android:ellipsize="middle"
          android:singleLine="true"
          android:layout_alignParentLeft="true"
          tools:text="Tho Nguyen"
          />

      <TextView
          android:id="@+id/discussion_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:textColor="@color/text_gray_normal"
          android:textSize="@dimen/timeline_item_date"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/user_profile_name"
          tools:text="A moment ago"
          />
    </RelativeLayout>

    <TextView
        android:id="@+id/discussion_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeline_item_top_right"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/discussion_user_picture"
        tools:text="Tho Nguyen is the world best trader!"
        android:textColorLink="@color/timeline_item_link"
        android:textColor="@color/timeline_item"
        android:textSize="12sp"
        android:textStyle="normal"
        />
  </RelativeLayout>
  <include layout="@layout/discussion_action_buttons"/>
</com.tradehero.th.fragments.discussion.CommentItemViewLinear>