<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.translation.TranslatableLanguageItemLinearView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/translatable_text_own_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        tools:text="franÃ§ais"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="@dimen/text_small"
        android:text="-"
        />

    <TextView
        android:id="@+id/translatable_text_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        tools:text="French"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/translatable_text_code"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="8dp"
      android:textSize="@dimen/text_xsmall"
      tools:text="en"
      />

</com.tradehero.th.fragments.translation.TranslatableLanguageItemLinearView>