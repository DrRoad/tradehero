<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/news_comment_list_wrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <ListView
        android:id="@+id/news_detail_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/news_detail_comment_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </com.tradehero.common.widget.BetterViewAnimator>

  <TextView
      android:id="@+id/news_detail_comment_empty"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/discussion_empty"
      android:gravity="center"
      android:textColor="#777"/>
</LinearLayout>