<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <include layout="@layout/news_detail_summary_view"/>
  <include layout="@layout/news_item_action_buttons"/>
  <include layout="@layout/news_detail_full_content"/>

  <ListView
      android:id="@+id/news_detail_comment_list"
      android:layout_width="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_height="match_parent"/>

  <TextView android:id="@+id/news_detail_comment_empty"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/discussion_empty"
      android:gravity="center"
      android:textColor="#777"/>
</LinearLayout>