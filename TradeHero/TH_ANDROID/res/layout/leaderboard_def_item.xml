<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.leaderboard.LeaderboardDefView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

  <ImageView android:id="@+id/leaderboard_def_item_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@null"
      android:padding="8dp"
      />

  <TextView android:id="@+id/leaderboard_def_item_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textSize="@dimen/leaderboard_title_text_size"
      android:paddingTop="@dimen/leaderboard_title_text_padding"
      android:paddingBottom="@dimen/leaderboard_title_text_padding"
      android:textStyle="bold"
      android:shadowColor="@color/black"
      android:shadowDy="1"
      android:shadowRadius="1"
      />

  <FrameLayout android:id="@+id/leaderboard_user_rank"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >

    <TextView android:id="@+id/leaderboard_def_item_ranking_status"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <ImageView android:id="@+id/leaderboard_def_item_ranking_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        />
    </FrameLayout>

  <ImageView android:id="@+id/leaderboard_def_item_action_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@null"
      />
</com.tradehero.th.fragments.leaderboard.LeaderboardDefView>