<?xml version="1.0" encoding="utf-8"?>

<merge>

  <com.tradehero.th.fragments.discussion.DiscussionActionButtonsView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/discussion_share_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/timeline_action_buttons_background"
      >

    <RelativeLayout
        android:id="@+id/timeline_action_button_vote_pair_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        >

      <include layout="@layout/vote_pair_big"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <RelativeLayout
        android:id="@+id/discussion_action_button_comment_count_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/timeline_action_buttons_horizontal_padding_big"
        android:layout_marginRight="@dimen/timeline_action_buttons_horizontal_padding_big"
        >

      <TextView
          android:id="@+id/discussion_action_button_comment_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:drawableLeft="@drawable/icn_comment"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:shadowColor="@color/timeline_action_button_text_color_shadow"
          android:shadowDy="1"
          android:shadowRadius="1"
          android:drawablePadding="@dimen/comment_count_drawable_padding"
          android:text="0"
          />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <RelativeLayout
        android:id="@+id/discussion_action_button_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@drawable/icn_actions_share"
          />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <RelativeLayout
        android:id="@+id/discussion_action_button_more"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|right"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/timeline_action_buttons_horizontal_padding_big"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:textColor="@drawable/timeline_action_button_more_color_xml"
          android:textStyle="bold"
          android:text="@string/more_character"
          />

    </RelativeLayout>

  </com.tradehero.th.fragments.discussion.DiscussionActionButtonsView>

</merge>