<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
      android:id="@+id/timeline_share_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="@dimen/timeline_side_spacing"
      android:layout_marginRight="@dimen/timeline_side_spacing"
      android:background="@drawable/timeline_action_buttons_background"
      android:baselineAligned="false"
      >
    <LinearLayout
        android:id="@+id/timeline_action_button_monitor_wrapper"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/timeline_action_buttons_padding"
        android:gravity="center"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icn_actions_monitor"
          android:contentDescription="@null"
          />
      <TextView
          android:id="@+id/timeline_action_button_monitor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/monitor"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:shadowColor="@color/timeline_action_button_text_color_shadow"
          android:shadowDy="1"
          android:shadowRadius="1"
          />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/timeline_action_button_trade_wrapper"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/timeline_action_buttons_padding"
        android:gravity="center"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icn_actions_trade"
          android:contentDescription="@null"
          />
      <TextView
          android:id="@+id/timeline_action_button_trade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/trade"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:shadowColor="@color/timeline_action_button_text_color_shadow"
          android:shadowDy="1"
          android:shadowRadius="1"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeline_action_button_share_wrapper"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/timeline_action_buttons_padding"
        android:gravity="center"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icn_actions_share"
          android:contentDescription="@null"
          />
      <TextView
          android:id="@+id/timeline_action_button_share"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/share"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:shadowColor="@color/timeline_action_button_text_color_shadow"
          android:shadowDy="1"
          android:shadowRadius="1"
          />
    </LinearLayout>
  </LinearLayout>
</merge>