<?xml version="1.0" encoding="utf-8"?>

<com.androidth.general.fragments.trade.view.TradeListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/basic_white_selector"
    >

  <ImageView
      android:id="@+id/gain_indicator"
      android:layout_width="@dimen/size_1"
      android:layout_height="@dimen/size_1"
      android:layout_margin="@dimen/margin_small"
      android:layout_gravity="center_vertical"
      android:src="@drawable/indicator_down"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="@dimen/margin_xsmall"
      android:paddingBottom="@dimen/margin_xsmall"
      android:paddingRight="@dimen/margin_xsmall"
      >

    <TextView
        android:id="@+id/traded_quantity_verbose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TH.Body"
        android:textStyle="bold"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Sold 1 share @ US$ 562.12"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:id="@+id/pl_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="center_vertical"
          >

        <TextView
            android:id="@+id/pl_value_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_marginEnd="@dimen/margin_xsmall"
            style="@style/TH.InfoKey"
            android:layout_gravity="center_vertical"
            tools:text="Gain:"
            />

        <TextView
            android:id="@+id/pl_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TH.InfoValue"
            android:layout_gravity="center_vertical"
            tools:text="US$ 400"
            />

      </LinearLayout>

      <TextView
          android:id="@+id/trade_date_label"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="end"
          style="@style/TH.Caption"
          tools:text="1 mo ago"
          />

    </LinearLayout>

  </LinearLayout>

</com.androidth.general.fragments.trade.view.TradeListItemView>