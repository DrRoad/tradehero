<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <com.tradehero.th.fragments.discussion.DiscussionActionButtonsView
      android:id="@+id/discussion_share_buttons"
      android:background="@drawable/headline_action_buttons_background"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:baselineAligned="false"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/news_item_action_padding_l_r"
      android:paddingRight="@dimen/news_item_action_padding_l_r"
      >
    <RelativeLayout
        android:id="@+id/timeline_action_button_vote_pair_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        >

      <include layout="@layout/vote_pair_big"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/discussion_action_button_comment_count_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        >

      <TextView
          android:id="@+id/discussion_action_button_comment_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/timeline_action_buttons_horizontal_padding"
          android:layout_marginRight="@dimen/timeline_action_buttons_horizontal_padding"
          android:drawableLeft="@drawable/icn_comment"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:shadowColor="@color/timeline_action_button_text_color_shadow"
          android:shadowDy="1"
          android:shadowRadius="1"
          android:drawablePadding="@dimen/timeline_action_buttons_horizontal_padding"
          android:text="0"
          tools:text="200"
          />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <RelativeLayout
        android:id="@+id/discussion_action_button_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icn_actions_share"
          android:layout_centerInParent="true"
          />

    </RelativeLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/common_margin_4"
        android:paddingBottom="@dimen/common_margin_4"
        android:background="@color/gray_normal"/>

    <RelativeLayout
        android:id="@+id/discussion_action_button_more"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|right"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/news_item_action_padding_t_b"
          android:text="@string/more_character"
          android:textColor="@drawable/timeline_action_button_text_color_xml"
          android:textStyle="bold"
          android:visibility="visible"
          />

    </RelativeLayout>

  </com.tradehero.th.fragments.discussion.DiscussionActionButtonsView>

</merge>