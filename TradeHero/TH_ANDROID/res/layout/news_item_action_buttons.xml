<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <com.tradehero.th.fragments.discussion.DiscussionActionButtonsView
      android:id="@+id/discussion_share_buttons"
      android:background="@drawable/headline_action_buttons_background"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:baselineAligned="false"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/news_item_action_padding_l_r"
      android:paddingRight="@dimen/news_item_action_padding_l_r"
      >
    <include layout="@layout/vote_pair"/>

    <TextView
        android:id="@+id/discussion_action_button_comment_count"
        style="@style/TH.DiscussionActionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/icn_comment"
        android:textColor="@drawable/timeline_action_button_text_color_xml"
        android:textStyle="bold"
        android:shadowColor="@color/timeline_action_button_text_color_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:drawablePadding="@dimen/timeline_action_buttons_horizontal_padding"
        android:text="0"
        tools:text="200"
        />

    <ImageView
        android:id="@+id/discussion_action_button_share"
        style="@style/TH.DiscussionActionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/icn_actions_share"
        />

    <TextView
        android:id="@+id/discussion_action_button_more"
        style="@style/TH.DiscussionActionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@drawable/timeline_action_button_text_color_xml"
        android:textStyle="bold"
        android:text="@string/more_character"
        android:gravity="center"
        />
  </com.tradehero.th.fragments.discussion.DiscussionActionButtonsView>

</merge>