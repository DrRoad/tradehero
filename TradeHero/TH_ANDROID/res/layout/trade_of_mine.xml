<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_marginTop="15dp"
      android:layout_width="fill_parent"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal"
      android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
      <TextView
          android:id="@+id/tvTradeMeItemTitle0"
          style="@style/trade_of_me_title_text"
          android:text="总盈利："/>

      <TextView
          android:layout_below="@id/tvTradeMeItemTitle0"
          android:id="@+id/tvTradeMeItemTitle1"
          style="@style/trade_of_me_title_text"
          android:text="总资产："/>

      <TextView
          android:layout_below="@id/tvTradeMeItemTitle1"
          android:id="@+id/tvTradeMeItemTitle2"
          style="@style/trade_of_me_title_text"
          android:text="浮动盈亏："/>

      <TextView
          android:layout_below="@id/tvTradeMeItemTitle2"
          android:id="@+id/tvTradeMeItemTitle3"
          android:text="可用资金："
          style="@style/trade_of_me_title_text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
      <TextView
          android:id="@+id/tvWatchListItemROI"
          style="@style/trade_of_me_value_text"
          android:textSize="20sp"
          android:text=" - -"/>
      <TextView
          android:layout_below="@id/tvWatchListItemROI"
          android:id="@+id/tvWatchListItemAllAmount"
          style="@style/trade_of_me_value_text"
          android:textColor="@color/black"
          android:text=" - -"/>
      <TextView
          android:layout_below="@id/tvWatchListItemAllAmount"
          android:id="@+id/tvWatchListItemDynamicAmount"
          style="@style/trade_of_me_value_text"
          android:text=" - -"/>
      <TextView
          android:layout_below="@id/tvWatchListItemDynamicAmount"
          android:id="@+id/tvWatchListItemCash"
          style="@style/trade_of_me_value_text"
          android:textColor="@color/black"
          android:text=" - -"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llRecharge"
        android:layout_weight="6"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="-5dp"
          android:background="@drawable/icon_add_money_xml"/>
      <TextView
          android:layout_marginLeft="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/number_red"
          android:text="资金充值">
      </TextView>
    </LinearLayout>
  </LinearLayout>
  <include layout="@layout/separate_line"/>
  <com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/bvaViewAll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <com.tradehero.th.widget.TradeHeroProgressBar
              android:id="@+id/tradeheroprogressbar_trade_mine"
              android:layout_width="@dimen/loading_logo_width"
              android:layout_height="@dimen/loading_logo_height"
              android:layout_gravity="center"
              android:background="@drawable/logo"/>

    <RelativeLayout
        android:id="@+id/rlListAll"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

      <com.handmark.pulltorefresh.library.pulltorefresh.PullToRefreshExpandableListView
          xmlns:ptr="http://schemas.android.com/apk/res-auto"
          ptr:ptrHeaderTextColor="@color/black"
          android:id="@+id/tradeMyPositionList"
          android:scrollingCache="false"
          android:fadingEdge="none"
          android:dividerHeight="1px"
          android:divider="@null"
          android:background="@color/bg_fragment"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent">
      </com.handmark.pulltorefresh.library.pulltorefresh.PullToRefreshExpandableListView>

    </RelativeLayout>


    <include layout="@layout/empty_layout"/>


  </com.tradehero.common.widget.BetterViewAnimator>


</LinearLayout>

