<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/bvaViewAll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <com.tradehero.th.widget.TradeHeroProgressBar
              android:id="@+id/tradeheroprogressbar_trade_mine"
              android:layout_width="@dimen/loading_logo_width"
              android:layout_height="@dimen/loading_logo_height"
              android:layout_gravity="center"
              android:background="@drawable/logo"/>

    <RelativeLayout
        android:id="@+id/rlListAll"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

      <com.handmark.pulltorefresh.library.pulltorefresh.PullToRefreshExpandableListView
          xmlns:ptr="http://schemas.android.com/apk/res-auto"
          ptr:ptrHeaderTextColor="@color/black"
          android:id="@+id/tradeMyPositionList"
          android:scrollingCache="false"
          android:fadingEdge="none"
          android:dividerHeight="1px"
          android:divider="@null"
          android:background="@color/bg_fragment"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent">
      </com.handmark.pulltorefresh.library.pulltorefresh.PullToRefreshExpandableListView>

    </RelativeLayout>


  </com.tradehero.common.widget.BetterViewAnimator>


</LinearLayout>

