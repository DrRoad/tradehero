<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearlayout_questions_set_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="100dp"
                    android:id="@+id/relativelayout_questions_set_bg">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/imageview_questions_set"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="50dp"
                   android:scaleType="center"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="10dp"
          android:id="@+id/view_divider"/>

</LinearLayout>