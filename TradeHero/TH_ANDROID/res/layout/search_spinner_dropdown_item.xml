<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/topbarrectangle"
    android:paddingRight="8dp"
    android:minHeight="48dp"
    >

  <ImageView
      android:id="@+id/search_spinner_item_icon"
      android:layout_height="24dp"
      android:layout_width="24dp"
      android:layout_marginLeft="8dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:src="@drawable/toggle_stocks"
      android:contentDescription="@null"
      />

  <TextView
      android:id="@+id/search_spinner_item_label"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_toRightOf="@+id/search_spinner_item_icon"
      android:layout_centerVertical="true"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:textSize="20sp"
      android:textColor="@color/white"
      />

</RelativeLayout>