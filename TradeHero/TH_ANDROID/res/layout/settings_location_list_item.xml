<?xml version="1.0" encoding="utf-8"?>

<com.ayondo.academy.fragments.location.LocationRelativeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/medium_image_w_h"
    style="@style/TH.ListItem.Clickable"
    >

  <ImageView
      android:id="@+id/country_logo"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:contentDescription="@null"
      tools:src="@drawable/square_aq"
      />

  <TextView
      android:id="@+id/country_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/country_logo"
      android:layout_toEndOf="@id/country_logo"
      android:layout_centerVertical="true"
      style="@style/TH.Subhead"
      android:layout_marginLeft="@dimen/margin_small"
      android:layout_marginStart="@dimen/margin_small"
      tools:text="AQ"
      />

  <TextView
      android:id="@+id/country_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/country_code"
      android:layout_toEndOf="@id/country_code"
      android:layout_centerVertical="true"
      style="@style/TH.Subhead"
      android:layout_marginLeft="@dimen/margin_small"
      android:layout_marginStart="@dimen/margin_small"
      tools:text="AQ"
      />

  <ImageView
      android:id="@+id/location_tick_is_current"
      android:layout_width="@dimen/small_image_w_h"
      android:layout_height="@dimen/small_image_w_h"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/ic_tick_green"
      android:visibility="gone"
      tools:visibility="visible"
      android:contentDescription="@null"/>

</com.ayondo.academy.fragments.location.LocationRelativeView>