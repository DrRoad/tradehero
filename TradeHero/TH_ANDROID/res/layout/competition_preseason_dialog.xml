<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/rectangle_round_corner_white_bg"
      android:gravity="center_horizontal"
      >

    <ImageView
        android:id="@+id/preseason_title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        tools:src="@drawable/upgrade_alerts_pressed"
        />

    <ImageView
        android:id="@+id/preseason_prize_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        tools:src="@drawable/launcher"
        />

    <TextView
        android:id="@+id/preseason_prize_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.Title"
        android:text="@string/preseason_giveaway"
        android:layout_margin="@dimen/margin_small"
        />

    <com.tradehero.th.widget.MarkdownTextView
        android:id="@+id/preseason_prize_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.Subhead"
        android:gravity="center"
        tools:text="Spread the word and stand a chance to win an \niPhone 6!"
        android:layout_margin="@dimen/margin_small"
        />

    <Button
        android:id="@+id/preseason_prize_tncs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.Button.Small.Accented"
        android:text="@string/tncs_apply"
        android:background="@drawable/basic_transparent_selector"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clickable_element_min_dimen"
        android:gravity="center"
        >
      <include layout="@layout/share_panel_layout" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <Button
        android:id="@+id/preseason_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TH.Button.Accented"
        android:text="@string/share_now"
        android:background="@drawable/basic_transparent_selector"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      style="@style/TH.Btn_Popup_Close"
      />

</RelativeLayout>