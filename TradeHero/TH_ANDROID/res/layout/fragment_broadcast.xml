<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white"
    tools:layout_height="120dp"
    >
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_margin="10dp">
    <TextView android:layout_height="wrap_content"
        android:text="Sending to:"
        android:gravity="center_vertical|right"
        android:layout_weight="1"
        android:layout_width="0dp"/>

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/message_type_wrapper"
        android:gravity="center_vertical">


      <TextView android:layout_height="wrap_content"
          android:id="@+id/message_type"
          android:layout_width="wrap_content"
          tools:text="Free User"
          android:textColor="@android:color/holo_blue_dark"

          />

      <ImageView android:layout_width="20dp" android:layout_height="20dp"
          android:src="@android:drawable/ic_media_play"/>
    </LinearLayout>
    <!--<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
    <!--android:src="@android:drawable/ic_media_pause"/>-->

  </LinearLayout>
  <EditText
      android:id="@+id/message_input_edittext"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textSize="@dimen/stock_symbol_header"
      android:paddingLeft="5dp"
      tools:text="NASDAQ:GOOG"
      android:gravity="left|top"
      />

  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:layout_marginBottom="15dp"
      android:layout_marginTop="10dp"
      android:visibility="gone">

    <TextView
        android:id="@+id/message_lifetime_hint" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message life"
        android:layout_alignParentLeft="true"/>

    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="left"

        android:id="@+id/message_spinner_lifetime"
        android:layout_toRightOf="@id/message_lifetime_hint"/>

    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:id="@+id/message_spinner_target_user"
        />

    <TextView
        android:id="@+id/message_lifetime_hint" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message life"/>
  </RelativeLayout>

</LinearLayout>