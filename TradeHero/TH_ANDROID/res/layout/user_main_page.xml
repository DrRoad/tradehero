<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_timeline"
    >


  <LinearLayout
      android:id="@+id/includeUserHeader"
      android:layout_width="wrap_content"
      android:orientation="vertical"
      android:layout_height="wrap_content">
    <include layout="@layout/user_main_page_header"/>
    <View
        android:background="@color/gray_1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
  </LinearLayout>


  <com.tradehero.common.widget.BetterViewAnimator
      android:id="@+id/bvaViewAll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      <com.tradehero.th.widget.TradeHeroProgressBar
              android:id="@+id/tradeheroprogressbar_user_main_page"
              android:layout_width="@dimen/loading_logo_width"
              android:layout_height="@dimen/loading_logo_height"
              android:layout_gravity="center"
              android:background="@drawable/logo"/>
    <com.tradehero.chinabuild.listview.SecurityListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrHeaderTextColor="@color/black"
        android:id="@+id/listTimeLine"
        android:scrollingCache="false"
        android:fadingEdge="none"
        android:dividerHeight="5dp"
        android:divider="@color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.tradehero.chinabuild.listview.SecurityListView>

    <ImageView android:id="@+id/imgEmpty"
        android:background="@drawable/empty"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
  </com.tradehero.common.widget.BetterViewAnimator>
</LinearLayout>

