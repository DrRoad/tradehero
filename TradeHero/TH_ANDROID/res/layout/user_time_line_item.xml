<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/listview_item_selector"
    android:id="@+id/llItemAll"
    android:orientation="vertical"
    >

  <LinearLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgUserTLUserHeader"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:background="@drawable/default_image"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

      <RelativeLayout
          android:layout_marginTop="5dp"

          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvUserTLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="left"
            android:layout_marginLeft="2dp"
            android:textSize="13sp"
            android:textColor="@color/tradehero_blue"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text=""
            />

        <TextView
            android:id="@+id/tvUserTLTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:textSize="11sp"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:text="刚刚"
            android:textColor="@color/text_gray_normal"
            />

        <TextView
            android:id="@+id/tvUserTLTimeStamp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray_normal"
            />

        <TextView
            android:id="@+id/tvTipInTop"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/tvUserTLTimeStamp2"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_tips_in_head"/>

      </RelativeLayout>


      <LinearLayout
          android:id="@+id/llUserTLNoTrade"
          android:layout_marginBottom="8dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
        <com.tradehero.th.widget.MarkdownTextView
            android:id="@+id/tvUserTLContent"
            android:layout_below="@id/tvUserTLTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:textColorLink="@color/timeline_item_link"
            android:textColor="@color/timeline_item"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            />
      </LinearLayout>

      <RelativeLayout
          android:id="@+id/rlUserTLTrade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <TextView
            android:id="@+id/title0"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:text="买入股票："/>
        <TextView
            android:id="@+id/title1"
            android:layout_below="@id/title0"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:text="买入价格："/>
        <TextView
            android:id="@+id/title2"
            android:layout_below="@id/title1"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:text="买入数量："/>
        <TextView
            android:id="@+id/title3"
            android:layout_below="@id/title2"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:text="成交金额："/>
        <TextView
            android:id="@+id/title4"
            android:layout_below="@id/title3"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:text="    手续费："/>


        <TextView
            android:id="@+id/tvTradeName"
            android:layout_toRightOf="@id/title0"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:textColor="#ffae00"
            android:text=""/>

        <TextView
            android:id="@+id/tvTradePrice"
            android:layout_toRightOf="@id/title1"
            android:layout_below="@id/title0"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text=""/>

        <TextView
            android:id="@+id/tvTradeCount"
            android:layout_toRightOf="@id/title2"
            android:layout_below="@id/title1"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text=""/>


        <TextView
            android:id="@+id/tvTradeMoney"
            android:layout_toRightOf="@id/title3"
            android:layout_below="@id/title2"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text=""/>

        <TextView
            android:id="@+id/tvTradeCost"
            android:layout_toRightOf="@id/title4"
            android:layout_below="@id/title3"
            style="@style/buy_sale_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:text=""/>

      </RelativeLayout>

      <include
          android:id="@+id/includeTLOperater"
          layout="@layout/timeline_operater_line"
          android:layout_below="@id/title0"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>

