<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contest_center_content_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <RelativeLayout
      android:id="@+id/photo_layout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_small"
      android:background="@drawable/listview_item_selector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:textSize="@dimen/more_bang_text_size"
        android:textColor="@dimen/text_default_color"
        android:text="@string/settings_my_photo"/>
    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/photo_medium"
        android:layout_height="@dimen/photo_medium"
        android:src="@drawable/superman_facebook"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/right_arrow_margin"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/separate_line_color"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_below="@+id/photo"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/name_layout"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/more_bang_item_height"
      android:background="@drawable/listview_item_selector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:textSize="@dimen/more_bang_text_size"
        android:textColor="@dimen/text_default_color"
        android:text="@string/settings_my_name"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_small"
        android:textColor="@color/color_gray"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/right_arrow_margin"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@color/separate_line_color"
        android:layout_alignParentBottom="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/account_layout"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/more_bang_item_height"
      android:background="@drawable/listview_item_selector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:textSize="@dimen/more_bang_text_size"
        android:textColor="@dimen/text_default_color"
        android:text="@string/settings_my_account"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/right_arrow_margin"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@color/separate_line_color"
        android:layout_alignParentBottom="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/social_layout"
      android:layout_width="fill_parent"
      android:layout_height="@dimen/more_bang_item_height"
      android:background="@drawable/listview_item_selector">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_centerVertical="true"
        android:textSize="@dimen/more_bang_text_size"
        android:textColor="@dimen/text_default_color"
        android:text="@string/settings_my_social"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/right_arrow_margin"/>
  </RelativeLayout>

</LinearLayout>

