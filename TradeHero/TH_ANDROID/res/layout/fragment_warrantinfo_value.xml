<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <Button
        android:id="@+id/warrant_help_video_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        style="@style/TH.Button"
        tools:background="@drawable/btn_provider_22_phillip_macquarie"
        tools:text="Learn More About Warrants"
        android:padding="8dp">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warrant_info_header_warrant_data"
        android:gravity="center_horizontal"
        style="@style/TH.Subhead"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:baselineAligned="false"
        >

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_type"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_type"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="Put"
               />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_code"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_code"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="T1IW"
               />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_expiry"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_expiry"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="1 Apr 14"
               />
        </TableRow>

      </TableLayout>

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_strike_price"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_strike_price"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="SG$ 2.000"
               />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_underlying"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_underlying"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="Ascendas REOT"
              />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.InfoKey"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_issuer"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_issuer"
              style="@style/TH.InfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              tools:text="MB"
              />
        </TableRow>

      </TableLayout>

    </LinearLayout>

  </LinearLayout>

</ScrollView>
