<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/warrant_help_video_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/btn_linkedin_color_light"
        android:padding="8dp">

      <TextView
          android:id="@+id/warrant_help_video_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:padding="4dp"
          android:text="help video"
          />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warrant_info_header_warrant_data"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:baselineAligned="false"
        >

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_type"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_type"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_code"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_code"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_expiry"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_expiry"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

      </TableLayout>

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_strike_price"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_strike_price"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_underlying"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_underlying"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp"
              />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/warrant_info_issuer"
              android:textSize="13sp"
              android:gravity="right"
              />

          <TextView
              android:id="@+id/vwarrant_issuer"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text="@string/na"
              android:textSize="13sp"
              />
        </TableRow>

      </TableLayout>

    </LinearLayout>

  </LinearLayout>

</ScrollView>
