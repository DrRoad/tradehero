<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.onboarding.sector.OnBoardSectorItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_1"
    android:background="@drawable/basic_white_selector"
    app:alphaUnSelected="@dimen/on_board_alpha_unselected"
    >

  <com.squareup.widgets.AspectRatioImageView
      android:id="@android:id/icon1"
      android:layout_width="@dimen/size_4"
      android:layout_height="@dimen/size_4"
      android:maxHeight="@dimen/size_6"
      app:dominantMeasurement="width"
      app:aspectRatioEnabled="true"
      android:layout_gravity="center_vertical"
      android:layout_marginRight="@dimen/size_1"
      android:layout_marginEnd="@dimen/size_1"
      tools:src="@drawable/accounts_glyph_name_default"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        style="@style/TH.Subhead"
        tools:text="NYSE"
        />

    <ImageView
        android:id="@android:id/icon2"
        android:layout_width="@dimen/size_3"
        android:layout_height="@dimen/size_3"
        android:src="@drawable/tick_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@android:id/text1"
        android:layout_toEndOf="@android:id/text1"
        android:layout_toLeftOf="@android:id/icon2"
        android:layout_toStartOf="@android:id/icon2"
        android:ellipsize="end"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:lines="1"
        style="@style/TH.Caption"
        tools:text="New York Stock Exchange"
        />

  </RelativeLayout>

</com.tradehero.th.fragments.onboarding.sector.OnBoardSectorItemView>