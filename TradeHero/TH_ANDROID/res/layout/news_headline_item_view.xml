<?xml version="1.0" encoding="utf-8"?>

<com.ayondo.academy.fragments.news.NewsHeadlineViewLinear
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/TH.ListItem.Clickable.LB"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_icon"
        android:layout_width="@dimen/size_7"
        android:layout_height="@dimen/size_7"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        tools:src="@drawable/superman_facebook"/>

    <LinearLayout
        android:id="@+id/news_item_layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_1"
        android:layout_marginStart="@dimen/size_1"
        android:layout_toEndOf="@id/news_icon"
        android:layout_toRightOf="@id/news_icon"
        android:layout_centerVertical="true">

      <TextView
          android:id="@+id/news_title_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Subhead"
          android:singleLine="true"
          tools:text="Company Name to be bought by private equity more text"
          />

      <TextView
          android:id="@+id/discussion_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          style="@style/TH.Time_Text"
          tools:text="A big one"
          />

    </LinearLayout>

  </RelativeLayout>

</com.ayondo.academy.fragments.news.NewsHeadlineViewLinear>
