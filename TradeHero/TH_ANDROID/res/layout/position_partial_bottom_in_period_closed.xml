<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.position.partial.PositionPartialBottomInPeriodClosedView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanding_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/position_list_in_period_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:maxLines="1"
      android:text="@string/in_period"
      />
  <include
      android:id="@+id/position_list_bottom_in_period"
      layout="@layout/position_period_bottom_in_period_tablelayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/position_list_in_period_title"
      />

  <TextView
      android:id="@+id/position_list_overall_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:maxLines="1"
      android:text="@string/overall"
      android:layout_below="@id/position_list_bottom_in_period"
      />
  <include
      android:layout_below="@id/position_list_overall_title"
      layout="@layout/position_partial_bottom_closed_tablelayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <include layout="@layout/position_partial_shortcut_buttons"/>

</com.tradehero.th.fragments.position.partial.PositionPartialBottomInPeriodClosedView>