<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.alert.AlertSliderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/alert_slider_percentage"
    android:padding="@dimen/margin_xsmall"
    app:alertSliderType="percentage"
    >

  <Switch
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/alert_slider_toggle"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      />

  <ViewSwitcher
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/value_switcher"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@id/alert_slider_toggle"
      android:layout_toStartOf="@id/alert_slider_toggle"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.Subhead"
        android:text="@string/stock_alert_percentage_change"
        android:textColor="@color/darker_grey"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TH.Subhead.Accented"
        tools:text="Price Change -5.0%"
        android:id="@+id/alert_value"
        android:ellipsize="end"
        />

  </ViewSwitcher>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TH.Caption"
      android:text="@string/stock_alert_price_change_help_text"
      android:id="@+id/alert_edit_price_change_help_text"
      android:layout_below="@id/value_switcher"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:paddingTop="@dimen/margin_xsmall"
      />

  <SeekBar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/alert_seek_bar"
      android:layout_below="@id/alert_edit_price_change_help_text"
      android:paddingTop="@dimen/margin_xsmall"
      android:enabled="false"
      />

</com.tradehero.th.fragments.alert.AlertSliderView>
