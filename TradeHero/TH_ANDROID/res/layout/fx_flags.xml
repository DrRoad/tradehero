<?xml version="1.0" encoding="utf-8"?>
<com.androidth.general.fragments.security.FxFlagContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flags_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/red"
    >

  <ImageView
      android:id="@+id/flag_left"
      android:layout_gravity="center_vertical|end"
      android:layout_width="@dimen/size_3"
      android:layout_height="@dimen/size_3"
      tools:src="@drawable/square_de"
      />

  <Space
      android:layout_width="@dimen/size_1"
      android:layout_height="0dp"
      />

  <ImageView
      android:id="@+id/flag_right"
      android:layout_gravity="center_vertical|start"
      android:layout_width="@dimen/size_3"
      android:layout_height="@dimen/size_3"
      tools:src="@drawable/square_fr"
      />

</com.androidth.general.fragments.security.FxFlagContainer>