<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.social.hero.HeroListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TH.ListItem.Clickable"
    tools:background="#7f7"
    >

  <ImageView
      android:id="@+id/follower_profile_picture"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:src="@drawable/superman_facebook"
      android:contentDescription="@null"
      />

  <LinearLayout
      android:id="@+id/ic_status_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      >

    <ImageView
        android:id="@+id/ic_status"
        android:layout_width="@dimen/medium_image_w_h"
        android:layout_height="@dimen/medium_image_w_h"
        android:src="@drawable/cross_red"
        android:background="@drawable/basic_transparent_selector"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        android:visibility="visible"
        android:padding="10dp"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/country_logo"
      android:layout_width="@dimen/small_image_w_h"
      android:layout_height="@dimen/small_image_w_h"
      android:src="@drawable/settings_forward_light"
      android:scaleType="centerInside"
      android:contentDescription="@null"
      android:layout_toLeftOf="@+id/ic_status_container"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_centerVertical="true"
      />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/follower_profile_picture"
      android:layout_toLeftOf="@+id/country_logo"
      android:padding="@dimen/margin_xsmall"
      android:layout_marginLeft="@dimen/margin_xsmall"
      android:layout_centerVertical="true"
      >

    <TextView
        android:id="@+id/hero_title"
        android:singleLine="false"
        style="@style/TH.UserNameTitle"
        />

    <TextView
        android:id="@+id/hero_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="@style/TH.UserROI"
        />

    <TextView
        android:id="@+id/hero_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.Caption"
        />

  </LinearLayout>

</com.tradehero.th.fragments.social.hero.HeroListItemView>