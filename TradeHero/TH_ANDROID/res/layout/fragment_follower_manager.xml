<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.android.common.SlidingTabLayout
      android:id="@+id/tabs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/TradeHero.TabContainer"
      />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager"
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_below="@id/tabs"
      />

  <com.tradehero.common.widget.CenterImageTextButton
      android:id="@+id/send_message_broadcast"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:drawableLeft="@drawable/icn_message_white"
      style="@style/TH.Button.Inverse"
      android:background="@drawable/message_button_bg_selector"
      android:text="@string/message_center_broadcast_message_menu"
      android:layout_marginBottom="@dimen/dashboard_tabhost_height"
      />

</RelativeLayout>