<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/TradeHero.Authentication">

  <EditText
      android:id="@+id/authentication_sign_in_email"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="neeraj@eatechnologies.com"
      android:hint="@string/email"
      android:drawableLeft="@drawable/accounts_glyph_email_default"
      android:inputType="textEmailAddress"
      style="@style/TradeHero.Authentication.EditText">
    <requestFocus/>
  </EditText>

  <EditText
      android:id="@+id/et_pwd_login"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/authentication_sign_in_email"
      android:layout_marginTop="10dip"
      android:text="testing"
      android:hint="@string/pwd"
      android:drawableLeft="@drawable/accounts_glyph_password_default"
      android:inputType="textPassword"
      style="@style/TradeHero.Authentication.EditText"/>

  <Button
      android:id="@+id/btn_login"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_pwd_login"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dip"
      android:background="@drawable/authentication_button_xml"
      android:padding="5dp"
      android:text="@string/sign_in"
      android:textColor="@color/signinfnt_color"
      android:textSize="25sp"
      android:textStyle="bold"
      android:shadowColor="@color/white"
      android:shadowDy="-1"
      android:shadowRadius="3"
      />

  <TextView
      android:id="@+id/authentication_sign_in_forgot_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/btn_login"
      android:layout_centerHorizontal="true"
      android:padding="15dip"
      android:text="@string/forgot_password"
      android:textColor="@color/text_gray_normal"
      android:textSize="15sp"
      android:textStyle="bold"/>

</RelativeLayout>