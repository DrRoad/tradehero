<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="#000000"
                android:text="@string/login_account"
                android:textSize="@dimen/text_medium"/>
        <EditText
                android:id="@+id/authentication_sign_in_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium"
                android:maxLength="32"
                android:singleLine="true"
                android:hint="@string/login_account_hint"
                android:textColor="#000000"
                android:textColorHint="#bfbfbf"
                android:background="@color/white"/>
    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="#bfbfbf"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#000000"
                android:text="@string/login_password"
                android:textSize="@dimen/text_medium"/>
        <EditText
                android:id="@+id/et_pwd_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_medium"
                android:hint="@string/login_password_hint"
                android:textColorHint="#bfbfbf"
                android:background="@color/white"/>
    </LinearLayout>

    <TextView
            android:id="@+id/authentication_sign_in_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/authentication_forgot_password"
            android:textColor="#1789d5"
            android:textSize="16sp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="4"
                android:background="@drawable/basic_red_selector_round_corner"
                android:text="@string/authentication_login"
                android:gravity="center"
                android:textColor="@color/th_white"
                android:textSize="17sp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>