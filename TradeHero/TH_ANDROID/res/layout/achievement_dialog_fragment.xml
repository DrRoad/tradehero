<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/achievement_dummy_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@null"
    android:minHeight="1280dp"
    android:minWidth="1280dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    >
  <!-- A dummy container which takes the whole screen
       This container allows us to animate the children view without being clipped-->
  <LinearLayout
      android:id="@+id/achievement_content_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:background="@color/achievement_dialog_bg"
      android:clipToPadding="false"
      android:clipChildren="true"
      >
    <RelativeLayout
        android:layout_width="@dimen/achievement_dialog_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/achievement_dialog_padding"
        android:clipChildren="false"
        android:clipToPadding="false"
        >
      <include
          android:id="@+id/achievement_dialog_fragment_inner_top"
          layout="@layout/achievement_dialog_fragment_inner_top"/>

      <include
          android:id="@+id/achievement_dialog_fragment_inner_bottom"
          layout="@layout/achievement_dialog_fragment_inner_bottom"
          />
    </RelativeLayout>

    <View
        android:id="@+id/achievement_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"/>

    <LinearLayout
        android:id="@+id/achievement_share_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:measureWithLargestChild="true">

      <ToggleButton
          android:id="@+id/btn_share_fb"
          style="@style/TH.ShareButtons"
          android:background="@drawable/ic_share_fb"
          />

      <ToggleButton
          android:id="@+id/btn_share_tw"
          style="@style/TH.ShareButtons"
          android:background="@drawable/ic_share_tw"
          />

      <ToggleButton
          android:id="@+id/btn_share_li"
          style="@style/TH.ShareButtons"
          android:background="@drawable/ic_share_li"
          />

      <ToggleButton
          android:id="@+id/btn_share_wechat"
          style="@style/TH.ShareButtons"
          android:background="@drawable/ic_wechat"
          />

      <ToggleButton
          android:id="@+id/btn_share_wb"
          style="@style/TH.ShareButtons"
          android:background="@drawable/ic_share_wb"
          />

      <Button
          android:id="@+id/btn_achievement_share"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/timeline_share"
          style="@style/TH.Achievement.Share"
          />
    </LinearLayout>

  </LinearLayout>
</LinearLayout>