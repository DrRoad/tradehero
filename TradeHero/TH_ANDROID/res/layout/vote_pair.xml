<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.ayondo.academy.widget.VotePair
      android:id="@+id/vote_pair"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center_vertical"
      android:layout_centerVertical="true"
      app:downVote="false"
      >

    <com.ayondo.academy.widget.VoteUpView
        style="@style/TH.VoteView"
        android:id="@+id/timeline_action_button_vote_up"
        android:drawableLeft="@drawable/icn_actions_upvote"
        android:text="@integer/messages_initial_vote_count"
        />

    <com.ayondo.academy.widget.VoteDownView
        style="@style/TH.VoteView"
        android:id="@+id/timeline_action_button_vote_down"
        android:drawableLeft="@drawable/icn_actions_downvote"
        android:text="@integer/messages_initial_vote_count"
        tools:visibility="visible"
        />

  </com.ayondo.academy.widget.VotePair>

</merge>