<?xml version="1.0" encoding="utf-8"?>

<merge>

  <com.tradehero.th.widget.VotePair
      android:id="@+id/vote_pair"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center_vertical"
      android:layout_centerVertical="true"
      >

    <com.tradehero.th.widget.VoteUpView
        style="@style/TH.VoteView"
        android:id="@+id/timeline_action_button_vote_up"
        android:text="@integer/messages_initial_vote_count"
        tools:text="10"
        />

    <com.tradehero.th.widget.VoteDownView
        style="@style/TH.VoteView"
        android:id="@+id/timeline_action_button_vote_down"
        android:text="@integer/messages_initial_vote_count"
        tools:text="2"
        android:visibility="gone"
        tools:visibility="visible"
        />

  </com.tradehero.th.widget.VotePair>

</merge>