<?xml version="1.0" encoding="utf-8"?>
<com.ayondo.academy.fragments.trade.StockActionBarRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    >

    <TextView
        android:id="@+id/tv_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Facebook Inc."
        android:ellipsize="end"
        style="@style/TH.Title.Inverse"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_stock_title"
        >

      <ImageView
          android:id="@+id/stock_logo"
          android:layout_width="@dimen/medium_image_w_h"
          android:layout_height="@dimen/medium_image_w_h"
          android:layout_gravity="center_vertical"
          android:scaleType="fitCenter"
          android:contentDescription="@null"
          tools:src="@drawable/superman_facebook"
          />

      <include
          layout="@layout/fx_flags"/>

      <TextView
          android:id="@+id/tv_stock_sub_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_xsmall"
          tools:text="NASDAQ:FB"
          style="@style/TH.Caption.Inverse"
          android:ellipsize="end"
          android:singleLine="true"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          />

      <ImageButton
          android:id="@+id/btn_alerted"
          android:layout_width="@dimen/clickable_element_min_dimen"
          android:layout_height="@dimen/clickable_element_min_dimen"
          android:padding="12dp"
          android:src="@drawable/icn_alert"
          android:visibility="invisible"
          tools:visibility="visible"
          android:layout_gravity="end"
          />

      <ImageButton
          android:id="@+id/btn_watched"
          android:layout_width="@dimen/clickable_element_min_dimen"
          android:layout_height="@dimen/clickable_element_min_dimen"
          android:padding="12dp"
          android:src="@drawable/icn_star"
          android:visibility="invisible"
          tools:visibility="visible"
          android:layout_gravity="end"
          />

    </LinearLayout>

</com.ayondo.academy.fragments.trade.StockActionBarRelativeLayout>
