<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.onboarding.hero.SelectableUserViewRelative
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_margin_10"
    android:background="@drawable/basic_white_selector"
    >

  <ImageView
      android:id="@+id/leaderboard_user_item_profile_picture"
      android:layout_height="@dimen/leaderboard_user_view_profile_width"
      android:layout_width="@dimen/leaderboard_user_view_profile_width"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:contentDescription="@null"
      android:layout_marginRight="5dp"
      tools:src="@drawable/superman_facebook"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/leaderboard_user_item_profile_picture"
      android:layout_toLeftOf="@+id/tick_selected"
      >

    <TextView
        android:id="@+id/leaderboard_user_item_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="@dimen/leaderboard_title_text_size"
        android:shadowColor="@color/light_grey"
        android:shadowDy="1"
        android:shadowRadius="1"
        tools:text="Superman"
        />

    <TextView
        android:id="@+id/lbmu_roi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+212%"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/tick_selected"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/icn_tick_blue"
      />

</com.tradehero.th.fragments.onboarding.hero.SelectableUserViewRelative>