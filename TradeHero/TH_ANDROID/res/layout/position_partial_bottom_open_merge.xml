<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/position_partial_bottom_open"
    >

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:id="@+id/unrealised_pl_value_header"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="end"
        style="@style/TH.InfoKey"
        android:gravity="end"
        tools:text="Unrealized Profit"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

      <TextView
          android:id="@+id/unrealised_pl_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.InfoValue"
          tools:text="US$ 56,283"
          />

      <TextView
          android:id="@+id/unrealised_pl_percent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_xsmall"
          android:layout_marginStart="@dimen/margin_xsmall"
          style="@style/TH.Caption"
          tools:text="+1.23%"
          />

    </LinearLayout>

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="end"
        style="@style/TH.InfoKey"
        android:gravity="end"
        android:text="@string/position_total_invested_header"
        />

    <TextView
        android:id="@+id/total_invested_value"
        style="@style/TH.InfoValue"
        tools:text="US$ 101,105"
        />

  </TableRow>

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="end"
        style="@style/TH.InfoKey"
        android:gravity="end"
        android:text="@string/position_average_price_header"
        />

    <TextView
        android:id="@+id/average_price_value"
        style="@style/TH.InfoValue"
        tools:text="US$ 41.8135"
        />

  </TableRow>

</merge>