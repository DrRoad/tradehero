<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:gravity="top"
    android:padding="@dimen/margin_small"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAllCaps="true"
      style="@style/TH.Subhead"
      android:text="@string/leaderboard_keep_friends_close"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_xsmall"
      style="@style/TH.Body"
      android:text="@string/leaderboard_friend_empty_text_invite_friends"
      />

  <Button
      android:id="@+id/connect_accounts"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/leaderboard_connect_accounts"
      android:background="@drawable/basic_transparent_selector"
      style="@style/TH.Button.Accented"
      />

</LinearLayout>