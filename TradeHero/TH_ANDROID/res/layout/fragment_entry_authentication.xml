<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/login_bg_1"
    >

  <LinearLayout
      android:id="@+id/authentication_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      >

    <include layout="@layout/authentication_social_auth_button_first"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/authentication_email_sign_in_link"
          style="@style/TH.SocialAuthenticationButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:background="@drawable/basic_white_selector"
          android:text="@string/email_login_in_short"
          android:textColor="@color/tradehero_blue"
          android:gravity="center"
          />

      <Button
          android:id="@+id/authentication_email_sign_up_link"
          style="@style/TH.SocialAuthenticationButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:background="@drawable/basic_green_selector"
          android:text="@string/email_register_short"
          android:gravity="center"
          />

    </LinearLayout>

  </LinearLayout>

  <com.viewpagerindicator.CirclePageIndicator
      android:id="@+id/guide_page_indicator"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_above="@id/authentication_buttons"
      android:layout_marginBottom="@dimen/size_1"
      app:fillColor="@color/white"
      app:pageColor="@color/authentication_guide_circle_page"
      app:radius="@dimen/authentication_guide_circle_indicator_radius"
      app:strokeWidth="0dp"
      />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_above="@id/guide_page_indicator"
      />

</RelativeLayout>