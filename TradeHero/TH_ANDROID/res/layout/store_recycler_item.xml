<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TH.ListItem.Clickable"
    >

  <ImageView
      android:id="@+id/icon"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:contentDescription="@null"
      android:scaleType="fitCenter"
      tools:src="@drawable/icn_follow_credits"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/icon"
      android:layout_toRightOf="@id/icon"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/title"
        style="@style/TH.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Credits"
        />

    <TextView
        android:id="@+id/description"
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/price"
      style="@style/TH.Body2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      tools:text="$ 1.28"
      />


</RelativeLayout>
