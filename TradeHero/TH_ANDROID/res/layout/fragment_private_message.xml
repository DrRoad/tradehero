<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@+id/post_message_box"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:padding="4dp"
      >

    <TextView
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="@string/private_message_btn_send"
        />

    <EditText
        android:id="@+id/typing_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/button_send"
        android:layout_alignParentLeft="true"
        android:hint="@string/private_message_message_hint"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/private_message_empty"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:text="@string/private_message_empty_list_hint"
      android:textSize="20sp"

      android:visibility="gone"
      />

  <ListView
      android:id="@+id/message_list_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/post_message_box"
      tools:background="#ffdddd">

  </ListView>

</RelativeLayout>