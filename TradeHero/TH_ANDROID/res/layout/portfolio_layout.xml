<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/llUserAccountHead"
      android:padding="15dp"
      android:visibility="gone"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent">
    <include layout="@layout/user_account_head"/>
  </LinearLayout>


  <com.tradehero.th.fragments.chinabuild.listview.SecurityListView
      xmlns:ptr="http://schemas.android.com/apk/res-auto"
      ptr:ptrHeaderTextColor="@color/black"
      android:id="@+id/listPortfilio"
      android:scrollingCache="false"
      android:fadingEdge="none"
      android:dividerHeight="1px"
      android:divider="@color/separate_line_color"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
  </com.tradehero.th.fragments.chinabuild.listview.SecurityListView>

</LinearLayout>

