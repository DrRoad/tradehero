<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.onboarding.pref.CountrySpinnerItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    >

  <ImageView
      android:id="@+id/spinner_item_icon"
      android:layout_height="@dimen/small_icon_w_h"
      android:layout_width="@dimen/small_icon_w_h"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:baselineAlignBottom="true"
      tools:src="@drawable/flag_country_round_united_states"
      android:scaleType="centerInside"
      android:contentDescription="@null"
      />

  <TextView
      android:id="@+id/spinner_item_label"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_centerInParent="true"
      android:layout_toRightOf="@id/spinner_item_icon"
      style="@style/TH.Subhead"
      android:gravity="center"
      android:maxLines="1"
      tools:text="US NYSE - NYSE"
      />

</com.tradehero.th.fragments.onboarding.pref.CountrySpinnerItemView>