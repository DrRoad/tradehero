<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/position_top_view"
    >

  <ImageView
      android:id="@+id/gain_indicator"
      android:layout_width="@dimen/size_1"
      android:layout_height="@dimen/size_1"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_marginEnd="@dimen/margin_small"
      android:layout_weight="0"
      android:layout_gravity="center_vertical"
      android:src="@drawable/indicator_down"/>

  <ImageView
      android:id="@+id/stock_logo"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_gravity="center_vertical"
      android:scaleType="fitCenter"
      android:contentDescription="@null"
      tools:src="@drawable/superman_facebook"
      android:layout_weight="0"
      />

  <include
      layout="@layout/fx_flags"/>

  <RelativeLayout
      android:id="@+id/first_part"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/margin_small"
      android:layout_marginRight="@dimen/margin_small"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

      <TextView
          android:id="@+id/stock_symbol"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.UserNameTitle"
          android:textStyle="bold"
          android:maxLines="1"
          android:ellipsize="end"
          tools:text="LSE:VOD"
          />

      <TextView
          android:id="@+id/company_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:ellipsize="end"
          style="@style/TH.COMPANY"
          tools:text="Vodaphone"
          />

      <TextView
          android:id="@+id/share_count_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.COMPANY"
          tools:text="100,000 units"
          />

    </LinearLayout>

  </RelativeLayout>

  <RelativeLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_weight="0"
      android:layout_marginRight="4dp"
      android:layout_marginEnd="4dp">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="right|end"
      android:layout_centerVertical="true"
      android:orientation="vertical">

    <TextView
        android:id="@+id/position_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        style="@style/TH.UserROI"
        tools:text="5.8%"
        tools:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/last_price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        tools:visibility="visible"
        >

      <TextView
          android:id="@+id/position_last_amount_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="2dp"
          android:layout_marginEnd="2dp"
          android:gravity="end"
          android:text="@string/leaderboard_p_n_l"
          style="@style/TH.Caption"
          />

      <TextView
          android:id="@+id/position_last_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:gravity="end"
          style="@style/TH.Caption"
          tools:text="US$ 5.29k"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/position_unrealised_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/TH.UserROI"
        tools:text="-US$ 0.2465"
        />

    <TextView
        android:id="@+id/btn_position_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        style="@style/TH.FX_CLOSE"
        android:text="@string/security_close"
        tools:visibility="gone"
        />

  </LinearLayout>

  </RelativeLayout>

  <ImageView
      android:id="@+id/hint_forward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|end"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      android:layout_weight="0"
      />

</merge>