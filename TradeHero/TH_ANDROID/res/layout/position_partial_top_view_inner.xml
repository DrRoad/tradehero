<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <ImageView
      android:id="@+id/stock_logo"
      android:layout_width="@dimen/big_image_w_h"
      android:layout_height="@dimen/big_image_w_h"
      android:scaleType="fitCenter"
      android:layout_centerVertical="true"
      android:contentDescription="@null"
      tools:src="@drawable/superman_facebook"
      />

  <include
      layout="@layout/fx_flags"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_small"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/stock_symbol"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/margin_small"
          style="@style/TH.UserNameTitle"
          android:textStyle="bold"
          android:maxLines="1"
          tools:text="LSE:VOD"
          />

      <Space
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>

      <TextView
          android:id="@+id/position_percentage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          style="@style/TH.UserROI"
          tools:text="5.8%"
          tools:visibility="gone"
          />

      <TextView
          android:id="@+id/position_unrealised_pl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.UserROI"
          tools:text="-US$ 0.2465"
          />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/company_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_alignParentLeft="true"
          style="@style/TH.Body"
          tools:text="Vodaphone"
          />

      <TextView
          android:id="@+id/position_force_closed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:background="@color/number_red"
          android:textColor="@color/white"
          android:text="@string/position_force_closed"
          />

      <TextView
          android:id="@+id/btn_position_close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:paddingTop="@dimen/size_1"
          android:paddingRight="@dimen/size_2"
          android:paddingBottom="@dimen/size_1"
          android:paddingLeft="@dimen/size_2"
          style="@style/TH.Btn_Buy_Sell"
          android:background="@drawable/red_rounded_button_selector"
          android:text="@string/security_close"
          />

      <TextView
          android:id="@+id/share_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_toLeftOf="@id/btn_position_close"
          android:layout_toStartOf="@id/btn_position_close"
          style="@style/TH.Body"
          tools:text="100,000 units"
          />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/last_price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/stock_movement_indicator"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          style="@style/TH.Caption"
          tools:text="@string/arrow_prefix_negative"
          />

      <TextView
          android:id="@+id/stock_last_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:lines="1"
          style="@style/TH.Caption"
          tools:text="US$ 0.08"
          />

      <Space
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/ic_market_close"
          android:layout_width="@dimen/text_caption"
          android:layout_height="@dimen/text_caption"
          android:layout_marginLeft="@dimen/margin_small"
          android:layout_marginRight="@dimen/margin_small"
          android:contentDescription="@null"
          android:scaleType="fitCenter"
          android:src="@drawable/market_sleep_grey"
          />

      <Space
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>

      <TextView
          android:id="@+id/position_last_amount_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/leaderboard_p_n_l"
          style="@style/TH.Caption"
          />

      <TextView
          android:id="@+id/position_last_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          style="@style/TH.Caption"
          tools:text="US$ 5.29k"
          />

    </LinearLayout>

  </LinearLayout>

</merge>