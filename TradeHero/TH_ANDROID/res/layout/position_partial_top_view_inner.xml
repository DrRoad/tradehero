<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <ImageView android:id="@+id/gain_indicator"
      android:layout_width="@dimen/size_1"
      android:layout_height="@dimen/size_1"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_weight="0"
      android:src="@drawable/indicator_green"/>
  <ImageView
      android:id="@+id/stock_logo"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:scaleType="fitCenter"
      android:layout_centerVertical="true"
      android:contentDescription="@null"
      tools:src="@drawable/superman_facebook"
      android:layout_weight="0"
      />

  <include
      layout="@layout/fx_flags"/>

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/margin_small"
      android:layout_marginRight="@dimen/margin_small"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:id="@+id/first_part"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:id="@+id/stock_symbol"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/margin_small"
          style="@style/TH.UserNameTitle"
          android:textStyle="bold"
          android:maxLines="1"
          tools:text="LSE:VOD"
          />

      <TextView
          android:id="@+id/company_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_alignParentLeft="true"
          style="@style/TH.COMPANY"
          tools:text="Vodaphone"
          />
      <TextView
          android:id="@+id/share_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          style="@style/TH.COMPANY"
          tools:text="100,000 units"
          />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/first_part"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
      <TextView
          android:id="@+id/position_percentage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:maxLines="1"
          style="@style/TH.UserROI"
          tools:text="5.8%"
          tools:visibility="visible"
          />

      <TextView
          android:id="@+id/position_unrealised_pl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          style="@style/TH.UserROI"
          tools:text="-US$ 0.2465"
          />

      <LinearLayout
          android:id="@+id/last_price_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/position_percentage"
          android:layout_alignParentRight="true"
          android:orientation="horizontal">
        <TextView
            android:id="@+id/position_last_amount_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="@string/leaderboard_p_n_l"
            style="@style/TH.Caption"
            />

        <TextView
            android:id="@+id/position_last_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/TH.Caption"
            tools:text="US$ 5.29k"
            />
      </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

  <ImageView
      android:id="@+id/hint_forward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:src="@drawable/settings_forward_light"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      android:layout_weight="0"
      />
</merge>