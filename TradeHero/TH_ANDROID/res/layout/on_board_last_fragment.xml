<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/on_board_last_title_1"
        style="@style/TH.Subhead.Inverse"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_1"
        android:gravity="center_horizontal"
        android:text="@string/on_board_last_title_2"
        style="@style/TH.Caption.Inverse"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_1"
        android:gravity="center_horizontal"
        android:text="@string/on_board_last_title_3"
        style="@style/TH.Body1.Inverse"
        android:textColor="@color/light_green_normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        />

    <Gallery
        android:id="@+id/favorite_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:minHeight="@dimen/size_18"
        android:animationDuration="@android:integer/config_mediumAnimTime"
        android:spacing="@dimen/size_1">
    </Gallery>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:gravity="center_horizontal"
        android:text="@string/on_board_last_hint"
        style="@style/TH.Caption.Inverse"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        />

    <TextView
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:paddingRight="@dimen/size_3"
        android:paddingLeft="@dimen/size_3"
        android:gravity="center"
        style="@style/TH.Btn_Invite_Action"
        android:text="@string/on_board_last_button_buy"
        />

    <TextView
        android:id="@android:id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1"
        android:padding="@dimen/size_1"
        android:gravity="center"
        android:text="@string/on_board_last_button_later"
        style="@style/TH.Caption"
        android:textColor="@color/light_green_normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        />

  </LinearLayout>

</ScrollView>