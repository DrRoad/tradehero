<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.androidth.general.common.widget.BetterViewAnimator
      android:id="@+id/list_news_headline_wrapper"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ProgressBar
          android:id="@+id/list_news_headline_progressbar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"/>

      <ListView
        android:id="@+id/list_news_headline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/basic_transparent_selector"
        android:visibility="gone"
        android:divider="@null"
        android:fadeScrollbars="true"
        android:paddingBottom="@dimen/buy_sell_button_container_height"
        android:clipToPadding="false"
        />

  </com.androidth.general.common.widget.BetterViewAnimator>

</LinearLayout>