<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.leaderboard.CompetitionLeaderboardMarkUserStockOwnRankingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/leaderboard_current_user_rank_vertical_margin"
    android:paddingBottom="@dimen/leaderboard_current_user_rank_vertical_margin"
    android:descendantFocusability="afterDescendants"
    android:background="@null"
    tools:background="@color/red"
    >

  <include
      layout="@layout/lbmu_item_competition_mode_inner"
      android:id="@+id/lbmu_inner_view_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <LinearLayout
      android:id="@+id/competition_own_ranking_info_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:minHeight="@dimen/size_10"
      android:orientation="horizontal"
      android:background="@color/tradehero_blue"
      android:animateLayoutChanges="true"
      android:visibility="gone"
      >

    <ImageButton
        android:id="@+id/competition_own_ranking_info"
        android:layout_width="@dimen/medium_image_w_h"
        android:layout_height="@dimen/medium_image_w_h"
        android:background="@drawable/basic_transparent_selector"
        android:src="@drawable/ic_action_action_info_white"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/competition_own_ranking_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/size_16"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_gravity="center_vertical"
        style="@style/TH.Body.Inverse"
        tools:text="Move up by '12442' ranks to win!"
        android:gravity="right|end"
        android:visibility="gone"
        />

  </LinearLayout>

</com.tradehero.th.fragments.leaderboard.CompetitionLeaderboardMarkUserStockOwnRankingView>