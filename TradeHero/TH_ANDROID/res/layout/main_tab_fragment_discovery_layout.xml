<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/bg_fragment"
    android:layout_height="fill_parent">


  <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

    <RelativeLayout
        android:background="@color/tab_head_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_main_indicator_height">

      <Button
          android:id="@+id/btnNotification"
          android:layout_alignParentRight="true"
          android:layout_height="48dp"
          android:layout_width="48dp"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:layout_centerInParent="true"
          android:background="@drawable/icon_notification_xml"
          />
      <TextView
          android:id="@+id/tvNotificationCount"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_toRightOf="@id/btnNotification"
          android:background="@drawable/icon_bg_count"
          android:textColor="@color/white"
          android:gravity="center"
          android:layout_marginLeft="-25dp"
          android:layout_marginTop="10dp"
          android:textSize="8sp"
          android:text="">
      </TextView>

      <com.viewpagerindicator.TabPageIndicator
          android:id="@+id/indicator"
          android:layout_toLeftOf="@id/btnNotification"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          />

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/tvCreateTimeLine"
      android:background="@drawable/blue_circle_alpha"
      android:text="发布"
      android:textColor="@color/white"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="40dp"
      android:layout_marginBottom="80dp"
      android:gravity="center"
      />

</RelativeLayout>