<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/bg_fragment"
    android:layout_height="fill_parent">




  <RelativeLayout
      android:id="@+id/rlHead"
      android:layout_width="fill_parent"
      android:layout_height="48dp">

    <include layout="@layout/custom_head_layout"/>

    <Button
        android:id="@+id/btnNotification"
        android:layout_alignParentRight="true"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_notification_xml"
        />
    <TextView
        android:id="@+id/tvNotificationCount"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@id/btnNotification"
        android:background="@drawable/icon_bg_count"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="10dp"
        android:textSize="8sp"
        android:text="">
    </TextView>
  </RelativeLayout>

  <com.viewpagerindicator.TabPageIndicator
      android:id="@+id/indicator"
      android:visibility="gone"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      />
  <android.support.v4.view.ViewPager
      android:id="@+id/pager"
      android:layout_width="fill_parent"
      android:layout_below="@id/rlHead"
      android:layout_height="fill_parent"
      />


  <TextView
      android:id="@+id/tvCreateTimeLine"
      android:background="@drawable/issue_xml"
      android:text="发布"
      android:textColor="@color/white"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="30dp"
      android:layout_marginBottom="60dp"
      android:gravity="center"
      />

</RelativeLayout>