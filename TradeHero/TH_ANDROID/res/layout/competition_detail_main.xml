<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_timeline">

    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/viewpager_tab_height"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <View
                    android:id="@+id/view_competition_detail_line"
                    android:layout_alignParentBottom="true"
                    android:layout_height="@dimen/viewpager_focus_height"
                    android:layout_width="fill_parent"
                    android:background="@color/tradehero_blue"/>
            <TextView
                    android:id="@+id/textview_competition_detail_subtitle"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/viewpager_tab_text_size"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:text="@string/competition_detail"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <View
                    android:id="@+id/view_competition_discuss_line"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_height="@dimen/viewpager_focus_height"
                    android:layout_width="fill_parent"
                    android:background="@color/tradehero_blue"/>
            <TextView
                    android:id="@+id/textview_competition_discuss_subtitle"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/viewpager_tab_text_size"
                    android:gravity="center"
                    android:textColor="@color/black2"
                    android:text="@string/competition_discuss"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_competition_detail_page"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
</LinearLayout>