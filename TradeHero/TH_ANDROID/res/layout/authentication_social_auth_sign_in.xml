<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="4"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_weibo_signin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_background_social_weibo">
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/icon_login_weibo"/>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="@dimen/margin_small"
          android:text="@string/weibo_login_in"
          android:textColor="@color/white"
          android:textSize="@dimen/text_large"
          android:gravity="left|center_vertical"/>
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_qq_signin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_background_social_qq">
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/icon_login_qq"/>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="@dimen/margin_small"
          android:text="@string/qq_login_in"
          android:textColor="@color/white"
          android:textSize="@dimen/text_large"
          android:gravity="left|center_vertical"/>
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_wechat_signin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_background_social_wechat">
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/icon_login_weixin"/>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:layout_marginLeft="@dimen/margin_small"
          android:text="微信账号"
          android:textColor="@color/white"
          android:textSize="@dimen/text_large"
          android:gravity="left|center_vertical"/>
      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"/>
    </LinearLayout>


