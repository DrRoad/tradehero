<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlStockHeader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tradehero_blue">

  <FrameLayout
      android:id="@+id/circle_progressbar_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true">
    <com.tradehero.th.fragments.security.SecurityCircleProgressBar
        android:id="@+id/circle_progressbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/size_1"
        />
    <ImageView
        android:id="@+id/action_bar_market_closed_icon"
        android:layout_width="@dimen/size_3"
        android:layout_height="@dimen/size_3"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:layout_gravity="bottom|right"

        android:src="@drawable/buyscreen_stock_inactive_pressed"
        />
  </FrameLayout>

  <ImageView
      android:id="@+id/btn_watched"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/size_2"
      android:layout_centerVertical="true"
      android:paddingBottom="2dp"
      android:src="@drawable/icn_star"/>

  <ImageView
      android:id="@+id/btn_alerted"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@id/btn_watched"
      android:layout_marginRight="@dimen/size_1"
      android:src="@drawable/icn_alert"/>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="5dp"
      android:layout_marginStart="5dp"
      android:layout_toRightOf="@id/circle_progressbar_container"
      android:layout_toEndOf="@id/circle_progressbar_container"
      android:layout_toLeftOf="@id/btn_alerted"
      android:layout_toStartOf="@id/btn_alerted"
      android:layout_centerVertical="true"
      android:gravity="center_vertical"
      android:orientation="vertical">

    <TextView
        android:id="@+id/tv_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Facebook Inc."
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_stock_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NASDAQ:FB"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:ellipsize="end"
        android:singleLine="true"/>

  </LinearLayout>

</RelativeLayout>
