<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.watchlist.WatchlistItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

  <RelativeLayout
      android:id="@+id/back"
      android:tag="back"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      >

    <Button
        android:layout_width="@dimen/watchlist_item_button_width"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:id="@+id/position_watchlist_delete"
        android:layout_alignParentRight="true"
        android:text="@string/delete"/>
    <Button
        android:id="@+id/position_watchlist_more"
        android:layout_width="@dimen/watchlist_item_button_width"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/gray_normal"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/position_watchlist_delete"
        android:text="@string/more"/>
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/front"
      android:tag="front"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">
    <ImageView
        android:id="@+id/stock_logo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        />
    <RelativeLayout
        android:id="@+id/stock_quick_info"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        >

      <TextView
          android:id="@+id/stock_symbol"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:maxLines="1"
          android:layout_alignParentTop="true"
          android:text="LSE:VOD"
          />

      <TextView
          android:id="@+id/number_of_shares"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_below="@id/stock_symbol"
          android:text="1 shares @ US$ 10"
          />

      <TextView
          android:id="@+id/company_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_below="@id/number_of_shares"
          android:textSize="10sp"
          android:text="Vodaphone"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quick_position_info"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        >
      <TextView
          android:id="@+id/position_last_amount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          />

      <TextView
          android:id="@+id/position_percentage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
  </LinearLayout>
</com.tradehero.th.fragments.watchlist.WatchlistItemView>