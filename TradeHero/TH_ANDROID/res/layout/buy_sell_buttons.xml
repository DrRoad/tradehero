<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/bottom_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:paddingTop="@dimen/common_margin_10"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/common_margin_10"
    android:paddingRight="@dimen/common_margin_10"
    android:background="@drawable/buy_sell_action_buttons_background"
    >

  <Button
      android:id="@+id/btn_buy"
      style="@style/TH.Btn_Price_Bar"
      android:layout_marginBottom="5dp"
      android:text="@string/buy"
      android:background="@drawable/blue_rounded_button_selector"
      />

  <Button
      android:id="@+id/btn_sell"
      style="@style/TH.Btn_Price_Bar"
      android:layout_marginLeft="@dimen/common_margin_10"
      android:layout_marginBottom="5dp"
      android:text="@string/sell"
      android:background="@drawable/blue_rounded_button_selector"
      android:visibility="gone"
      />

</LinearLayout>
