<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contest_center_content_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_fragment">

    <com.handmark.pulltorefresh.library.pulltorefresh.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            ptr:ptrHeaderTextColor="@color/black"
            android:id="@+id/listFriends"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:dividerHeight="1px"
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            android:background="@color/bg_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <com.tradehero.th.widget.TradeHeroProgressBar
            android:id="@+id/tradeheroprogressbar_users"
            android:layout_width="@dimen/loading_logo_width"
            android:layout_height="@dimen/loading_logo_height"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/logo"/>
    <ImageView android:id="@+id/imgEmpty"
               android:background="@drawable/empty"
               android:layout_centerInParent="true"
               android:layout_width="150dp"
               android:visibility="gone"
               android:layout_height="150dp"/>


</RelativeLayout>