<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/positions_cash_list_header_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inflatedId="@+id/positions_cash_list_header_stub"
        />

    <com.android.common.SlidingTabLayout
        android:id="@+id/positions_cash_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TradeHero.TabContainer"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/positions_cash_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@android:color/holo_red_dark"
        />
</LinearLayout>