<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.tradehero.chinabuild.listview.SecurityListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            ptr:ptrHeaderTextColor="@color/black"
            android:id="@+id/list_my_history"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:divider="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </com.tradehero.chinabuild.listview.SecurityListView>
    <com.tradehero.th.widget.TradeHeroProgressBar
            android:id="@+id/tradeheroprogressbar_my_history"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/logo"
            />
    <ImageView android:id="@+id/imgEmpty"
               android:background="@drawable/empty"
               android:layout_centerInParent="true"
               android:layout_width="150dp"
               android:visibility="gone"
               android:layout_height="150dp"/>
</RelativeLayout>