<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:paddingTop="15dp"
      android:background="@color/white"
      >

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alert_edit_toggle_target_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_header"
        tools:text="Target price US$ 19.50"
        android:id="@+id/alert_edit_target_price_change"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:text="@string/alert_target_price_help_text"
        android:id="@+id/alert_edit_target_price_help_text"
        android:layout_below="@id/alert_edit_target_price_change"
        android:textColor="@color/text_gray_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alert_edit_price_changer_target_price_seek_bar"
        android:paddingTop="10dp"
        android:layout_below="@id/alert_edit_target_price_help_text"
        android:progress="50"
        />
  </RelativeLayout>
</merge>