<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tradehero.th"
    xmlns:android_auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

  <ProgressBar
      android:id="@+id/quote_refresh_countdown"
      android:layout_width="match_parent"
      style="@android:style/Widget.ProgressBar.Horizontal"
      android:layout_height="4dp"
      android:progressDrawable="@drawable/progress_thin_square"
      />

  <RelativeLayout
      android:id="@+id/chart_frame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/stock_bg_logo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:alpha="0.08"
        tools:background="@color/gray_normal"
        />

    <TextView
        android:id="@+id/stock_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLines="2"
        android:textStyle="bold"
        tools:text="UOB Mb"
        />

    <TextView
        android:id="@+id/exchange_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stock_name"
        android:gravity="center"
        android:ellipsize="end"
        android:textSize="13sp"
        android:textColor="#4e4e4e"
        android:lines="1"
        tools:text="GOOG"/>

    <ImageView
        android:id="@+id/market_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:src="@drawable/market_sleep_grey"
        />

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/exchange_symbol"
        android:layout_marginTop="-10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        >

      <ImageView
          android:id="@+id/stock_logo"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:contentDescription="@null"
          android:scaleType="fitCenter"
          android:visibility="visible"/>

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:scaleType="centerInside"
          android:src="@drawable/market_sleep_grey"
          android:visibility="gone"
          />
    </RelativeLayout>

    <TextView
        android:id="@+id/buy_price"
        style="@style/TH.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/logo_layout"
        tools:text="US$ 4.60"
        android:textSize="16sp"
        android:textColor="@color/font_roi"
        />

    <TextView
        android:id="@+id/sell_price"
        style="@style/TH.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo_layout"
        android:layout_below="@id/buy_price"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="10dp"
        tools:text="US$ 4.61"
        android:textSize="16sp"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/vprice_as_of"
        style="@style/TH.SmallValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sell_price"
        android:layout_toRightOf="@id/logo_layout"
        android:layout_marginLeft="10dp"
        tools:text="06 Feb 05:00"
        android:textSize="13sp"
        android:textColor="#4e4e4e"
        android:layout_marginTop="-4dp"/>

    <Button
        android:id="@+id/btn_add_trigger"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_below="@id/logo_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="@string/stock_alert_add_alert"
        android:background="#72ffd36b"
        android:textColor="@color/tab_scroll_color"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_add_watch_list"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:textSize="14sp"
        android:layout_below="@id/logo_layout"
        android:layout_toRightOf="@id/btn_add_trigger"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="1dp"
        android:text="@string/watchlist_add_title"
        android:textColor="@color/tab_scroll_color"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/belt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_add_watch_list"
        >

      <TextView
          android:id="@+id/info"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:textColor="@color/btn_twitter_color_end"
          android:text="@string/security_info"
          android:gravity="center"
          android:background="@drawable/security_btn_buy"
          />

      <TextView
          android:id="@+id/discussions"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_margin="10dp"
          android:text="@string/security_discussions"
          android:textColor="@color/btn_twitter_color_end"
          android:background="@drawable/security_btn_buy"
          />

      <TextView
          android:id="@+id/news"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:gravity="center"
          android:text="@string/security_news"
          android:textColor="@color/btn_twitter_color_end"
          android:background="@drawable/security_btn_buy"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >

      <Button
          android:id="@+id/btn_buy"
          style="@style/TH.Btn_Price_Bar"
          android:layout_height="40dp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_marginBottom="0dp"
          android:text="@string/buy_sell_button_buy"
          android:background="@drawable/btn_buy"
          android:textSize="20sp"
          android:textColor="@color/white"
      />

      <Button
          android:id="@+id/btn_sell"
          style="@style/TH.Btn_Price_Bar"
          android:layout_height="40dp"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="0dp"
          android:text="@string/buy_sell_button_sell"
          android:background="@drawable/btn_buy"
          android:textSize="20sp"
          android:textColor="@color/white"
          android:visibility="gone"
          />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/trade_bottom_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/belt"
        android:layout_above="@id/bottom_button"
        />

  </RelativeLayout>

