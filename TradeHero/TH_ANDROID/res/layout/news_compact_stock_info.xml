<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >

  <TextView
      android:id="@+id/security_symbol"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      style="@style/TH.Subhead.Inverse"
      tools:text="NASDAQ:APPL"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="4dp">

    <TextView
        android:id="@+id/latest_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_1"
        android:layout_marginEnd="@dimen/size_1"
        style="@style/TH.Caption.Inverse"
        tools:text="US$ 117.16"/>

    <TextView
        android:id="@+id/rise_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TH.UserROI"
        tools:text="-1.46%"/>

  </LinearLayout>

</LinearLayout>