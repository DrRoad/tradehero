<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/llBuySaleButtons"
    android:layout_height="fill_parent">

  <RelativeLayout
      android:id="@+id/llSecurityBuy"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="fill_parent">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/security_buy_xml"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          android:text="购买"/>
    </LinearLayout>

    <View
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#cecece"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/llSecuritySale"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="fill_parent">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/security_sale_xml"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          android:text="出售"/>
    </LinearLayout>

    <View
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#cecece"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/llSecurityDiscuss"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="fill_parent">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/security_discuss_xml"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          android:text="讨论"/>
    </LinearLayout>

  </RelativeLayout>
</LinearLayout>

