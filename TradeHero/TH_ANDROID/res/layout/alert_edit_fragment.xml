<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.common.widget.NotifyingStickyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/dashboard_tabhost_height">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <include layout="@layout/alert_security_profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_alert_trigger_conditions"
        android:textAllCaps="true"
        android:padding="5dp"
        android:tag="sticky"
        android:background="@color/divider_gray"
        />

    <include layout="@layout/price_changer_target"/>

    <include layout="@layout/alert_edit_divider"/>

    <include layout="@layout/price_changer_delta"/>

    <include layout="@layout/alert_edit_divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_alert_edit_note"
        android:textSize="@dimen/text_body"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray_normal"
        android:padding="15dp"
        />

  </LinearLayout>

</com.tradehero.common.widget.NotifyingStickyScrollView>