<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <include layout="@layout/alert_security_profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_alert_trigger_conditions"
        style="@style/TH.Subhead"
        android:tag="sticky"
        android:textStyle="bold"
        android:gravity="center"
        />

    <include layout="@layout/price_changer_target"/>

    <include layout="@layout/alert_edit_divider"/>

    <include layout="@layout/price_changer_delta"/>

    <include layout="@layout/alert_edit_divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_alert_edit_note"
        style="@style/TH.Caption"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_small"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alert_menu_save"
        android:text="@string/stock_alert_edit_menu_save"
        style="@style/TH.Headline.Inverse"
        android:gravity="center"
        android:minHeight="@dimen/clickable_element_min_dimen"
        android:background="@drawable/basic_blue_selector"
        android:textStyle="bold"
        />

  </LinearLayout>

</ScrollView>