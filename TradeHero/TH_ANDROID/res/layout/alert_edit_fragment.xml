<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.common.widget.StickyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <include layout="@layout/alert_security_profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trigger_conditions"
        android:textAllCaps="true"
        android:padding="5dp"
        android:tag="sticky"
        android:background="@color/divider_gray"
        />
    <include layout="@layout/price_changer_target"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/divider_gray"
        />

    <include layout="@layout/price_changer_delta"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/divider_gray"
        />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/alert_edit_note"
        android:textSize="@dimen/text_small"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray_normal"
        android:padding="15sp"
        />
  </LinearLayout>

</com.tradehero.common.widget.StickyScrollView>