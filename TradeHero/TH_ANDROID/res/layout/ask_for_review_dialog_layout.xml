<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_code_dialog_key"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/common_margin_10"
      android:gravity="center_horizontal"
      android:text="@string/ask_for_review_title"
      android:textStyle="bold"
      android:textSize="@dimen/common_text_size_30"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/common_margin_10"
      android:gravity="center_horizontal"
      android:text="@string/ask_for_review_summary"
      android:textSize="@dimen/common_text_size_25"
      android:textColor="@color/price_bar_bg_selected"/>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"/>

  <Button
      android:id="@+id/btn_rate"
      android:layout_height="@dimen/medium_logo_w_h"
      android:layout_width="match_parent"
      android:text="@string/ask_for_review_rate"
      android:textSize="@dimen/text_small"
      android:textColor="@color/button_blue"
      android:textStyle="bold"
      android:background="@drawable/basic_white_selector"/>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"/>

  <Button
      android:id="@+id/btn_later"
      android:layout_height="@dimen/medium_logo_w_h"
      android:layout_width="match_parent"
      android:text="@string/maybe_later"
      android:textSize="@dimen/text_small"
      android:textColor="@color/button_blue"
      android:background="@drawable/basic_white_selector"/>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"/>

  <Button
      android:id="@+id/btn_cancel"
      android:layout_height="@dimen/medium_logo_w_h"
      android:layout_width="match_parent"
      android:text="@string/apprate_no_thanks"
      android:textSize="@dimen/text_small"
      android:textColor="@color/button_blue"
      android:background="@drawable/basic_white_selector"/>

</LinearLayout>