<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.portfolio.header.OtherUserPortfolioHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stock_positions_header_other_height"
    android:background="@color/portfolio_header_background_color"
    >

  <RelativeLayout
      android:id="@+id/portfolio_header_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_xsmall"
      >

    <Button
        android:id="@+id/follow_button"
        style="@style/TH.Button.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/basic_blue_selector"
        android:padding="4dp"
        android:text="@string/follow"
        />

    <ImageView
        android:id="@+id/portfolio_header_avatar"
        android:layout_width="@dimen/medium_image_w_h"
        android:layout_height="@dimen/medium_image_w_h"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/layout_oval"
        android:contentDescription="@null"
        android:src="@drawable/default_image"
        tools:src="@drawable/superman_facebook"
        />

    <TextView
        android:id="@+id/header_portfolio_username"
        style="@style/TH.UserNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_xsmall"
        android:layout_toLeftOf="@+id/follow_button"
        android:layout_toRightOf="@id/portfolio_header_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/portfolio_header_text_color"
        tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/last_updated_date"
      style="@style/TH.Caption"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/portfolio_header_container"
      android:ellipsize="start"
      android:gravity="center"
      android:padding="4dp"
      tools:text="Last Updated: 8 Jun 2015 12:14"
      />

</com.tradehero.th.fragments.portfolio.header.OtherUserPortfolioHeaderView>