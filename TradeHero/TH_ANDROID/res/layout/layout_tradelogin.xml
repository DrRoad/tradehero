<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFFFF">
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#FFEEEEEE"
	    android:gravity="center_vertical">
        <ImageView 
            android:id="@+id/tradelogin_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_arrowleft"
            android:padding="6dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="交易登录"
	        android:gravity="center"
	        android:padding="12dip"
	        android:textSize="18sp"
	        android:textColor="#FF000000"
	        android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:padding="8dip">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="账号类型:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <Spinner 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:id="@+id/tradelogin_sp_accounttype"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="交易账号:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <LinearLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal"
		            android:gravity="center_vertical">
			        <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1">
			            
				        <EditText
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:id="@+id/tradelogin_edt_account"
				            android:textSize="16sp"
				            android:textColor="#FF000000"
				            android:singleLine="true"
				            android:inputType="number">
				            
				        </EditText>
				        <ImageView 
				            android:id="@+id/tradelogin_iv_accountlist"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/img_slidedown"
				            android:layout_alignParentRight="true"
				            android:layout_centerVertical="true"
				            android:paddingLeft="8dip"
				            android:paddingRight="8dip"/>
			        </RelativeLayout>
			        <CheckBox 
			            android:id="@+id/tradelogin_cb_saveaccount"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="保存"
			            android:textSize="16sp"
				        android:textColor="#FF000000"/>
		        </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="交易密码:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <EditText
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:id="@+id/tradelogin_edt_tradepwd"
		            android:textSize="16sp"
		            android:textColor="#FF000000"
		            android:inputType="textPassword"
		            android:singleLine="true">
		            
		        </EditText>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="通讯密码:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <EditText
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:id="@+id/tradelogin_edt_commpwd"
		            android:textSize="16sp"
		            android:textColor="#FF000000"
		            android:inputType="textPassword"
		            android:singleLine="true">
		            
		        </EditText>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="当前站点:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <TextView
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:paddingTop="8dip"
		            android:paddingBottom="8dip"
		            android:id="@+id/tradelogin_tv_site"
		            android:textSize="16sp"
		            android:textColor="#FF000000"
		            android:singleLine="true"
		            android:drawableRight="@drawable/img_arrowright">
		        </TextView>
		    </LinearLayout>
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="超时保护:"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
		        <TextView
		            android:id="@+id/tradelogin_tv_onlinetime"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:paddingTop="8dip"
		            android:paddingBottom="8dip"
		            android:textSize="16sp"
		            android:textColor="#FF000000"
		            android:singleLine="true"
		            android:drawableRight="@drawable/img_arrowright">
		        </TextView>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
				android:visibility="gone"
		        android:gravity="center_vertical">
		        <TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="没有证券账号?"
		            android:gravity="right"
		            android:textSize="16sp"
		            android:textColor="#FF000000"/>
			    <Button 
			        android:id="@+id/tradelogin_btn_open"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="立即开户"/>
		    </LinearLayout>
	    </LinearLayout>
    </ScrollView>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <Button 
	        android:id="@+id/tradelogin_btn_login"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="登录"/>
	    <android.inputmethodservice.KeyboardView
	        android:id="@+id/tradelogin_keyboardview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:layout_alignParentBottom="true"/>
    </LinearLayout>
</LinearLayout>
