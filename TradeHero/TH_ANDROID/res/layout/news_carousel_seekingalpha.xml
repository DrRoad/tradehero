<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_seeking_alpha"
    >
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_6"
      android:src="@drawable/logo_seeking_alpha"
      android:layout_gravity="center"
      android:scaleType="fitStart"
      android:paddingLeft="@dimen/size_2"
      android:paddingTop="@dimen/size_1"
      android:paddingBottom="@dimen/size_1"
      android:contentDescription="@string/seeking_alpha"
      />
  <ImageView
      android:id="@+id/spinner_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/size_1"
      android:layout_gravity="center_vertical|right"
      android:background="@drawable/spinner_arrow_bg"/>

</FrameLayout>