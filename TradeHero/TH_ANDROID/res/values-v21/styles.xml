<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <style name="Base.TradeHero"
      parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:colorAccent">@color/text_secondary_accented</item>
    <item name="android:colorPrimary">@color/tradehero_blue</item>
    <item name="android:colorPrimaryDark">#ff060e6f</item>
    <item name="android:colorControlNormal">@color/tradehero_blue</item>
    <item name="android:colorControlHighlight">@color/tradehero_blue_pressed</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textColorSecondaryInverse">@color/text_secondary_inverse</item>
    <item name="android:textColorHighlight">@color/text_primary_accented</item>
    <item name="android:textColorHighlightInverse">@color/text_secondary_accented</item>
  </style>

</resources>