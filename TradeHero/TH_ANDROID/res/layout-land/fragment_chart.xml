<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Button
      android:id="@+id/close"
      android:layout_width="100dp"
      android:layout_height="30dp"
      android:textSize="14sp"
      android:text="@string/security_close"
      android:textColor="@color/tab_scroll_color"
      android:textStyle="bold"
      android:background="#72ffd36b"
      android:layout_gravity="top|right"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      >

    <com.tradehero.th.widget.news.TimeSpanButtonSet
        android:id="@+id/chart_time_span_button_set"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/trend_price_bar"
        tools:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        >

      <include layout="@layout/yahoo_chart_buttons_merge"/>

    </com.tradehero.th.widget.news.TimeSpanButtonSet>

    <ImageView
        android:id="@+id/chart_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:visibility="gone"
        >

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_previous_close"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vprevious_close"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_open"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vopen"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_days_high"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vdays_high"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_days_low"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vdays_low"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="left"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

      </TableLayout>

      <TableLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_pe_ratio"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vpe_ratio"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text=""
              android:textSize="13sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_eps"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/veps"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text=""
              android:textSize="13sp"
              />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_volume"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vvolume"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text="@string/na"
              android:textSize="13sp"
              />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

          <TextView
              style="@style/TH.Title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/security_avg_volume"
              android:textSize="13sp"
              android:gravity="left"
              />

          <TextView
              android:id="@+id/vavg_volume"
              style="@style/TH.Value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:text="@string/na"
              android:textSize="13sp"
              />
        </TableRow>

      </TableLayout>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>
