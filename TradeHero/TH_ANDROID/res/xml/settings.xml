<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <Preference
      android:key="@string/key_preference_top_banner"
      android:layout="@layout/preference_top_banner"
      />

  <PreferenceCategory
      android:key="@string/key_settings_sharing_group"
      android:title="@string/settings_sharing">

    <CheckBoxPreference
        android:key="@string/key_settings_sharing_facebook"
        android:title="@string/facebook"
        android:enabled="false"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_sharing_twitter"
        android:title="@string/settings_sharing_twitter"
        android:enabled="false"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_sharing_linked_in"
        android:title="@string/settings_sharing_linked_in"
        android:enabled="false"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_sharing_weibo"
        android:title="@string/settings_sharing_weibo"
        android:icon="@drawable/settings_weibo_normal"
        android:enabled="false"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_sharing_qq"
        android:title="@string/settings_sharing_qq"
        android:enabled="false"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="@string/setting_general">

    <Preference
        android:key="@string/key_settings_primary_send_love"
        android:title="@string/settings_primary_send_love"
        />

    <Preference
        android:key="@string/key_settings_primary_send_feedback"
        android:title="@string/settings_primary_send_feedback"
        />

    <Preference
        android:key="@string/key_settings_primary_faq"
        android:title="@string/settings_primary_faq"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:key="@string/key_settings_account_group"
      android:title="@string/setting_accounts"
      >

    <Preference
        android:key="@string/key_settings_primary_profile"
        android:title="@string/settings_primary_profile"
        />

    <Preference
        android:key="@string/key_settings_location"
        android:title="@string/settings_location"
        />

    <Preference
        android:key="@string/key_settings_primary_paypal"
        android:title="@string/settings_primary_paypal"
        />

    <Preference
        android:key="@string/key_settings_primary_alipay"
        android:title="@string/settings_primary_alipay"
        android:icon="@drawable/mini_logo"/>

    <Preference
        android:key="@string/key_settings_primary_transaction_history"
        android:title="@string/settings_primary_transaction_history"
        />

    <Preference
        android:enabled="true"
        android:key="@string/key_settings_primary_restore_purchases"
        android:title="@string/settings_primary_restore_purchases"
        />

    <Preference
        android:enabled="true"
        android:key="@string/key_settings_primary_referral_code"
        android:title="@string/settings_primary_referral_code"
        />

    <Preference
        android:key="@string/key_settings_misc_sign_out"
        android:title="@string/settings_misc_sign_out"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:key="@string/key_settings_translations_container"
      android:title="@string/settings_translations">

    <Preference
        android:key="@string/key_settings_translations_preferred_language"
        android:title="@string/settings_translations_language_preferred"
      />

    <CheckBoxPreference
        android:key="@string/key_settings_translations_auto_translate"
        android:title="@string/settings_translations_auto_translate"
      />

  </PreferenceCategory>

  <PreferenceCategory
      android:key=""
      android:title="@string/settings_notifications">

    <CheckBoxPreference
        android:key="@string/key_settings_notifications_email"
        android:title="@string/settings_notifications_email"/>

    <CheckBoxPreference
        android:key="@string/key_settings_notifications_push"
        android:title="@string/settings_notifications_push"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_notifications_push_alert_sound"
        android:title="@string/settings_notifications_push_alert_sound"
        />

    <CheckBoxPreference
        android:key="@string/key_settings_notifications_push_alert_vibrate"
        android:title="@string/settings_notifications_push_alert_vibrate"
        />

  </PreferenceCategory>

  <PreferenceCategory
      android:title="@string/settings_misc">

    <Preference
        android:key="@string/key_settings_misc_reset_help_screens"
        android:title="@string/settings_misc_reset_help_screens"
        />

    <Preference
        android:key="@string/key_settings_misc_clear_cache"
        android:title="@string/settings_misc_clear_cache"
        />

    <Preference
        android:key="@string/key_settings_misc_about"
        android:title="@string/settings_misc_about"
        />

  </PreferenceCategory>

  <Preference
      android:key="@string/key_settings_misc_version_server"
      android:title="version"
      />

</PreferenceScreen>
