<?xml version="1.0" encoding="utf-8"?>
<set android:duration="@integer/duration_shrink_inflate"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <scale android:interpolator="@android:anim/decelerate_interpolator"
      android:duration="@integer/duration_shrink_inflate"
      android:pivotX="50.0%"
      android:pivotY="50.0%"
      android:fromXScale="1.0"
      android:toXScale="@dimen/shrink_inflate_ratio_front"
      android:fromYScale="1.0"
      android:toYScale="@dimen/shrink_inflate_ratio_front"
      />
  <alpha android:interpolator="@android:anim/decelerate_interpolator"
      android:duration="@integer/duration_shrink_inflate"
      android:fromAlpha="1.0"
      android:toAlpha="0.0"/>
</set>