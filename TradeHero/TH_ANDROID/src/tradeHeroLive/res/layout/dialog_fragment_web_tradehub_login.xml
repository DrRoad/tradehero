<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tile_live_trading_bg"
        android:orientation="horizontal"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/margin_xsmall"
        android:paddingLeft="@dimen/margin_xsmall"
        android:paddingBottom="@dimen/margin_xsmall"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_image_w_h"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large" />

        <ImageView
            android:id="@+id/live_tradehub_login_imageview_close"
            style="@style/TH.Btn_Popup_Close.Inverse"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/live_tradehub_login_view"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            />

        <!--<ImageView-->
        <!--android:id="@+id/live_tradehub_login_imageview_close"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_gravity="right|top"-->
        <!--android:src="@drawable/btn_close"-->
        <!--android:clickable="true"/>-->

    </LinearLayout>

</LinearLayout>