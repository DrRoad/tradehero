<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:tag="security_buy_sell_dialog">

    <!--Top bar start-->

    <LinearLayout
        android:id="@+id/dialog_buy_sell_top_bar"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/general_brand_color"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/dialog_buy_sell_top_normal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            >

            <ImageView
                android:id="@android:id/closeButton"
                android:layout_alignParentRight="true"
                style="@style/TH.Btn_Popup_Close.Inverse"/>

            <com.androidth.general.widget.OffOnViewSwitcher
                android:id="@+id/switch_live_virtual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:offLayout="@layout/live_switch_virtual_textview"
                app:onLayout="@layout/live_switch_live_imageview"
                android:layout_toLeftOf="@android:id/closeButton"
                />

            <TextView
                android:id="@+id/dialog_buy_sell_security_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/header"
                android:textColor="@color/white"
                android:paddingTop="5sp"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingRight="5sp"
                android:text="Company"
                android:maxLines="1"
                android:layout_toLeftOf="@id/switch_live_virtual"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dialog_buy_sell_top_competition_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:measureWithLargestChild="true"
            >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">



                    <!--<ImageView-->
                    <!--android:id="@+id/dialog_buy_sell_security_logo"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:paddingRight="5sp"-->
                    <!--android:paddingLeft="5sp"-->
                    <!--android:maxHeight="40sp"-->
                    <!--android:scaleType="fitCenter"-->
                    <!--android:adjustViewBounds="true"-->
                    <!--tools:src="@drawable/th_logo" />-->
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/close_button_competition"
                    style="@style/TH.Btn_Popup_Close.Inverse"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--Top bar end-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0sp"
        android:orientation="vertical">



        <TextView
            style="@style/TH.Caption"
            android:layout_below="@id/market_price_label"
            android:id="@+id/price_updated_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:text="As of 25 Jun 2015 0800 GMT"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                style="@style/TH.InfoValue"
                android:textSize="10sp"
                android:id="@+id/dialog_currency_label_cash_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                tools:text="US$"
                />

            <TextView
                android:id="@+id/vtrade_value"
                style="@style/TH.InfoValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                tools:text="0000"
                />

            <com.androidth.general.fragments.trade.view.TradeQuantityEditText
                android:id="@+id/vquantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/general_brand_color"
                android:inputType="number"
                android:textSize="20sp"
                android:textIsSelectable="false"
                tools:text="0"
                />

            <TextView
                style="@style/TH.InfoValue"
                android:textSize="10sp"
                android:id="@+id/dialog_currency_label_cash_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                tools:text="US$"
                />
            <TextView
                android:id="@+id/vcash_left"
                style="@style/TH.InfoValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                tools:text="338,306"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/dialog_trade_value_label"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/buy_sell_trade_value"
                />

            <TextView
                style="@style/TH.InfoKey"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/buy_sell_quantity"

                />

            <TextView
                style="@style/TH.InfoKey"
                android:textSize="10sp"
                android:id="@+id/dialog_cash_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/buy_sell_cash_left"
                />

        </TableRow>

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            style="@style/TH.SeekBar"
            android:indeterminate="false" />




        <com.androidth.general.fragments.trade.view.QuickPriceButtonSet
            android:layout_width="match_parent"
            android:layout_height="@dimen/timespan_button_min_height"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/trend_price_bar"
            android:orientation="horizontal"
            android:visibility="gone"
            app:isPercent="false"
            >

            <com.androidth.general.fragments.trade.view.QuickPriceButton
                style="@style/TH.BtnQuickPriceSet"
                app:priceText="@string/buy_sell_p5k"
                app:price="5000"
                app:percentText="@string/buy_sell_fx_025"
                app:percent="25"
                />

            <View style="@style/TH.Btn_Price_Bar_Separator"/>

            <com.androidth.general.fragments.trade.view.QuickPriceButton
                style="@style/TH.BtnQuickPriceSet"
                app:priceText="@string/buy_sell_p10k"
                app:price="10000"
                app:percentText="@string/buy_sell_fx_050"
                app:percent="50"
                />

            <View style="@style/TH.Btn_Price_Bar_Separator"/>

            <com.androidth.general.fragments.trade.view.QuickPriceButton
                style="@style/TH.BtnQuickPriceSet"
                app:priceText="@string/buy_sell_p25k"
                app:price="25000"
                app:percentText="@string/buy_sell_fx_075"
                app:percent="75"
                />

            <View style="@style/TH.Btn_Price_Bar_Separator"/>

            <com.androidth.general.fragments.trade.view.QuickPriceButton
                style="@style/TH.BtnQuickPriceSet"
                app:priceText="@string/buy_sell_p50k"
                app:price="50000"
                app:percentText="@string/buy_sell_fx_100"
                app:percent="100"
                />

        </com.androidth.general.fragments.trade.view.QuickPriceButtonSet>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Size"
            android:paddingRight="@dimen/size_1"
            android:paddingLeft="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/light_green_pressed"
            android:text="$200 (1x)"
            android:textSize="@dimen/size_2"/>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
      >

        <ImageView
            android:id="@+id/img_buy_sell_lev_confident"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/buy_sell_lev_confident"
            android:layout_weight="1"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/img_buy_sell_lev_bullish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/buy_sell_lev_bullish"
            android:layout_weight="1"
            android:clickable="true"
           />

        <ImageView
            android:id="@+id/img_buy_sell_lev_certain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/buy_sell_lev_certain"
            android:layout_weight="1"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/size_1">



        <TextView

            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your trade will be closed at "
            android:textStyle=""
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:layout_weight="2"

            />

        <TextView

            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="US$ 10.00 "
            android:textStyle=""
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textColor="@color/red"
            android:layout_weight="1"
            />

        </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_2"
        android:padding="@dimen/size_1"
        android:background="@color/grey"
        android:stretchColumns="0,1,2"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView

                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:gravity="left"
                android:text="Order Summary"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/TH.Body"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="You are buying"
                android:id="@+id/text_buy_sell_summary"
                android:layout_column="0"
                />

            <TextView
                android:id="@+id/dialog_buy_sell_security_symbol"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                tools:text="SIBE:SCYR"
                android:layout_column="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/TH.Body"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/buy_sell_quantity"
                android:layout_column="0"
                />

            <TextView
                android:id="@+id/dialog_buy_sell_quantity"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="1"
                android:layout_column="2"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/TH.Body"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Transaction Cost"
                android:layout_column="0"
                />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="US$"
                android:layout_column="1"
                />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="10.00"
                android:layout_column="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/TH.Body"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Cost"
                android:layout_column="0"
                />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="US$"
                android:layout_column="1"
                />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="500.00"
                android:layout_column="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/TH.Body"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Cash Left"
                android:layout_column="0"
                />

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="US$"
                android:layout_column="1"
                />
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                style="@style/TH.Body"
                android:text="9,500.00"
                android:layout_column="1"
                />
        </TableRow>




    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:minHeight="@dimen/clickable_element_min_dimen"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/margin_small"-->
        <!--android:text="@string/buy_sell_confirm_share_on"-->
        <!--android:textColor="@color/darker_grey"-->
        <!--style="@style/TH.Body"-->
        <!--/>-->

        <include layout="@layout/share_panel_layout"/>


    </LinearLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        >



                <TextView
                    android:id="@+id/vmarket_symbol"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/market_price"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/dialog_buy_sell_top_text_1"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/dialog_buy_sell_top_text_2"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/dialog_buy_sell_top_image"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/dialog_buy_sell_security_logo"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.androidth.general.widget.MarkdownTextView
                    android:id="@+id/comments"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/dialog_btn_confirm"
                    style="@style/TH.Button.Inverse"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/clickable_element_min_dimen"
                    android:text="Buy"
                    android:gravity="center"
                    android:background="@drawable/security_dialog_btn_confirm"

                    />

        </RelativeLayout>



    <!--Button is 70% of screen width end-->

</LinearLayout>
