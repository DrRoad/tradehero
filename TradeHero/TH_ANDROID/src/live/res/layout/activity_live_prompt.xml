<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    >

  <ImageView
      android:layout_width="@dimen/extra_big_image_w_h"
      android:layout_height="@dimen/extra_big_image_w_h"
      android:scaleType="fitCenter"
      android:src="@drawable/th_app_logo"
      />

  <TextView
      style="@style/TH.Headline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/welcome_live"
      />

  <TextView
      style="@style/TH.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/powered_by"
      />

  <TextView
      style="@style/TH.Body"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_small"
      android:layout_marginTop="@dimen/margin_small"
      android:gravity="center"
      android:text="@string/start_live"
      />

  <Button
      style="@style/TH.Button.Accented"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackground"
      android:padding="@dimen/margin_small"
      android:text="@string/open_new_account"
      />

  <Button
      style="@style/TH.Button.Accented"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackground"
      android:padding="@dimen/margin_small"
      android:text="@string/link_existing_account"
      />

</LinearLayout>