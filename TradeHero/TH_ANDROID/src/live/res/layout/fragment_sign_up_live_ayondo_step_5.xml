<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
          style="@style/TH.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_small"
          android:gravity="center_horizontal"
          android:text="@string/required_document"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          />

      <com.tradehero.th.widget.DocumentActionWidget
          android:id="@+id/document_action_identity"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_file_file_upload"
          android:text="@string/tap_to_upload"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          android:layout_marginTop="@dimen/margin_xsmall"
          />

      <com.tradehero.th.widget.DocumentActionWidget
          android:id="@+id/document_action_residence"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_file_file_upload"
          android:text="@string/tap_to_upload"
          />

      <com.tradehero.th.widget.DocumentActionWidget
          android:id="@+id/document_action_signature"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/ic_content_gesture"
          android:text="@string/tap_to_sign"
          android:layout_marginTop="@dimen/margin_xsmall"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_medium"
          >

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/TH.Button.LiveForm"
              android:layout_alignParentLeft="true"
              android:enabled="true"
              android:text="@string/previous"
              />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/TH.Button.LiveForm"
              android:layout_alignParentRight="true"
              tools:enabled="true"
              android:text="@string/create"
              />

      </RelativeLayout>
  </LinearLayout>

</ScrollView>