<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small"
    android:duplicateParentState="true"
    >

  <ImageView
      android:id="@+id/live_country_icon"
      android:layout_width="@dimen/small_image_w_h"
      android:layout_height="@dimen/small_image_w_h"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_marginEnd="@dimen/margin_small"
      android:contentDescription="@null"
      android:scaleType="centerInside"
      tools:src="@drawable/square_sg"
      />

  <TextView
      android:id="@+id/live_country_phone_code"
      style="@style/TH.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_marginEnd="@dimen/margin_small"
      android:layout_gravity="center"
      android:maxLines="1"
      tools:text="+65"
      android:duplicateParentState="true"
      />

  <TextView
      android:id="@+id/live_country_label"
      style="@style/TH.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:maxLines="1"
      tools:text="Singapore"
      android:duplicateParentState="true"
      />

</LinearLayout>