<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
          style="@style/TH.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_small"
          android:gravity="center_horizontal"
          android:text="@string/income_and_employment"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/employment_regulated_by_authority_ayondo"
          />

  </LinearLayout>
</ScrollView>