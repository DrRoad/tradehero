<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

      <LinearLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
          android:orientation="vertical"
          android:padding="@dimen/margin_small"
          >

          <ImageView
              android:layout_width="@dimen/size_25"
              android:layout_height="@dimen/size_6"
              android:layout_gravity="center_horizontal"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_logo_thlive"
              />

          <TextView
              style="@style/TH.Subhead.Inverse"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:text="@string/live_5_steps_away"
              />

      </LinearLayout>

      <ImageView
          android:id="@+id/identity_prompt_image"
        android:layout_width="@dimen/size_25"
        android:layout_height="@dimen/size_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:scaleType="fitCenter"
        android:src="@drawable/image_identity_proof"
        />

    <TextView
        android:id="@+id/identity_prompt_text"
        style="@style/TH.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:text="@string/live_identity_prompt"
        />

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/identity_prompt_no"
          style="@style/TH.Button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="?selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/no"
          />

          <TextView
              style="@style/TH.Caption"
              android:layout_width="wrap_content"
          android:layout_height="wrap_content"
              android:layout_alignLeft="@id/identity_prompt_no"
              android:layout_alignRight="@id/identity_prompt_no"
              android:gravity="center"
              android:layout_below="@id/identity_prompt_no"
              android:text="@string/enter_manually"
          />

      <Button
          android:id="@+id/identity_prompt_yes"
          style="@style/TH.Button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/identity_prompt_no"
          android:background="?selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/yes"
          />

          <TextView
              style="@style/TH.Caption"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/identity_prompt_yes"
              android:layout_alignRight="@id/identity_prompt_yes"
              android:gravity="center"
              android:layout_below="@id/identity_prompt_yes"
              android:text="@string/scan_it"
              />

      </RelativeLayout>

      <TextView
          style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/powered_by"
        />

    <TextView
        android:id="@+id/live_powered_by"
        style="@style/TH.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        tools:text="@string/broker_name_ayondo"
        />

  </LinearLayout>

</ScrollView>