<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:padding="@dimen/margin_small"
      >

    <ImageView
        android:layout_width="@dimen/size_25"
        android:layout_height="@dimen/size_6"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_thlive"
        />

    <TextView
        style="@style/TH.Subhead.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/live_5_steps_away"
        />

    <ImageView
        android:layout_width="@dimen/size_25"
        android:layout_height="@dimen/size_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:scaleType="fitCenter"
        android:src="@drawable/image_identity_proof"
        />

    <TextView
        style="@style/TH.Headline.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:text="@string/live_identity_prompt"
        />

    <TextView
        style="@style/TH.Caption.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/live_identity_prompt_hint"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/identity_prompt_no"
          style="@style/TH.Button.Inverse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="?selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/no"
          />

      <Space
          android:layout_width="@dimen/margin_small"
          android:layout_height="wrap_content"
          />

      <Button
          android:id="@+id/identity_prompt_yes"
          style="@style/TH.Button.Inverse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="?selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/yes"
          />

    </LinearLayout>

    <TextView
        style="@style/TH.Caption.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/powered_by"
        />

    <TextView
        android:id="@+id/live_powered_by"
        style="@style/TH.Body1.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="@string/broker_name_ayondo"
        />

  </LinearLayout>

</ScrollView>