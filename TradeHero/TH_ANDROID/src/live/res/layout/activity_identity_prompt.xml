<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/my_toolbar"
      style="@style/TradeHero.ActionBar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      />


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fillViewport="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_small"
        >

      <TextView
          style="@style/TH.Headline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:maxWidth="300dp"
          android:text="@string/welcome_live"
          />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_5"
          android:gravity="center"
          android:orientation="horizontal"
          >

        <TextView
            style="@style/TH.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/powered_by"
            />

        <com.maurycy.ScaleImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_5"
            android:scaleType="fitCenter"
            tools:src="@drawable/logo_text"
            />

      </LinearLayout>

      <TextView
          style="@style/TH.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/margin_small"
          android:gravity="center"
          android:text="@string/live_5_steps_away"
          android:textColor="?android:textColorSecondary"
          />

      <TextView
          android:id="@+id/identity_prompt_text"
          style="@style/TH.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_xsmall"
          android:layout_marginTop="@dimen/margin_large"
          android:gravity="center_horizontal"
          android:maxWidth="300dp"
          android:text="@string/live_identity_prompt"
          />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_small"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@+id/identity_prompt_image_specific"
            style="@style/TH.LiveIdentityPromptImage"
            android:layout_marginRight="@dimen/margin_medium"
            android:src="@drawable/image_identity_proof"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <ImageView
            android:id="@+id/identity_prompt_image_passport"
            style="@style/TH.LiveIdentityPromptImage"
            android:layout_toRightOf="@id/identity_prompt_image_specific"
            android:src="@drawable/image_identity_proof"
            />

        <Button
            android:id="@+id/identity_prompt_specific"
            style="@style/TH.Button.Inverse.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/identity_prompt_image_specific"
            android:layout_alignRight="@id/identity_prompt_image_specific"
            android:layout_below="@id/identity_prompt_image_specific"
            android:background="@drawable/basic_blue_selector"
            android:minHeight="@dimen/clickable_element_min_dimen"
            android:visibility="gone"
            tools:text="NRIC / Driver's License"
            tools:visibility="visible"
            />

        <Button
            android:id="@+id/identity_prompt_passport"
            style="@style/TH.Button.Inverse.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/identity_prompt_image_passport"
            android:layout_alignRight="@id/identity_prompt_image_passport"
            android:layout_below="@id/identity_prompt_image_passport"
            android:background="@drawable/basic_blue_selector"
            android:minHeight="@dimen/clickable_element_min_dimen"
            android:text="@string/any_passport"
            />

      </RelativeLayout>

      <Button
          android:id="@+id/identity_prompt_no"
          style="@style/TH.Button.Small.Link"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="?selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:padding="@dimen/margin_small"
          android:text="@string/enter_manually"
          />
    </LinearLayout>

  </ScrollView>


</LinearLayout>
