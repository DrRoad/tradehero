<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

        <ImageView
            android:id="@+id/dummy_action_bar"
        android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:background="?attr/colorPrimary"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo_thlive"
            />

        <TextView
            style="@style/TH.Body2"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@id/dummy_action_bar"
            android:background="@color/grey"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_xsmall"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/margin_xsmall"
            android:text="@string/live_5_steps_away"
            />

        <ImageView
            android:layout_width="@dimen/big_image_w_h"
            android:layout_height="@dimen/big_image_w_h"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/ic_free100"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
        android:id="@+id/identity_prompt_text"
        style="@style/TH.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:gravity="center_horizontal"
        android:maxWidth="300dp"
        android:text="@string/live_identity_prompt"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/identity_prompt_image_specific"
          style="@style/TH.LiveIdentityPromptImage"
          android:layout_marginRight="@dimen/margin_medium"
          android:src="@drawable/image_identity_proof"
          android:visibility="gone"
          />

      <ImageView
          android:id="@+id/identity_prompt_image_passport"
          style="@style/TH.LiveIdentityPromptImage"
          android:layout_toRightOf="@id/identity_prompt_image_specific"
          android:src="@drawable/image_identity_proof"
          />

      <Button
          android:id="@+id/identity_prompt_specific"
          style="@style/TH.Button.Inverse.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/identity_prompt_image_specific"
          android:layout_alignRight="@id/identity_prompt_image_specific"
          android:layout_below="@id/identity_prompt_image_specific"
          android:background="@drawable/basic_green_selector"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:visibility="gone"
          tools:text="NRIC / Driver's License"
          />

      <Button
          android:id="@+id/identity_prompt_passport"
          style="@style/TH.Button.Inverse.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@id/identity_prompt_image_passport"
          android:layout_alignRight="@id/identity_prompt_image_passport"
          android:layout_below="@id/identity_prompt_image_passport"
          android:background="@drawable/basic_green_selector"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/any_passport"
          />

    </RelativeLayout>

    <Button
        android:id="@+id/identity_prompt_no"
        style="@style/TH.Button.Small.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:minHeight="@dimen/clickable_element_min_dimen"
        android:text="@string/enter_manually"
        />
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_small"
        android:orientation="vertical"
        >

        <TextView
            style="@style/TH.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/powered_by"
            />

        <TextView
            android:id="@+id/live_powered_by"
            style="@style/TH.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="@string/broker_name_ayondo"
            />
    </LinearLayout>


</FrameLayout>