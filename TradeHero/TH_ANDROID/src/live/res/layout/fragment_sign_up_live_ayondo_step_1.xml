<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        style="@style/TH.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center_horizontal"
        android:text="@string/basic_information"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <Spinner
          android:id="@+id/info_title"
          style="@style/TH.Spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          tools:layout_height="48dp"
          tools:layout_width="48dp"
          />

      <EditText
          android:id="@+id/info_full_name"
          style="@style/TH.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_toRightOf="@id/info_title"
          android:hint="@string/hint_full_name"
          android:inputType="textPersonName|textCapWords"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

    </RelativeLayout>

    <com.tradehero.th.widget.validation.ValidatedText
        android:id="@+id/sign_up_email"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/accounts_glyph_transparent_default"
        android:drawableRight="@drawable/accounts_glyph_transparent_default"
        android:hint="@string/email"

        android:inputType="textEmailAddress"
        android:minHeight="@dimen/clickable_element_min_dimen"
        app:delayValidationByMilliSec="1500"
        app:invalidDrawableRight="@drawable/warning_red"

        app:invalidPatternMessage="@string/validation_incorrect_pattern_email"
        app:minTextLength="1"
        app:validDrawableRight="@drawable/tick_green"
        app:validatePattern="@string/regex_email_validator"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

      <Spinner
          android:id="@+id/country_code_spinner"
          style="@style/TH.Spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

      <Button
          android:id="@+id/btn_verify_phone"
          style="@style/TH.Button.LiveForm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:text="@string/verify"
          tools:enabled="false"
          />

      <EditText
          android:id="@+id/number_right"
          style="@style/TH.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@id/country_code_spinner"
          android:layout_toLeftOf="@id/btn_verify_phone"
          android:layout_toRightOf="@id/country_code_spinner"
          android:layout_toStartOf="@id/btn_verify_phone"
          android:hint="@string/mobile_number"
          android:inputType="number|phone"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

    </RelativeLayout>

    <TextView
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/nationality"
        />

    <Spinner
        android:id="@+id/info_nationality"
        style="@style/TH.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        />

    <TextView
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/residency"
        />

    <Spinner
        android:id="@+id/info_residency"
        style="@style/TH.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        />

    <TextView
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/date_of_birth"
        />

    <TextView
        android:id="@+id/info_dob"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable_element_min_dimen"
        android:background="?attr/editTextBackground"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left|center_vertical"
        android:textColor="?attr/editTextColor"
        />

    <Button
        android:id="@+id/btn_next"
        style="@style/TH.Button.LiveForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/next"
        tools:enabled="true"
        />

  </LinearLayout>

</ScrollView>