<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        style="@style/TH.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center_horizontal"
        android:text="@string/basic_information"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <Spinner
          android:id="@+id/info_title"
          style="@style/TH.Spinner"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.15"
          android:background="?attr/selectableItemBackground"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

      <EditText
          style="@style/TH.Body"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.425"
          android:hint="@string/user_profile_first_name"
          android:inputType="textPersonName|textCapWords"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

      <EditText
          style="@style/TH.Body"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.425"
          android:hint="@string/user_profile_last_name"
          android:inputType="textPersonName|textCapWords"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />
    </LinearLayout>

    <EditText
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:minHeight="@dimen/clickable_element_min_dimen"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

      <Spinner
          android:id="@+id/country_code_spinner"
          style="@style/TH.Spinner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

      <Button
          android:id="@+id/btn_verify_phone"
          style="@style/TH.Button.Inverse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@drawable/basic_green_selector"
          android:enabled="false"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/verify"
          tools:enabled="true"
          />

      <EditText
          android:id="@+id/number_right"
          style="@style/TH.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@id/btn_verify_phone"
          android:layout_toRightOf="@id/country_code_spinner"
          android:hint="@string/mobile_number"
          android:inputType="number|phone"
          android:minHeight="@dimen/clickable_element_min_dimen"
          />

    </RelativeLayout>

    <TextView
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/nationality"
        />

    <Spinner
        android:id="@+id/info_nationality"
        style="@style/TH.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        />

    <TextView
        style="@style/TH.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/residency"
        />

    <Spinner
        android:id="@+id/info_residency"
        style="@style/TH.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        />

    <EditText
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable_element_min_dimen"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/date_of_birth"
        />

    <Button
        android:id="@+id/btn_next"
        style="@style/TH.Button.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/basic_green_selector"
        android:enabled="false"
        android:text="@string/next"
        tools:enabled="true"
        />

  </LinearLayout>

</ScrollView>