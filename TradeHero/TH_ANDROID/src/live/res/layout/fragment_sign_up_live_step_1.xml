<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
          style="@style/TH.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_small"
          android:gravity="center_horizontal"
          android:text="@string/basic_information"
          />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

          <Spinner
              android:layout_width="@dimen/clickable_element_min_dimen"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />

          <EditText
              style="@style/TH.Body"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:hint="@string/user_profile_first_name"
              android:inputType="textPersonName|textCapWords"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />

          <EditText
              style="@style/TH.Body"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:hint="@string/user_profile_last_name"
              android:inputType="textPersonName|textCapWords"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

          <EditText
              style="@style/TH.Body"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.8"
              android:hint="@string/email"
              android:inputType="textEmailAddress"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />

          <Button
              style="@style/TH.Button.Accented"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:background="?attr/selectableItemBackground"
              android:enabled="false"
              android:minHeight="@dimen/clickable_element_min_dimen"
              android:text="@string/verify"
              />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

          <Spinner
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.15"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />

          <EditText
              style="@style/TH.Body"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.65"
              android:hint="@string/mobile_number"
              android:inputType="text|number"
              android:minHeight="@dimen/clickable_element_min_dimen"
              />

          <Button
              style="@style/TH.Button.Accented"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:background="?attr/selectableItemBackground"
              android:enabled="false"
              android:minHeight="@dimen/clickable_element_min_dimen"
              android:text="@string/verify"
              />
      </LinearLayout>

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
        />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          android:clickable="true"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:hint="@string/date_of_birth"
          />

      <Button
          style="@style/TH.Button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="@dimen/margin_medium"
          android:background="?attr/selectableItemBackground"
          android:enabled="false"
          android:text="@string/next"
          />

  </LinearLayout>
</ScrollView>