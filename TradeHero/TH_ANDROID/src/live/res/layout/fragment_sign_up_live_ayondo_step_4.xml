<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        style="@style/TH.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:gravity="center_horizontal"
        android:text="@string/postal_address"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        >

      <Button
          android:id="@+id/info_pick_location"
          style="@style/TH.Button.Inverse.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:background="@drawable/basic_blue_selector"
          android:drawableRight="@drawable/ic_action_maps_place"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:paddingLeft="@dimen/margin_small"
          android:text="@string/use_current_location"
          />

        <Button
            style="@style/TH.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:text="@string/clear_all"
          />

    </RelativeLayout>

      <ImageView
          android:layout_width="@dimen/size_12"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:layout_marginTop="@dimen/margin_xsmall"
          android:src="@drawable/powered_by_google_light"
          />

    <EditText
        android:id="@+id/info_address_line1"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_1"
        android:inputType="textPostalAddress|textCapWords"
        android:minHeight="@dimen/clickable_element_min_dimen"
        />

    <EditText
        android:id="@+id/info_address_line2"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_2"
        android:inputType="textPostalAddress|textCapWords"
        android:minHeight="@dimen/clickable_element_min_dimen"
        />

    <EditText
        android:id="@+id/info_city"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city"
        android:minHeight="@dimen/clickable_element_min_dimen"
        />

    <EditText
        android:id="@+id/info_postal_code"
        style="@style/TH.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/postal_code"
        android:inputType="textPostalAddress|textCapWords"
        android:minHeight="@dimen/clickable_element_min_dimen"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/clickable_element_min_dimen"
        android:text="@string/address_less_than_1_year"
        />

    <include layout="@layout/live_form_control" />

  </LinearLayout>

</ScrollView>