<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      style="@style/TradeHero.Live.SignUpInnerContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
          style="@style/TH.Subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/margin_small"
          android:gravity="center_horizontal"
          android:text="@string/trading_experience"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_financial_sector_ayondo"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_financial_seminars_ayondo"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_financial_qualifications_ayondo"
          />

      <TextView
          style="@style/TH.Caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:text="@string/live_trades_per_quarter"
          android:layout_marginTop="@dimen/margin_small"
          />

      <Spinner
          android:id="@+id/info_trading_per_quarter"
          android:layout_width="match_parent"
          android:layout_height="@dimen/clickable_element_min_dimen"
          android:paddingLeft="@dimen/margin_small"
          style="@style/TH.Spinner"
          />

      <TextView
          style="@style/TH.Caption"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/experience_product_traded"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_bonds"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_otc_derivatives"
          />

      <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:text="@string/experience_exchange_traded_derivatives"
          />

      <include layout="@layout/live_form_control" />
  </LinearLayout>
</ScrollView>