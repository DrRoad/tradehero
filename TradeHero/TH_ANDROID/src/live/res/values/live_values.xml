<?xml version="1.0" encoding="utf-8"?>
<resources>

  <color name="live_light_background_color">@color/red_light</color>
  <color name="live_main_background_color">@color/red</color>
  <color name="live_dark_background_color">@color/red_dark</color>

  <style name="Base.TradeHero.Live"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/live_light_background_color</item>
    <item name="colorPrimary">@color/live_main_background_color</item>
    <item name="colorPrimaryDark">@color/live_dark_background_color</item>
    <item name="colorControlNormal">@color/live_main_background_color</item>
    <item name="colorControlHighlight">@color/live_light_background_color</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:textColorSecondaryInverse">@color/text_secondary_inverse</item>
    <item name="android:textColorHighlight">@color/live_main_background_color</item>
    <item name="android:textColorHighlightInverse">@color/live_light_background_color</item>
  </style>

</resources>